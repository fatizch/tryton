<?xml version="1.0"?>
<tryton>
  <data>
    <record model="ir.ui.view" id="subscription_covered_person_form">
      <field name="model">ins_contract.covered_element</field>
      <field name="type">form</field>
      <field name="inherit" ref="life_contract.covered_person_view_form"/>
      <field name="name">subscription_covered_person_form</field>
    </record>
    <record model="ir.ui.view" id="subscription_covered_data_editable_tree">
      <field name="model">ins_contract.covered_data</field>
      <field name="type">tree</field>
      <field name="inherit" ref="insurance_contract_subscription.subscription_editable_covered_data_tree"/>
      <field name="name">subscription_covered_data_editable_tree</field>
    </record>
    
    <!--################################################################-->
    <!--                     Life Covered Data                          -->
    <!--################################################################-->
        
        <record model="ir.ui.view" id="life_covered_data_desc_view_tree">
            <field name="model">ins_contract.covered_data</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_contract.covered_data_view_tree"/>
            <field name="arch" type="xml">                 
                     <![CDATA[
                        <data>
                            <xpath expr="/tree" position="inside">
                                <field name="coverage_amount_selection"/>
                            </xpath>
                        </data>
                     ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="life_covered_data_desc_view_form">
            <field name="model">ins_contract.covered_data</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_contract.covered_data_view_form"/>
            <field name="arch" type="xml">                 
                     <![CDATA[
                        <data>
                            <xpath expr="/form" position="inside">
                                <field name="coverage_amount" invisible="1"/>
                                <label name="coverage_amount_selection"/>
                                <field name="coverage_amount_selection"/>
                            </xpath>
                        </data>
                     ]]>
            </field>
        </record>
  </data>
</tryton>
