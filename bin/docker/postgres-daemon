#!/bin/sh

# This command launches postgresql server from postgres image
#
# Example specifications
#     - mapped volume to externalize data
#     - set postgres data elsewhere (because of the .gitignore that pg refuses)
#
# More informations: https://hub.docker.com/_/postgres/ for more information

data=`pwd`/data/postgres

sudo docker run \
        -d \
        --name postgres \
        -e "POSTGRES_PASSWORD=postgres" \
        -e "PGDATA=/var/lib/postgresql/data/pgdata" \
        -v $data:/var/lib/postgresql/data \
        postgres:9.4
