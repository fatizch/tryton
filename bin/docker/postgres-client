#!/bin/sh

# This command launches postgresql client from postgres image
#
# More informations: https://hub.docker.com/_/postgres/ for more information

sudo docker run \
        -ti --rm \
        --link postgres:postgres \
        postgres:9.4 \
        sh -c 'exec psql -h "$POSTGRES_PORT_5432_TCP_ADDR" -p "$POSTGRES_PORT_5432_TCP_PORT" -U postgres'
