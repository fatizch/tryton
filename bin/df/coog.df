FROM coog/env
MAINTAINER Coopengo <dev@coopengo.com>

RUN mkdir /opt/coog && mkdir /opt/coog/data

COPY . /opt/coog/

RUN ln -s /opt/coog/trytond/bin/trytond /usr/local/bin
RUN ln -s /opt/coog/coog/bin/docker-ep /usr/local/bin/ep

RUN ep dep
RUN ep link

VOLUME ["/opt/coog/data"]
EXPOSE 8000 8069

ENTRYPOINT ["ep"]
