# vim: set ft=sh:
# dependancies management

coog_dep_base() { # install base deps
        pip install pyflakes==0.5.0  # check rules syntax (client and server)
        pip install dateutils
        pip install lxml
        pip install python-sql
        pip install psycopg2
        pip install polib
        pip install genshi==0.6
        pip install relatorio
        pip install pydot
        pip install pyparsing==1.5.7
        pip install pywebdav
        pip install python-stdnum
        pip install Mock
        pip install simpleeval
        pip install unidecode
        pip install argcomplete
}

coog_dep_extra() { # install extra deps (interfaces, deployment extras)
        pip install python-ldap                  # ldap
        pip install vobject                      # vcalendar
        pip install raven                        # sentry
        pip install redis                        # multi-worker
        pip install hiredis                      # multi-worker
        pip install msgpack-python               # multi-worker
        pip install --no-deps celery-tryton      # batch
        pip install celery                       # batch
        pip install flower                       # batch
        pip install sphinx                       # doc
        pip install sphinxcontrib-inheritance    # doc
        pip install pytest
}

coog_dep_main() { # install all deps
        coog_dep_base
        coog_dep_extra
}
