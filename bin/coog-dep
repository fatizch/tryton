# vim: set ft=sh:
# dependancies management


_coog_dep_proxy() {
        [ ! -z "$http_proxy" ] && echo "--proxy $http_proxy" && return
        [ ! -z "$https_proxy" ] && echo "--proxy $https_proxy" && return
}

coog_dep_main() { # install base deps
        pip install --upgrade $(_coog_dep_proxy) "$@" \
                "Genshi" \
                "Mock" \
                "argcomplete" \
                "celery" \
                "chardet" \
                "dateutils" \
                "fastjsonschema" \
                "filelock" \
                "hiredis" \
                "intervaltree" \
                "ipaddress" \
                "ldap3" \
                "lxml" \
                "msgpack-python" \
                "num2words" \
                "passlib" \
                "phonenumbers" \
                "polib" \
                "psycopg2-binary" \
                "pydot" \
                "pyflakes" \
                "pygobject" \
                "pyparsing" \
                "pytest"\
                "python-magic" \
                "python-sql" \
                "python-stdnum" \
                "raven" \
                "redis" \
                "relatorio" \
                "requests" \
                "rq" \
                "simpleeval" \
                "unidecode" \
                "uwsgi" \
                "vobject" \
                "werkzeug<0.15" \
                "wrapt" \
                "pyjwt" \
                "PyPDF2" \
                "sqlitebck" # for tests
}
