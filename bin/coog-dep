# vim: set ft=sh:
# dependancies management


_coog_dep_proxy() {
        [ ! -z "$http_proxy" ] && echo "--proxy $http_proxy" && return
        [ ! -z "$https_proxy" ] && echo "--proxy $https_proxy" && return
}

coog_dep_main() { # install base deps
        pip install $(_coog_dep_proxy) "$@" \
                pyflakes \
                dateutils \
                lxml \
                python-sql \
                psycopg2 \
                polib \
                Genshi \
                relatorio \
                pydot \
                pyparsing \
                python-stdnum \
                unidecode \
                argcomplete \
                num2words \
                intervaltree \
                filelock \
                wrapt \
                werkzeug \
                Mock \
                simpleeval \
                python-ldap \
                vobject \
                raven \
                redis \
                hiredis \
                msgpack-python \
                numpy \
                scipy \
                uwsgi \
                rq \
                "celery<4.0" \
                sphinx \
                sphinxcontrib-inheritance \
                pytest
}
