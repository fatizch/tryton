<?xml version="1.0"?>
<tryton>
    <data>
        <menuitem name="Indice Table" id="menu_indice_table"/>

        <record model="ir.ui.view" id="indice_table_definition_form_view">
            <field name="model">indice_table.definition</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Indice Table Definition" col="2">
                    <label name="name"/>
                    <field name="name"/>
                    <label name="dimension_kind1"/>
                    <field name="dimension_kind1"/>
                    <field name="dimension1" colspan="2"/>
                    <label name="dimension_kind2"/>
                    <field name="dimension_kind2"/>
                    <field name="dimension2" colspan="2"/>
                    <label name="dimension_kind3"/>
                    <field name="dimension_kind3"/>
                    <field name="dimension3" colspan="2"/>
                    <label name="dimension_kind4"/>
                    <field name="dimension_kind4"/>
                    <field name="dimension4" colspan="2"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="indice_table_definition_list_view">
            <field name="model">indice_table.definition</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Indice Table Definition">
                    <field name="name" expand="1"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_indice_table_definition_form">
            <field name="name">Indice Table Definitions</field>
            <field name="res_model">indice_table.definition</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_indice_table_definition_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="indice_table_definition_list_view"/>
            <field name="act_window" ref="act_indice_table_definition_form"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_indice_table_definition_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="indice_table_definition_form_view"/>
            <field name="act_window" ref="act_indice_table_definition_form"/>
        </record>

        <menuitem parent="menu_indice_table"
            action="act_indice_table_definition_form"
            sequence="10"
            id="menu_indice_table_defintion_form"/>

        <record model="ir.ui.view" id="indice_table_definition_dimension_form_view">
            <field name="model">indice_table.definition.dimension</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Indice Table Definition Dimension">
                    <label name="definition"/>
                    <field name="definition"/>
                    <newline/>
                    <label name="value"/>
                    <field name="value"/>
                    <newline/>
                    <label name="date"/>
                    <field name="date"/>
                    <newline/>
                    <label name="start"/>
                    <field name="start"/>
                    <label name="end"/>
                    <field name="end"/>
                    <label name="start_date"/>
                    <field name="start_date"/>
                    <label name="end_date"/>
                    <field name="end_date"/>
                    <field name="type" invisible="1" colspan="4"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="indice_table_definition_dimension_list_view">
            <field name="model">indice_table.definition.dimension</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Indice Table Definition Dimensions">
                    <field name="definition"/>
                    <field name="rec_name" expand="1"/>
                    <field name="type" tree_invisible="1"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="indice_table_form_view">
            <field name="model">indice_table</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Indice Table" col="6">
                    <label name="definition"/>
                    <field name="definition" colspan="5"/>
                    <newline/>
                    <label name="dimension1"/>
                    <field name="dimension1"/>
                    <label name="dimension2"/>
                    <field name="dimension2"/>
                    <label name="dimension3"/>
                    <field name="dimension3"/>
                    <label name="dimension4"/>
                    <field name="dimension4"/>
                    <label name="value"/>
                    <field name="value" colspan="5"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="indice_table_list_view">
            <field name="model">indice_table</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Indice Table" editable="bottom">
                    <field name="definition"/>
                    <field name="dimension1"/>
                    <field name="dimension2"/>
                    <field name="dimension3"/>
                    <field name="dimension4"/>
                    <field name="value"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_indice_table_form">
            <field name="name">Indice Tables</field>
            <field name="res_model">indice_table</field>
        </record>

        <record model="ir.action.act_window.view"
            id="act_indice_table_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="indice_table_list_view"/>
            <field name="act_window" ref="act_indice_table_form"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_indice_table_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="indice_table_form_view"/>
            <field name="act_window" ref="act_indice_table_form"/>
        </record>

        <menuitem parent="menu_indice_table"
            action="act_indice_table_form"
            sequence="20"
            id="menu_indice_table_form"/>

        <record model="ir.action.act_window" id="act_indice_table_relate_form">
            <field name="name">Indice Table</field>
            <field name="res_model">indice_table</field>
            <field name="domain">[('definition', '=', Eval('active_id'))]</field>
        </record>
        <record model="ir.action.keyword"
            id="act_indice_table_relate_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">indice_table.definition,-1</field>
            <field name="action" ref="act_indice_table_relate_form"/>
        </record>

        <record model="ir.ui.view"
            id="indice_table_2d_open_ask_dimensions_form_view">
            <field name="model">indice_table.2d.open.ask_dimensions</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Dimensions" col="2">
                    <label name="dimension3"/>
                    <field name="dimension3"/>
                    <label name="dimension4"/>
                    <field name="dimension4"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.action.wizard" id="act_indice_table_2d_open">
            <field name="name">Indice Table 2D</field>
            <field name="wiz_name">indice_table.2d.open</field>
        </record>
        <record model="ir.action.keyword"
            id="act_indice_table_2d_open_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">indice_table.definition,-1</field>
            <field name="action" ref="act_indice_table_2d_open"/>
        </record>

        <record model="ir.action.act_window"
            id="act_indice_table_2d_relate_form">
            <field name="name">Indice Table 2D</field>
            <field name="res_model">indice_table.2d</field>
            <field name="window_name" eval="False"/>
            <field name="context">{'indice_table.definition': Eval('active_id'), 'dimension3': Eval('dimension3'), 'dimension4': Eval('dimension4')}</field>
        </record>

        <record model="ir.model.access" id="access_indice_table_2d">
            <field name="model" search="[('model', '=', 'indice_table.2d')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
    </data>
</tryton>
