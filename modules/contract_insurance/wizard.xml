<tryton>
    <data>
        <!-- ######################### -->
        <!-- # Option Displayer Form # -->
        <!-- ######################### -->
        <record model="ir.ui.view" id="options_displayer_view_form">
            <field name="model">contract.wizard.option_subscription.options_displayer</field>
            <field name="inherit" ref="contract.options_displayer_view_form"/>
            <field name="name">options_displayer_form</field>
        </record>
        <!-- ########################## -->
        <!-- # Extra Premium Selector # -->
        <!-- ########################## -->
        <record model="ir.ui.view" id="manage_extra_premium_select_extra_view_list">
            <field name="model">contract.manage_extra_premium.select.extra</field>
            <field name="type">tree</field>
            <field name="name">manage_extra_premium_select_extra_list</field>
        </record>
        <!-- ######################### -->
        <!-- # Option Selector # -->
        <!-- ######################### -->
        <record model="ir.ui.view" id="manage_extra_premium_select_option_view_list">
            <field name="model">contract.manage_extra_premium.select.option</field>
            <field name="type">tree</field>
            <field name="name">manage_extra_premium_select_option_list</field>
        </record>
        <!-- ######################### -->
        <!-- # Extra Premium Display # -->
        <!-- ######################### -->
        <record model="ir.ui.view" id="manage_extra_premium_select_view_form">
            <field name="model">contract.manage_extra_premium.select</field>
            <field name="type">form</field>
            <field name="name">manage_extra_premium_select_form</field>
        </record>
        <!-- ######################## -->
        <!-- # Manage Extra Premium # -->
        <!-- ######################## -->
        <record model="ir.action.wizard" id="act_manage_extra_premium">
            <field name="name">Manage Extra Premium</field>
            <field name="wiz_name">contract.manage_extra_premium</field>
        </record>
        <!-- #################### -->
        <!-- # Manage Exclusion # -->
        <!-- #################### -->
        <record model="ir.action.wizard" id="act_manage_exclusion">
            <field name="name">Manage Exclusions</field>
            <field name="wiz_name">contract.manage_exclusion</field>
        </record>
        <!-- ##################### -->
        <!-- # Exclusion Display # -->
        <!-- ##################### -->
        <record model="ir.ui.view" id="manage_exclusion_select_view_form">
            <field name="model">contract.manage_exclusion.select</field>
            <field name="type">form</field>
            <field name="name">manage_exclusion_select_form</field>
        </record>
        <!-- ###################### -->
        <!-- # Exclusion Selector # -->
        <!-- ###################### -->
        <record model="ir.ui.view" id="manage_exclusion_select_extra_view_list">
            <field name="model">contract.manage_exclusion.select.exclusion</field>
            <field name="type">tree</field>
            <field name="name">manage_exclusion_select_exclusion_list</field>
        </record>
        <record model="ir.ui.view" id="manage_exclusion_select_extra_view_form">
            <field name="model">contract.manage_exclusion.select.exclusion</field>
            <field name="type">form</field>
            <field name="name">manage_exclusion_select_exclusion_form</field>
        </record>
        <!-- ######################################## -->
        <!-- # Create Extra Premium Option Selector # -->
        <!-- ######################################## -->
        <record model="ir.ui.view" id="extra_premium_create_option_selector_view_form">
            <field name="model">contract.option.extra_premium.create.option_selector</field>
            <field name="type">form</field>
            <field name="name">extra_premium_create_option_selector_form</field>
        </record>
        <!-- ######################## -->
        <!-- # Create Extra Premium # -->
        <!-- ######################## -->
        <record model="ir.action.wizard" id="act_create_extra_premium">
            <field name="name">Create Extra Premium</field>
            <field name="wiz_name">contract.option.extra_premium.create</field>
        </record>
        <!-- ############################# -->
        <!-- # Exclusion Option Selector # -->
        <!-- ############################# -->
        <record model="ir.ui.view" id="exclusion_option_selector_view_list">
            <field name="model">contract.option.selector</field>
            <field name="type">tree</field>
            <field name="name">exclusion_option_selector_list</field>
        </record>
        <!-- ############################# -->
        <!-- # Party Enrollements # -->
        <!-- ############################# -->
        <record model="ir.action.act_window" id="act_display_party_enrollments">
            <field name="name">Enrollments</field>
            <field name="res_model">contract.covered_element</field>
            <field name="domain" eval="[('party', '=', Eval('active_id')), ('parent', '!=', None)]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_relate_enrollments_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_display_party_enrollments"/>
        </record>
    </data>
</tryton>
