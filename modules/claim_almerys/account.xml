<?xml version="1.0"?>
<tryton>
    <data>
        <!-- ################ -->
        <!-- # Invoice Line # -->
        <!-- ################ -->
        <record model="ir.ui.view" id="invoice_line_view_form">
            <field name="model">account.invoice.line</field>
            <field name="inherit" ref="account_invoice.invoice_line_view_form"/>
            <field name="name">invoice_line_form</field>
        </record>
        <!-- ########### -->
        <!-- # Invoice # -->
        <!-- ########### -->
        <record model="ir.action.act_window" id="act_claim_service_relate">
            <field name="name">Claim Services</field>
            <field name="res_model">claim.service</field>
            <field name="domain"
                eval="[If(Eval('active_ids', []) == [Eval('active_id')], ['OR', ('third_party_invoice_line.invoice', '=', Eval('active_id')), ('third_party_invoice_line_cancel', '=', Eval('active_id'))], ['OR', ('third_party_invoice_line', 'in', Eval('active_ids')), ('third_party_invoice_line_cancel', 'in', Eval('active_ids'))])]"
                pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_claim_service_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">account.invoice,-1</field>
            <field name="action" ref="act_claim_service_relate"/>
        </record>
    </data>
</tryton>
