        <!-- <StrtNm py:if="address.street">${address.street_for_sepa()[:70]}</StrtNm> -->
        <!-- BldgNb -->
        <PstCd py:if="address.zip">${address.zip[:16]}</PstCd>
        <TwnNm py:if="address.city">${address.city[:35]}</TwnNm>
        <CtrySubDvsn py:if="address.subdivision">${address.subdivision.rec_name[:35]}</CtrySubDvsn>
        <Ctry py:if="address.country">${normalize('NFKD', address.country.code).encode('ascii', 'replace')}</Ctry>
        <AdrLine py:if="address.sepa_adrline_1">${address.sepa_adrline_1}</AdrLine>
        <AdrLine py:if="address.sepa_adrline_2">${address.sepa_adrline_2}</AdrLine>
