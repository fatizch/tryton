            <PrvtId>
                <Othr>
                    <Id>${party.sepa_creditor_identifier_used}</Id>
                    <SchmeNm>
                        <Prtry>SEPA</Prtry>
                    </SchmeNm>
                    <!-- Issr -->
                </Othr>
            </PrvtId>
        </Id>
