#!/bin/bash
# vim: set ft=sh:

CHAIN_NAME=payment_fail
CHAIN_FILE=/tmp/$HOSTNAME-$CHAIN_NAME-$(date +'%y-%m-%d@%H:%M:%S')

CHAIN_PARAMETERS=('TREATMENT_DATE' 'CONNECTION_DATE' 'IN' 'OUT')
CHAIN_REQUIRED=('TREATMENT_DATE')

chain_params "$@"
chain_begin

chain_step account.payment.fail ${GIVEN_PARAMETERS[@]}
chain_wait account.payment.fail || chain_end

chain_end
