<tryton>
    <data>
        <!-- ########### -->
        <!-- # Invoice # -->
        <!-- ########### -->
        <record model="ir.action.act_window" id="act_claim_invoice">
            <field name="name">Claim Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="domain" eval="[('party', '=', Eval('active_id')), ('business_kind', '=', 'claim_invoice')]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_claim_invoice_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="account_invoice.invoice_view_form"/>
            <field name="act_window" ref="act_claim_invoice"/>
        </record>
        <record model="ir.action.act_window.view" id="act_claim_invoice_view2">
            <field name="sequence" eval="5"/>
            <field name="view" ref="account_invoice.invoice_view_tree"/>
            <field name="act_window" ref="act_claim_invoice"/>
        </record>
        <record model="ir.action.keyword" id="party_claim_relate">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_claim_invoice"/>
        </record>
        <!-- ################ -->
        <!-- # Invoice Line # -->
        <!-- ################ -->
        <record model="ir.ui.view" id="invoice_line_view_form">
            <field name="model">account.invoice.line</field>
            <field name="inherit" ref="account_invoice.invoice_line_view_form"/>
            <field name="name">invoice_line_form</field>
        </record>
        <!-- ############################# -->
        <!-- # Invoice Line Claim Detail # -->
        <!-- ############################# -->
        <record model="ir.ui.view" id="invoice_line_claim_detail_view_list">
            <field name="model">account.invoice.line.claim_detail</field>
            <field name="type">tree</field>
            <field name="name">invoice_line_claim_detail_list</field>
        </record>
        <record model="ir.ui.view" id="invoice_line_claim_detail_view_form">
            <field name="model">account.invoice.line.claim_detail</field>
            <field name="type">form</field>
            <field name="name">invoice_line_claim_detail_form</field>
        </record>
    </data>
</tryton>
