<?xml version="1.0"?>
<tryton>
    <data>
        <!--################################################################ -->
        <!-- Indemnification -->
        <!--################################################################ -->
        <record model="ir.ui.view" id="indemnification_view_form">
            <field name="model">claim.indemnification</field>
            <field name="type">form</field>
            <field name="name">indemnification_form</field>
        </record>
        <record model="ir.ui.view" id="indemnification_view_list">
            <field name="model">claim.indemnification</field>
            <field name="type">tree</field>
            <field name="name">indemnification_list</field>
        </record>
        <record model="ir.ui.view" id="indemnification_simple_view_list">
            <field name="model">claim.indemnification</field>
            <field name="type">tree</field>
            <field name="name">indemnification_simple_list</field>
        </record>
    	<record model="ir.ui.view" id="indemnification_control_rule_form">
    	  <field name="model">claim.indemnification.control.rule</field>
    	  <field name="type">form</field>
    	  <field name="name">indemnification_control_rule_form</field>
    	</record>
    	<record model="ir.ui.view" id="indemnification_control_rule_tree">
    	  <field name="model">claim.indemnification.control.rule</field>
    	  <field name="type">tree</field>
    	  <field name="name">indemnification_control_rule_tree</field>
    	</record>
    	<record model="ir.action.act_window" id="act_indemnification_control_rule">
            <field name="name">Indemnification Control Rule</field>
            <field name="res_model">claim.indemnification.control.rule</field>
        </record>
        <record model="ir.action.act_window.view" id="act_indemnification_control_rule_view1">
            <field name="sequence" eval="20"/>
            <field name="view" ref="indemnification_control_rule_form"/>
            <field name="act_window" ref="act_indemnification_control_rule"/>
        </record>
        <record model="ir.action.act_window.view" id="act_indemnification_control_rule_view2">
            <field name="sequence" eval="10"/>
            <field name="view" ref="indemnification_control_rule_tree"/>
            <field name="act_window" ref="act_indemnification_control_rule"/>
        </record>
    	<menuitem name="Indemnification Control Rule" parent="claim.menu_claim_configuration"
    		  id="menu_indemnification_control_rule" action="act_indemnification_control_rule"
    		  icon="tryton-preferences"/>
	    <!--################################################################ -->
        <!-- Indemnification Detail -->
        <!--################################################################ -->
        <record model="ir.ui.view" id="indemnification_detail_view_form">
            <field name="model">claim.indemnification.detail</field>
            <field name="type">form</field>
            <field name="name">indemnification_detail_form</field>
        </record>
        <record model="ir.ui.view" id="indemnification_detail_view_list">
            <field name="model">claim.indemnification.detail</field>
            <field name="type">tree</field>
            <field name="name">indemnification_detail_list</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### claim ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="claim_view_form">
            <field name="model">claim</field>
            <field name="type">form</field>
            <field name="inherit" ref="claim.claim_view_form"/>
            <field name="name">claim_form</field>
        </record>
        <!--################################################################ -->
        <!-- Claim Service -->
        <!--################################################################ -->
        <record model="ir.ui.view" id="claim_service_view_form">
            <field name="model">claim.service</field>
            <field name="type">form</field>
            <field name="inherit" ref="claim.claim_service_view_form"/>
            <field name="name">service_form</field>
        </record>
        <record model="ir.ui.view" id="claim_service_view_list">
            <field name="model">claim.service</field>
            <field name="type">tree</field>
            <field name="inherit" ref="claim.claim_service_view_list"/>
            <field name="name">service_list</field>
        </record>
    </data>
</tryton>
