<form col="4">
    <label name="service"/>
    <field name="service"/>
    <newline/>
    <group id="header" colspan="4" col="7">
        <label name="status"/>
        <group id="status" colspan="3" col="4">
            <field name="status" colspan="1" xexpand="0"/>
            <field name="note" colspan="3" xexpand="1"/>
        </group>
        <group id="buttons" colspan="3" col="3">
            <button string="Calculate" name="calculate" xexpand="1"/>
            <button string="Modify" name="modify_indemnification" xexpand="1"/>
            <button string="Cancel" name="cancel_indemnification" xexpand="1"/>
        </group>
    </group>
    <label name="start_date"/>
    <field name="start_date"/>
    <label name="end_date"/>
    <field name="end_date"/>
    <newline/>
    <label name="beneficiary"/>
    <field name="beneficiary"/>
    <label name="product"/>
    <field name="product"/>
    <newline/>
    <group id="amount" string="" colspan="4" col="6">
        <label name="amount"/>
        <group id="amount">
            <field name="amount" xexpand="0"/>
            <label name="currency_symbol" string="" xexpand="0" xalign="0"/>
        </group>
        <label name="tax_amount"/>
        <group id="tax_amount">
            <field name="tax_amount" xexpand="0"/>
            <label name="currency_symbol" string="" xexpand="0" xalign="0"/>
        </group>
        <label name="total_amount"/>
        <group id="total_amount">
            <field name="total_amount" xexpand="0"/>
            <label name="currency_symbol" string="" xexpand="0" xalign="0"/>
        </group>
    </group>
    <label name="manual"/>
    <field name="manual"/>
    <label name="is_paid"/>
    <field name="is_paid"/>
    <label name="local_currency_amount"/>
    <group id="local_amount">
        <field name="local_currency_amount"/>
        <field name="local_currency"/>
    </group>
    <field name="details" colspan="4"/>
    <field name="kind" invisible="1"/>
    <field name="possible_products" invisible="1"/>
</form>
