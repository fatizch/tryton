<tryton>
    <data noupdate="1">
        <record model="endorsement.definition" id="modify_party_address_definition">
            <field name="code">change_party_address</field>
            <field name="name">Change Party Address</field>
        </record>
        <record model="endorsement.definition" id="modify_name_party_definition">
            <field name="code">change_party_name</field>
            <field name="name">Change Party Name</field>
        </record>
        <record model="endorsement.definition" id="modify_birth_date_party_definition">
            <field name="code">change_birth_date_party</field>
            <field name="name">Change Party Birth Date</field>
        </record>
    </data>
    <data>
        <!-- #################### -->
        <!-- # Endorsement Party # -->
        <!-- #################### -->
        <record model="ir.ui.view" id="endorsement_party_view_form">
            <field name="model">endorsement.party</field>
            <field name="type">form</field>
            <field name="name">endorsement_party_form</field>
        </record>
        <record model="ir.ui.view" id="endorsement_party_view_list">
            <field name="model">endorsement.party</field>
            <field name="type">tree</field>
            <field name="name">endorsement_party_list</field>
        </record>
        <!-- ############### -->
        <!-- # Endorsement # -->
        <!-- ############### -->
        <record model="ir.ui.view" id="endorsement_view_form">
            <field name="model">endorsement</field>
            <field name="inherit" ref="endorsement.endorsement_view_form"/>
            <field name="name">endorsement_form</field>
        </record>
        <!-- Entry Point -->
        <record model="ir.action.act_window" id="act_endorsement">
            <field name="name">Endorsements</field>
            <field name="res_model">endorsement</field>
            <field name="domain" eval="[('parties', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_endorsement_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="endorsement.endorsement_view_list"/>
            <field name="act_window" ref="act_endorsement"/>
        </record>
        <record model="ir.action.act_window.view" id="act_endorsement_view2">
            <field name="sequence" eval="10"/>
            <field name="view" ref="endorsement.endorsement_view_form"/>
            <field name="act_window" ref="act_endorsement"/>
        </record>
        <record model="ir.action.keyword" id="act_show_endorsements_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_endorsement"/>
        </record>
        <record model="endorsement.part" id="endorsement_part_party_modify_birth_date">
            <field name="code">change_party_birth_date</field>
            <field name="name">Change Party Birth Date</field>
            <field name="kind">party</field>
            <field name="view">change_party_birth_date</field>
        </record>
        <record model="endorsement.definition-endorsement.part" id="modify_birth_date_party_relation">
            <field name="definition" ref="modify_birth_date_party_definition"/>
            <field name="endorsement_part" ref="endorsement_part_party_modify_birth_date"/>
            <field name="order">1</field>
        </record>
        <record model="endorsement.part" id="endorsement_part_party_modify_name">
            <field name="code">change_party_name</field>
            <field name="name">Change Party Name</field>
            <field name="kind">party</field>
            <field name="view">change_party_name</field>
        </record>
        <record model="endorsement.definition-endorsement.part" id="modify_name_party_relation">
            <field name="definition" ref="modify_name_party_definition"/>
            <field name="endorsement_part" ref="endorsement_part_party_modify_name"/>
            <field name="order">1</field>
        </record>
        <record model="endorsement.part" id="endorsement_part_party_change_address">
            <field name="code">change_address</field>
            <field name="name">Change Party Address</field>
            <field name="kind">party</field>
            <field name="view">change_party_address</field>
        </record>
        <record model="endorsement.definition-endorsement.part" id="modify_party_address_relation">
            <field name="definition" ref="modify_party_address_definition"/>
            <field name="endorsement_part" ref="endorsement_part_party_change_address"/>
            <field name="order">1</field>
        </record>
    </data>
    <data noupdate="1" depends="party_ssn">
        <record model="endorsement.definition" id="modify_ssn_party_definition">
            <field name="code">change_party_ssn</field>
            <field name="name">Change Party Social Security Number</field>
        </record>
    </data>
    <data depends='party_ssn'>
        <record model="endorsement.part" id="endorsement_part_change_party_ssn">
            <field name="code">change_ssn</field>
            <field name="name">Change Social Security Number</field>
            <field name="kind">party</field>
            <field name="view">change_party_ssn</field>
        </record>
        <record model="endorsement.definition-endorsement.part" id="modify_party_ssn_relation">
            <field name="definition" ref="modify_ssn_party_definition"/>
            <field name="endorsement_part" ref="endorsement_part_change_party_ssn"/>
            <field name="order">1</field>
        </record>
    </data>
</tryton>
