<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- ########### Bank ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="bank_view_list">
            <field name="model">bank</field>
            <field name="type">tree</field>
            <field name="inherit" ref="bank.bank_view_list"/>
            <field name="name">bank_list</field>
        </record>
        <!--  *******************************************
              ************   Bank account    ************
              *******************************************-->
        <record model="ir.ui.view" id="bank_account_view_form">
            <field name="model">bank.account</field>
            <field name="type">form</field>
            <field name="inherit" ref="bank.bank_account_view_form"/>
            <field name="name">bank_account_form</field>
        </record>
        <record model="ir.ui.view" id="bank_account_view_list">
            <field name="model">bank.account</field>
            <field name="type">tree</field>
            <field name="inherit" ref="bank.bank_account_view_list"/>
            <field name="name">bank_account_list</field>
        </record>
        <record model="ir.ui.view" id="bank_account_number_view_list_sequence">
            <field name="model">bank.account.number</field>
            <field name="type">tree</field>
            <field name="inherit" ref="bank.bank_account_number_view_list_sequence"/>
            <field name="name">bank_account_number_list_sequence</field>
        </record>
        <menuitem name="Banking" sequence="3" id="bank.menu_banking" icon="bank"/>
        <menuitem parent="bank.menu_banking" action="bank.act_bank_form"
            sequence="10" id="bank.menu_bank_form" icon="bank"/>
        <menuitem parent="bank.menu_banking" action="bank.act_bank_account_form"
            sequence="20" id="bank.menu_bank_account_form" icon="coopengo-bank_account"/>

        <record model="ir.ui.menu-res.group" id="group_bank_admin_menu_bank">
           <field name="group" ref="bank.group_bank_admin"/>
           <field name="menu" ref="bank.menu_banking"/>
        </record>
    </data>
