<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- Test Case Module -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="test_case_form">
            <field name="model">ir.test_case</field>
            <field name="inherit" ref="cog_utils.test_case_form"/>
            <field name="name">test_case_form</field>
        </record>
        <!-- Data -->
        <record model="ir.test_case" id="cog_utils.test_case_configuration">
            <field name="number_of_banks">50</field>
        </record>
        <!-- ###################### -->
        <!-- # Test Case Instance # -->
        <!-- ###################### -->
        <!-- Data -->
        <record model="ir.test_case.instance" id="bank_test_case">
            <field name="name">Bank Test Case</field>
            <field name="method_name">bank_test_case</field>
            <field name="test_method_name">bank_test_case_test_method</field>
        </record>
        <record model="ir.test_case.instance" id="bank_account_test_case">
            <field name="name">Bank Account Test Case</field>
            <field name="method_name">bank_account_test_case</field>
        </record>
        <!-- ######################### -->
        <!-- # Test Case Requirement # -->
        <!-- ######################### -->
        <!-- Data -->
        <record model="ir.test_case.instance-ir.test_case.instance" id="bank_account_bank_requirement">
            <field name="child" ref="bank_test_case"/>
            <field name="parent" ref="bank_account_test_case"/>
        </record>
    </data>
</tryton>
