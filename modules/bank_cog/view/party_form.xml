<?xml version="1.0" encoding="utf-8"?>
<data>
    <xpath expr="/form/notebook/page[@id='role']/group[@id='role_group']"
        position="inside">
        <label name="is_bank"/>
        <field name="is_bank" xexpand="0" width="25"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='role']/notebook"
        position="inside">
        <page id="bank" string="Bank"
            states="{'invisible': Bool(~Eval('is_bank'))}">
            <field name="bank_role" mode="form"/>
        </page>
    </xpath>
  <xpath expr="//page[@id='summary']/group[@id='main_contact_mechanism']" position="after">
        <newline/>
        <label name="main_bank_account"/>
        <field name="main_bank_account"/>
    </xpath>
</data>
