<data>
    <xpath expr="/form/notebook/page[@id='role']/group[@id='role_group']" position="inside">
        <label name="is_bank"/>
        <field name="is_bank" xexpand="0" width="25"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='role']/notebook" position="inside">
        <page id="bank" string="Bank">
            <field name="bank_role"/>
        </page>
    </xpath>
    <xpath expr="//field[@name='relations']" position="after">
        <field name="bank_accounts" colspan="4" widget="one2many" pre_validate="1"/>
    </xpath>
    <xpath expr="//page[@id='banking']" position="replace"/>
</data>
