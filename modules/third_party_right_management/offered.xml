<?xml version="1.0"?>
<tryton>
    <data>
        <!-- ################### -->
        <!-- # Contract Option # -->
        <!-- ################### -->
        <record model="ir.ui.view" id="contract_option_view_form">
            <field name="model">contract.option</field>
            <field name="inherit" ref="contract.option_view_form"/>
            <field name="name">contract_option_form</field>
        </record>
        <!-- ###################### -->
        <!-- # Third Party Period # -->
        <!-- ###################### -->
        <record model="ir.ui.view" id="third_party_period_view_list">
            <field name="model">contract.option.third_party_period</field>
            <field name="type">tree</field>
            <field name="name">third_party_period_list</field>
        </record>
        <record model="ir.ui.view" id="third_party_period_view_form">
            <field name="model">contract.option.third_party_period</field>
            <field name="type">form</field>
            <field name="name">third_party_period_form</field>
        </record>
        <record model="ir.action.act_window" id="act_third_party_period_relate">
            <field name="name">Third Party Periods</field>
            <field name="res_model">contract.option.third_party_period</field>
            <field name="domain"
                eval="[('option.covered_element.contract', 'in', Eval('active_ids'))]"
                pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_third_party_period_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_third_party_period_relate"/>
        </record>
        <!-- ############ -->
        <!-- # Coverage # -->
        <!-- ############ -->
        <record model="ir.ui.view" id="coverage_view_form">
            <field name="model">offered.option.description</field>
            <field name="inherit" ref="offered.coverage_view_form"/>
            <field name="name">coverage_form</field>
        </record>
    </data>
</tryton>
