<?xml version="1.0"?>
<tryton>
  <data>
    <!-- ############################################################ -->
    <!-- Benefit -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="benefit_view_form">
      <field name="model">ins_product.benefit</field>
      <field name="type">form</field>
      <field name="inherit" ref="offered.offered_view_form"/>
      <field name="name">benefit_form</field>
    </record>
    <record model="ir.ui.view" id="benefit_view_tree">
      <field name="model">ins_product.benefit</field>
      <field name="type">tree</field>
      <field name="inherit" ref="offered.offered_view_tree"/>
      <field name="name">benefit_tree</field>
    </record>
    <!-- Read / Write rule -->
    <record model="ir.rule.group" id="rule_group_benefit">
        <field name="model" search="[('model', '=', 'ins_product.benefit')]"/>
        <field name="global_p" eval="True"/>
    </record>
    <record model="ir.rule" id="rule_benefit_1">
      <field name="domain">[('company', 'in', [c.id for c in user.companies])]</field>
      <field name="rule_group" ref="rule_group_benefit"/>
    </record>
    <!-- Entry Point -->
    <record model="ir.action.act_window" id="act_benefit_form">
      <field name="name">Benefits</field>
      <field name="res_model">ins_product.benefit</field>
      <field name="domain">[('company', '=', Eval('context', {}).get('company', False))]</field>
    </record>
    <record model="ir.action.act_window.view" id="act_benefit_view_tree">
      <field name="sequence" eval="10"/>
      <field name="view" ref="benefit_view_tree"/>
      <field name="act_window" ref="act_benefit_form"/>
    </record>
    <record model="ir.action.act_window.view" id="act_benefit_view_form">
      <field name="sequence" eval="20"/>
      <field name="view" ref="benefit_view_form"/>
      <field name="act_window" ref="act_benefit_form"/>
    </record>
    <menuitem parent="offered.menu_product" sequence="1" id="menu_benefit_form" icon="tryton-list" action="act_benefit_form"/>
    <!-- ############################################################ -->
    <!-- Event Desc -->
    <!-- ############################################################ -->
