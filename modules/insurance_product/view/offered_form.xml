<?xml version="1.0"?>
<form string="Offered">
    <label name="template"/>
    <group id="templating" colspan="1">
        <field name="template" xexpand="1"/>
        <field name="template_behaviour"/>
    </group>
    <newline/>
    <label name="name"/>
    <field name="name"/>
    <label name="code"/>
    <field name="code"/>
    <label name="start_date"/>
    <field name="start_date" xexpand="0"/>
    <label name="end_date"/>
    <field name="end_date" xexpand="0"/>
    <notebook>
        <page string="Summary" id="summary">
            <field name="description" widget="richtext" colspan="4"/>
            <field name="summary" widget="richtext" colspan="4"/>
        </page>
        <page string="Rules" id="managers">
            <notebook>
                <page string="Eligibility" id="eligibility">
                    <field name="eligibility_rules" colspan="4"/>
                </page>
                <page string="Pricing" id="pricing">
                    <field name="pricing_rules" colspan="4"/>
                </page>
            </notebook>
        </page>
        <page string="Administration" id="admin">
            <group id="left" colspan="2">
            </group>
            <group id="right" colspan="2">
                <field name="complementary_data"/>
            </group>
        </page>
    </notebook>
</form>
