<?xml version="1.0"?>
<tryton>
    <data>
        <!--  *******************************************
              **************    Coverage    **************
              *******************************************-->
        <!-- form view -->
        <record model="ir.ui.view" id="coverage_view_form">
            <field name="model">offered.coverage</field>
            <field name="type">form</field>
            <field name="inherit" ref="offered.coverage_view_form"/>
            <field name="name">coverage_form</field>
        </record>
        <record model="ir.ui.view" id="coverage_view_tree">
            <field name="model">offered.coverage</field>
            <field name="type">tree</field>
            <field name="inherit" ref="offered.coverage_view_tree"/>
            <field name="name">coverage_tree</field>
        </record>

        <record model="ir.action.act_window" id="offered.act_product_form">
            <field name="domain">[('kind', '=', 'insurance')]</field>
        </record>
        <record model="ir.action.act_window" id="offered.act_coverage_form">
            <field name="domain">[('is_package', '=', False), ('kind', '=', 'insurance')]</field>
        </record>
        <record model="ir.action.act_window" id="offered.act_package_form">
            <field name="domain">[("is_package", "=", True), ('kind', '=', 'insurance')]</field>
        </record>
    </data>
</tryton>
