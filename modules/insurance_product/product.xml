            <field name="domain">[("my_model_name", "=", "ins_product.benefit_manager.kind")]</field>
            </record>

            <record model="ir.action.act_window.view" id="act_dyn_selection_tree_view">
            <field name="sequence" eval="10" />
            <field name="view" ref="coop_utils.dyn_selection_view_tree" />
            <field name="act_window" ref="act_dyn_selection_form" />
            </record>

            <record model="ir.action.act_window.view" id="act_dyn_selection_form_view">
            <field name="sequence" eval="20" />
