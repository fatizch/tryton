<?xml version="1.0"?>
<tryton>
    <data>
        <!-- *******************************************
            ************** Menus **************
            ******************************************* -->
        <!-- Application Entry point -->
        <menuitem name="Laboratory" id="menu_product" sequence="20"/>
        <menuitem name="Configuration" parent="menu_product"
            id="menu_product_configuration" sequence="100" icon="tryton-preferences"/>

        <!-- Moving existing Entry Points -->
        <menuitem parent="menu_product_configuration" name="Rule Engine"
            id="rule_engine.menu_rule_engine" sequence="100"/>


        <!-- *******************************************
            ************** Offered **************
            ******************************************* -->
        <record model="ir.ui.view" id="offered_view_tree">
            <field name="model">ins_product.offered</field>
            <field name="type">tree</field>
            <field name="name">offered_tree</field>
        </record>
        <record model="ir.ui.view" id="offered_view_form">
            <field name="model">ins_product.offered</field>
            <field name="type">form</field>
            <field name="name">offered_form</field>
        </record>
        <!-- *******************************************
            ************** Product **************
            ******************************************* -->
        <record model="ir.ui.view" id="product_view_form">
            <field name="model">ins_product.product</field>
            <field name="type">form</field>
            <field name="inherit" ref="offered_view_form"/>
            <field name="name">product_form</field>
        </record>
        <record model="ir.ui.view" id="product_view_tree">
            <field name="model">ins_product.product</field>
            <field name="type">tree</field>
            <field name="inherit" ref="offered_view_tree"/>
            <field name="arch" type="xml"/>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_product_form">
            <field name="name">Products</field>
            <field name="res_model">ins_product.product</field>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_product_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="product_view_tree"/>
            <field name="act_window" ref="act_product_form"/>
        </record>

        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_product_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="product_view_form"/>
            <field name="act_window" ref="act_product_form"/>
        </record>

        <menuitem parent="menu_product" sequence="3" id="menu_product_form"
            icon="tryton-list" action="act_product_form"/>

        <!--################################################################ -->
        <!-- BR Relate -->
        <!--################################################################ -->
        <record model="ir.action.act_window" id="act_coverage_amount_rule_relate_form">
            <field name="name">Coverage Amount</field>
            <field name="res_model">ins_product.coverage_amount_rule</field>
            <field name="domain">[('offered', '=', ('ins_product.coverage', Eval('active_id')))]</field>
        </record>
        <record model="ir.action.keyword" id="act_coverage_relate_keyword2">
            <field name="keyword">form_relate</field>
            <field name="model">ins_product.coverage,-1</field>
            <field name="action" ref="act_coverage_amount_rule_relate_form"/>
        </record>

        <record model="ir.action.act_window" id="act_eligibility_rule_relate_form">
            <field name="name">Eligibility</field>
            <field name="res_model">ins_product.eligibility_rule</field>
            <field name="domain">[('offered', '=', ('ins_product.coverage', Eval('active_id')))]</field>
        </record>
        <record model="ir.action.keyword" id="act_coverage_relate_keyword3">
            <field name="keyword">form_relate</field>
            <field name="model">ins_product.coverage,-1</field>
            <field name="action" ref="act_eligibility_rule_relate_form"/>
        </record>

        <record model="ir.action.act_window" id="act_pricing_rule_relate_form">
            <field name="name">Pricing</field>
            <field name="res_model">ins_product.pricing_rule</field>
            <field name="domain">[('offered', '=', ('ins_product.coverage', Eval('active_id')))]</field>
        </record>
        <record model="ir.action.keyword" id="act_coverage_relate_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">ins_product.coverage,-1</field>
            <field name="action" ref="act_pricing_rule_relate_form"/>
        </record>
        <!--################################################################ -->
        <!-- Contract Number Generator -->
        <!--################################################################ -->

        <record model="ir.sequence.type" id="sequence_type_contract_number">
            <field name="name">Contract Number</field>
            <field name="code">ins_product.product</field>
        </record>

        <record model="ir.sequence.type-res.group" id="sequence_type_contract_number_group_admin">
            <field name="sequence_type" ref="sequence_type_contract_number"/>
            <field name="group" ref="res.group_admin"/>
        </record>

        <!--################################################################ -->
        <!-- Item Descriptor -->
        <!--################################################################ -->
        <record model="ir.ui.view" id="item_desc_view_form">
            <field name="model">ins_product.item_desc</field>
            <field name="type">form</field>
            <field name="name">item_desc_form</field>
        </record>
        <record model="ir.ui.view" id="item_desc_view_tree">
            <field name="model">ins_product.item_desc</field>
            <field name="type">tree</field>
            <field name="name">item_desc_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_item_desc_form">
            <field name="name">Item Descriptors</field>
            <field name="res_model">ins_product.item_desc</field>
        </record>

        <record model="ir.action.act_window.view" id="act_item_desc_view_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="item_desc_view_tree"/>
            <field name="act_window" ref="act_item_desc_form"/>
        </record>

        <record model="ir.action.act_window.view" id="act_item_desc_viem_tree">
            <field name="sequence" eval="20"/>
            <field name="view" ref="item_desc_view_form"/>
            <field name="act_window" ref="act_item_desc_form"/>
        </record>

        <menuitem parent="menu_product_configuration" sequence="1"
            id="menu_item_desc_form" icon="tryton-list"
            action="act_item_desc_form"/>

        <!-- *******************************************
            ********* Dynamic Selection ***********
            ******************************************* -->
