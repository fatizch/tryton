<?xml version="1.0"?>
<tryton>
    <data>
        <!--  ******************************************* 
              ********    Clause     ***************
              *******************************************-->
        <record model="ir.ui.view" id="clause_view_tree">
            <field name="model">ins_product.clause</field>
            <field name="type">tree</field>
            <field name="inherit" ref="coop_utils.versionned_object_view_tree"/>
            <field name="name">clause_tree</field>
        </record>
        <record model="ir.ui.view" id="clause_view_form">
            <field name="model">ins_product.clause</field>
            <field name="type">form</field>
            <field name="inherit" ref="coop_utils.versionned_object_view_form"/>
            <field name="name">clause_form</field>
        </record>
        <record model="ir.action.act_window" id="act_model_clause">
            <field name="name">Clauses</field>
            <field name="res_model">ins_product.clause</field>
            <field name="domain">[("rule", "=", False)]</field>
        </record>
        <record model="ir.action.act_window.view" id="act_model_clause_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="clause_view_tree"/>
            <field name="act_window" ref="act_model_clause"/>
        </record>
        <record model="ir.action.act_window.view" id="act_model_clause_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="clause_view_form"/>
            <field name="act_window" ref="act_model_clause"/>
        </record>
        <menuitem parent="menu_product_configuration" action="act_model_clause" id="menu_model_clause"/>
        <!--  ******************************************* 
              ********    Clause Version    ***************
              *******************************************-->
        <record model="ir.ui.view" id="clause_version_view_tree">
            <field name="model">ins_product.clause_version</field>
            <field name="type">tree</field>
            <field name="inherit" ref="coop_utils.version_object_view_tree"/>
            <field name="name">clause_version_tree</field>
        </record>
        <record model="ir.ui.view" id="clause_version_view_form">
            <field name="model">ins_product.clause_version</field>
            <field name="type">form</field>
            <field name="inherit" ref="coop_utils.version_object_view_form"/>
            <field name="name">clause_version_form</field>
        </record>
    </data>
</tryton>