<tryton>
    <data>
        <record model="ir.ui.view" id="party_view_form">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="name">party_form</field>
        </record>
        <record model="ir.action.act_window" id="act_payment_relate_form">
            <field name="name">Payments</field>
            <field name="res_model">account.payment</field>
            <field name="domain" eval="[('party', 'in', Eval('active_ids'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_contractpayment_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_payment_relate_form"/>
        </record>

          <!--
        ****************************************************
        ****** Payer Subsidized By relationship  ***********
        ****************************************************
        -->
         <record model="party.relation.type" id="payer_relation_type">
            <field name="code">payer</field>
            <field name="name">Payer</field>
         </record>
        <record model="party.relation.type" id="subsidized_relation_type">
            <field name="code">subsidized</field>
            <field name="name">Subsidized By</field>
            <field name="reverse" ref="payer_relation_type"/>
        </record>
        <record model="party.relation.type" id="payer_relation_type" update="1">
            <field name="reverse" ref="subsidized_relation_type"/>
        </record>
    </data>
</tryton>
