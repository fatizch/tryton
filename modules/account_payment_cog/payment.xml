<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- ########### Payment Display ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="payment_view_form">
            <field name="model">account.payment</field>
            <field name="inherit" ref="account_payment.payment_view_form"/>
            <field name="name">payment_form</field>
        </record>
        <record model="ir.ui.view" id="payment_view_list">
            <field name="model">account.payment</field>
            <field name="inherit" ref="account_payment.payment_view_list"/>
            <field name="name">payment_list</field>
        </record>
        <record model="ir.ui.view" id="configuration_view_form">
            <field name="model">account.configuration</field>
            <field name="inherit" ref="account.configuration_view_form"/>
            <field name="name">configuration_form</field>
        </record>
        <record model="ir.ui.view" id="payment_group_view_list">
            <field name="model">account.payment.group</field>
            <field name="inherit" ref="account_payment.payment_group_view_list"/>
            <field name="name">payment_group_list</field>
        </record>
        <record model="ir.ui.view" id="payment_group_view_form">
            <field name="model">account.payment.group</field>
            <field name="inherit" ref="account_payment.payment_group_view_form"/>
            <field name="name">payment_group_form</field>
        </record>
        <record model="ir.ui.view" id="payment_journal_view_form">
            <field name="model">account.payment.journal</field>
            <field name="inherit" ref="account_payment.payment_journal_view_form"/>
            <field name="name">payment_journal_form</field>
        </record>
        <record model="ir.ui.view" id="payment_journal_failure_action_view_form">
            <field name="model">account.payment.journal.failure_action</field>
            <field name="type">form</field>
            <field name="name">payment_journal_failure_action_form</field>
        </record>
        <record model="ir.ui.view" id="payment_journal_failure_action_view_list">
            <field name="model">account.payment.journal.failure_action</field>
            <field name="type">tree</field>
            <field name="name">payment_journal_failure_action_list</field>
        </record>
        <record model="ir.ui.view" id="payment_journal_reject_reason_view_form">
            <field name="model">account.payment.journal.reject_reason</field>
            <field name="type">form</field>
            <field name="name">payment_journal_reject_reason_form</field>
        </record>
        <record model="ir.ui.view" id="payment_journal_reject_reason_view_list">
            <field name="model">account.payment.journal.reject_reason</field>
            <field name="type">tree</field>
            <field name="name">payment_journal_reject_reason_list</field>
        </record>
        <record model="ir.action.act_window" id="act_reject_reason_form">
            <field name="name">Reject reasons</field>
            <field name="res_model">account.payment.journal.reject_reason</field>
        </record>
        <record model="ir.action.act_window.view" id="act_reject_reason_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="payment_journal_reject_reason_view_list"/>
            <field name="act_window" ref="act_reject_reason_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_reject_reason_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="payment_journal_reject_reason_view_form"/>
            <field name="act_window" ref="act_reject_reason_form"/>
        </record>
    <record model="ir.ui.view" id="payment_group_merged_view_list">
        <field name="model">account.payment.merged</field>
        <field name="type">tree</field>
        <field name="name">payment_group_merged_view_list</field>
    </record>
    <record model="ir.action.act_window" id="act_payment_group_merged_form">
            <field name="name">Merged payments</field>
            <field name="res_model">account.payment.merged</field>
        </record>
        <record model="ir.action.act_window.view" id="act_payment_group_merged_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="payment_group_merged_view_list"/>
            <field name="act_window" ref="act_payment_group_merged_form"/>
        </record>
    <menuitem parent="account_payment.menu_payments" action="act_payment_group_merged_form"
          sequence="30" id="menu_merged_payment_form"/>
    <record model="ir.action.wizard" id="act_merged_form_relate_details">
        <field name="name">Related payments</field>
        <field name="wiz_name">account.payment.merged.open_detail</field>
    </record>
    <record model="ir.action.keyword" id="act_merged_form_relate_details_keyword">
        <field name="keyword">form_relate</field>
        <field name="model">account.payment.merged,-1</field>
        <field name="action" ref="act_merged_form_relate_details"/>
    </record>
        <menuitem parent="account_payment.menu_payment_configuration" sequence="20" action="act_reject_reason_form" id="menu_reject_reason_form"/>
        <!-- ######################################## -->
        <!-- ########### Rejected Payment ########### -->
        <!-- ######################################## -->
        <record model="ir.action.act_window" id="act_payment_fail_status_form">
            <field name="name">Payments Rejected</field>
            <field name="res_model">account.payment</field>
            <field name="domain" eval="[('manual_fail_status', '!=', '')]" pyson="1"/>
            <field name="search_value" eval="[('manual_fail_status', '=', 'pending')]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_payment_fail_status_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="payment_view_list"/>
            <field name="act_window" ref="act_payment_fail_status_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_payment_fail_status_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="account_payment.payment_view_form"/>
            <field name="act_window" ref="act_payment_fail_status_form"/>
        </record>
        <menuitem parent="account_payment.menu_payments" sequence="20" action="act_payment_fail_status_form" id="menu_fail_payment_status_form"/>
        <!-- ################################## -->
        <!-- ########### Event Type ########### -->
        <!-- ################################## -->
        <record model="event.type" id="event_process_payment">
            <field name="name">Process Payment</field>
            <field name="code">process_payment</field>
        </record>
        <record model="event.type" id="event_payment_group_created">
            <field name="name">Payment Group Created</field>
            <field name="code">payment_group_created</field>
        </record>
        <record model="event.type" id="event_fail_payment">
            <field name="name">Fail Payment</field>
            <field name="code">fail_payment</field>
        </record>
        <record model="event.type" id="event_succeed_payment">
            <field name="name">Succeed payment</field>
            <field name="code">succeed_payment</field>
        </record>
        <!-- ########################################### -->
        <!-- ########### Payment Fail Wizard ########### -->
        <!-- ########################################### -->
        <record model="ir.ui.view" id="payment_fail_information_view_form">
            <field name="model">account.payment.fail_information</field>
            <field name="type">form</field>
            <field name="name">payment_fail_information_form</field>
        </record>
        <record model="ir.action.wizard" id="manual_payment_fail_wizard">
            <field name="name">Fail Payment</field>
            <field name="wiz_name">account.payment.manual_payment_fail</field>
        </record>
        <record model="ir.action.wizard" id="manual_merged_payments_fail_wizard">
            <field name="name">Fail Merged Payments</field>
            <field name="wiz_name">account.payment.manual_payment_fail</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Process Manual Payment Fail Wizard ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.wizard" id="process_manual_payment_fail_wizard">
            <field name="name">Process Manual Fail Payment</field>
            <field name="wiz_name">account.payment.process_manual_fail_payment</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Process Payments Wizard ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.wizard" id="account_payment.act_process_payments">
            <field name="active" eval="False"/>
        </record>
        <record model="ir.action.wizard" id="act_process_payments_button">
            <field name="name">Process Payments</field>
            <field name="wiz_name">account.payment.process</field>
            <field name="model">account.payment</field>
        </record>
       <record model="ir.model.button" id="button_action_process_payment">
            <field name="name">process_payments</field>
            <field name="model" search="[('model', '=', 'account.payment')]"/>
        </record>
        <record model="ir.model.button-res.group" id="action_process_payment_button_group_res_group_account_admin">
            <field name="button" ref="button_action_process_payment"/>
            <field name="group" ref="contract.group_contract_admin"/>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Relate Payments Group to Payments ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.keyword" id="account_payment.act_payment_form_group_relate_keyword1">
            <field name="keyword">form_relate</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Payment Motive ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="payment_motive_view_form">
            <field name="model">account.payment.motive</field>
            <field name="type">form</field>
            <field name="name">payment_motive_form</field>
        </record>
        <record model="ir.ui.view" id="payment_motive_view_list">
            <field name="model">account.payment.motive</field>
            <field name="type">tree</field>
            <field name="name">payment_motive_list</field>
        </record>
        <record model="ir.action.act_window" id="act_payment_motive_form">
            <field name="name">Payment Motive</field>
            <field name="res_model">account.payment.motive</field>
        </record>
        <record model="ir.action.act_window.view" id="act_payment_motive_form_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="payment_motive_view_list"/>
            <field name="act_window" ref="act_payment_motive_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_payment_motive_form_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="payment_motive_view_form"/>
            <field name="act_window" ref="act_payment_motive_form"/>
        </record>
        <menuitem parent="account_payment.menu_payment_configuration" id="menu_payment_motive_form"
            icon="tryton-list" action="act_payment_motive_form"/>
    </data>
</tryton>
