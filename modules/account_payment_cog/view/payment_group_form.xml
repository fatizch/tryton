<data>
    <xpath expr="/form/field[@name='kind']" position="after">
        <group id="payment_group_status" colspan="4" col="5">
            <label name="state"/>
            <field name="state"/>
            <field name="color" invisible="1"/>
            <field name="process_method" invisible="1"/>
            <group id="payment_group_buttons" col="4">
                <button string="Processing" name="processing"/>
                <button string="To Acknowledge" name="to_acknowledge"/>
                <button string="Acknowledge" name="acknowledge"/>
                <button string="Fail" name="fail"/>
            </group>
        </group>
    </xpath>
</data>
