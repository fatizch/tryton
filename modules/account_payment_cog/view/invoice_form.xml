<data>
    <xpath expr="//label[@name='state']" position="before">
        <label name="pending_payment"/>
        <field name="pending_payment"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='payment']" position="inside">
        <field name="lines_to_pay" colspan="4" view_ids="account_cog.move_line_to_pay_view_list"/>
        <field name="payments" colspan="4"/>
        <field name="credit_reconciliation_lines" colspan="4"/>
    </xpath>
    <xpath expr="/form/group[@id='invisible']" position="inside">
        <button string="Create Payments" name="create_payments"/>
    </xpath>
</data>
