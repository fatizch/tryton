<?xml version="1.0"?>
<data>
    <xpath expr="/tree/field[@name='date']" position="after">
        <field name="description"/>
    </xpath>
    <xpath expr="/tree/button[@name='draft']" position="replace_attributes">
        <button string="Draft" name="draft" tree_invisible="1"/>
    </xpath>
    <xpath expr="/tree/button[@name='approve']" position="replace_attributes">
        <button string="Approve" name="approve" tree_invisible="1"/>
    </xpath>
    <xpath expr="/tree/button[@name='fail']" position="replace">
        <button string="Fail" name="button_fail_payments" tree_invisible="1"/>
    </xpath>
    <xpath expr="/tree/button[@name='succeed']" position="replace_attributes">
        <button string="Succeed" name="succeed" tree_invisible="1"/>
    </xpath>
    <xpath expr="/tree" position="inside">
        <field name="reject_description"/>
        <button string="Process Payments" name="process_payments" tree_invisible="1"/>
    </xpath>
    <xpath expr="/tree" position="inside">
        <field name="merged_id"/>
    </xpath>
</data>
