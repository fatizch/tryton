<tryton>
    <data>
        <record model="ir.ui.view" id="move_line_to_pay_view_list">
            <field name="model">account.move.line</field>
            <field name="inherit" ref="account_cog.move_line_to_pay_view_list"/>
            <field name="name">move_line_to_pay_list</field>
        </record>
        <record model="ir.ui.view" id="move_line_view_form_move">
            <field name="model">account.move.line</field>
            <field name="inherit" ref="account.move_line_view_form_move"/>
            <field name="name">move_line_form_move</field>
        </record>
        <record model="ir.ui.view" id="move_line_view_form">
            <field name="model">account.move.line</field>
            <field name="inherit" ref="account.move_line_view_form"/>
            <field name="name">move_line_form</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Wizard for bank transfer date modification ##### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="payment_information_modification_view_form">
            <field name="model">account.payment.payment_information_selection</field>
            <field name="type">form</field>
            <field name="name">payment_information_modification_form</field>
        </record>
        <record model="ir.action.wizard" id="modify_payment_information_wizard">
            <field name="name">Modify Payment Information</field>
            <field name="wiz_name">account.payment.payment_information_modification</field>
        </record>
        <record model="ir.action.keyword" id="act_modify_payment_information_keyword">
            <field name="keyword">form_action</field>
            <field name="model">account.move.line,-1</field>
            <field name="action" ref="modify_payment_information_wizard"/>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Wizard for payment creation          ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="payment_creation_start_view_form">
            <field name="model">account.payment.payment_creation.start</field>
            <field name="type">form</field>
            <field name="name">payment_creation_start_form</field>
        </record>
        <record model="ir.action.wizard" id="create_payments_wizard">
            <field name="name">Create Payments</field>
            <field name="wiz_name">account.payment.creation</field>
        </record>
        <record model="ir.action.keyword" id="act_create_payments_keyword">
            <field name="keyword">form_action</field>
            <field name="model">account.move.line,-1</field>
            <field name="action" ref="create_payments_wizard"/>
        </record>
        <record model="ir.action.keyword" id="act_create_payments_from_party_keyword">
            <field name="keyword">form_action</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="create_payments_wizard"/>
        </record>
        <menuitem parent="account_payment.menu_payments" sequence="40" action="create_payments_wizard" id="menu_create_payments"/>
    </data>
</tryton>
