<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- Claim -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="claim_view_form">
            <field name="model">claim</field>
            <field name="inherit" ref="claim.claim_view_form"/>
            <field name="name">claim_form</field>
        </record>
        <!-- Send Document -->
        <record model="ir.action.keyword" id="letter_generation_claim_keyword">
            <field name="keyword">form_action</field>
            <field name="model">claim,-1</field>
            <field name="action" ref="report_engine.letter_generation_wizard"/>
        </record>
        <!-- #################### -->
        <!-- # Claim Buttons    # -->
        <!-- #################### -->
        <record model="ir.model.button" id="button_launch_report_wizard">
            <field name="name">launch_report_wizard</field>
            <field name="model" search="[('model', '=', 'claim')]"/>
        </record>
        <record model="ir.model.button" id="button_generate_reminds_documents">
            <field name="name">generate_reminds_documents</field>
            <field name="model" search="[('model', '=', 'claim')]"/>
        </record>
        <record model="ir.model.button" id="button_generate_document_request">
            <field name="name">button_generate_document_request</field>
            <field name="model" search="[('model', '=', 'claim')]"/>
        </record>
    </data>
</tryton>
