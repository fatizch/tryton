            <field name="group" ref="claim.group_claim_read"/>
        </record>
        <record model="ir.ui.menu-res.group" id="menu_document_request_line_form_claim_read">
            <field name="menu" ref="document_request.menu_document_request_line_form"/>
            <field name="group" ref="claim.group_claim_read"/>
