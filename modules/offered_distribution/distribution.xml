<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- Distribution Network -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="dist_network_view_form">
            <field name="model">distribution.network</field>
            <field name="inherit" ref="distribution.dist_network_view_form"/>
            <field name="name">distribution_network_form</field>
        </record>
        <record model="ir.ui.view" id="dist_network_view_list">
            <field name="model">distribution.network</field>
            <field name="inherit" ref="distribution.dist_network_view_list"/>
            <field name="name">distribution_network_list</field>
        </record>
        <record model="ir.ui.view" id="dist_network_view_list_with_contacts">
            <field name="model">distribution.network</field>
            <field name="inherit" ref="distribution.dist_network_view_list_with_contacts"/>
            <field name="name">distribution_network_list_with_contacts</field>
        </record>
        <!-- Read / Write rule -->
        <record model="ir.rule.group" id="rule_group_dist_network">
            <field name="model" search="[('model', '=', 'distribution.network')]"/>
            <field name="global_p" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_dist_network_1">
            <field name="domain"
                 eval="[('company', 'in', Eval('user', {}).get('companies', []))]" pyson="1"/>
            <field name="rule_group" ref="rule_group_dist_network"/>
        </record>
        <!-- Entry Point -->
        <record model="ir.action.act_window" id="distribution.act_dist_network_form">
            <field name="domain" eval="[('parent', '=', None), ('company', '=', Eval('context', {}).get('company', None))]" pyson="1"/>
        </record>
        <!-- ############################################################ -->
        <!-- Product -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="product_view_form">
            <field name="model">offered.product</field>
            <field name="inherit" ref="offered.product_view_form"/>
            <field name="name">product_form</field>
        </record>
        <!-- ############################################################ -->
        <!-- Commercial Product -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="commercial_product_view_form">
            <field name="model">distribution.commercial_product</field>
            <field name="type">form</field>
            <field name="name">commercial_product_form</field>
        </record>
        <record model="ir.ui.view" id="commercial_product_view_tree">
            <field name="model">distribution.commercial_product</field>
            <field name="type">tree</field>
            <field name="name">commercial_product_tree</field>
        </record>
        <!-- Read / Write rule -->
        <record model="ir.rule.group" id="rule_group_commercial_product">
            <field name="model" search="[('model', '=', 'distribution.commercial_product')]"/>
            <field name="global_p" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_commercial_product_1">
            <field name="domain" eval="[('product.company', 'in', Eval('user', {}).get('companies', []))]" pyson="1"/>
            <field name="rule_group" ref="rule_group_commercial_product"/>
        </record>
        <!-- Entry Point -->
        <record model="ir.action.act_window" id="act_commercial_product_form">
            <field name="name">Commercial Products</field>
            <field name="res_model">distribution.commercial_product</field>
            <field name="domain" eval="[('product.company', '=', Eval('context', {}).get('company', None))]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_commercial_product_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="commercial_product_view_tree"/>
            <field name="act_window" ref="act_commercial_product_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_commercial_product_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="commercial_product_view_form"/>
            <field name="act_window" ref="act_commercial_product_form"/>
        </record>
        <menuitem parent="distribution.menu_distribution" sequence="3" id="menu_commercial_product_form" icon="tryton-list" action="act_commercial_product_form"/>
        <!-- Rights -->
        <record model="ir.model.access" id="access_commercial_product">
            <field name="model" search="[('model', '=', 'distribution.commercial_product')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_commercial_product_admin">
            <field name="model" search="[('model', '=', 'distribution.commercial_product')]"/>
            <field name="group" ref="contract.group_contract_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_distribution_network_commercial_product">
            <field name="model" search="[('model', '=', 'distribution.network-commercial_product')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_distribution_network_commercial_product_admin">
            <field name="model" search="[('model', '=', 'distribution.network-commercial_product')]"/>
            <field name="group" ref="contract.group_contract_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
    </data>
</tryton>
