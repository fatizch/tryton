<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.menu" id="product.menu_main_product">
            <field name="active" eval="False"/>
        </record>
        <menuitem parent="account.menu_account_configuration" id="menu_main_product" name="Accounting Products"/>
        <!-- ##################### -->
        <!-- # Product template  # -->
        <!-- ##################### -->
        <record model="ir.ui.view" id="template_view_form">
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="inherit" ref="product.template_view_form"/>
            <field name="name">template_form</field>
        </record>
        <record model="ir.ui.view" id="template_view_list">
            <field name="model">product.template</field>
            <field name="type">tree</field>
            <field name="inherit" ref="product.template_view_tree"/>
            <field name="name">template_list</field>
        </record>
        <record model="ir.action.act_window" id="act_template_form">
            <field name="name">Accounting Products</field>
            <field name="res_model">product.template</field>
        </record>
        <record model="ir.action.act_window.view" id="act_template_list_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="product.template_view_tree"/>
            <field name="act_window" ref="act_template_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_template_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="product.template_view_form"/>
            <field name="act_window" ref="act_template_form"/>
        </record>
        <!-- ##################### -->
        <!-- # Product           # -->
        <!-- ##################### -->
        <menuitem parent="menu_main_product" id="menu_template" action="act_template_form"/>
        <record model="ir.action.act_window" id="act_product_form">
            <field name="name">Accounting Variants</field>
            <field name="res_model">product.product</field>
        </record>
        <record model="ir.action.act_window.view" id="act_product_list_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="product.product_view_tree"/>
            <field name="act_window" ref="act_product_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_product_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="product.product_view_form"/>
            <field name="act_window" ref="act_product_form"/>
        </record>
        <menuitem parent="menu_main_product" id="menu_product" action="act_product_form"/>
        <record model="ir.property" id="property_product_list_price">
            <field name="field" search="[('model.model', '=', 'product.template'), ('name', '=', 'list_price')]"/>
            <field name="value">,1</field>
        </record>
        <record model="ir.property" id="property_product_cost_price">
            <field name="field" search="[('model.model', '=', 'product.template'), ('name', '=', 'cost_price')]"/>
            <field name="value">,1</field>
        </record>
        <!-- ##################### -->
        <!-- # Category          # -->
        <!-- ##################### -->
        <menuitem parent="menu_main_product" sequence="10" id="menu_category_list" action="product.act_category_list"/>
        <record model="ir.ui.view" id="category_view_form">
            <field name="model">product.category</field>
            <field name="type">form</field>
            <field name="inherit" ref="product.category_view_form"/>
            <field name="name">category_form</field>
        </record>
    </data>
</tryton>
