<tryton>
    <data>
        <record model="ir.ui.view" id="payment_view_form">
            <field name="model">account.payment</field>
            <field name="inherit" ref="account_payment.payment_view_form"/>
            <field name="name">payment_form</field>
        </record>
        <record model="ir.ui.view" id="payment_view_list">
            <field name="model">account.payment</field>
            <field name="inherit" ref="account_payment.payment_view_list"/>
            <field name="name">payment_list</field>
        </record>
        <record model="ir.ui.view" id="payment_process_paybox_url">
            <field name="model">account.payment.process.paybox_url</field>
            <field name="type">form</field>
            <field name="name">payment_process_paybox_url</field>
        </record>
        <record model="ir.action.wizard" id="act_create_paybox_from_rejected_payment">
            <field name="name">Create Paybox Payment</field>
            <field name="wiz_name">paybox_payment.create</field>
        </record>
        <record model="ir.action.wizard" id="act_process_paybox_payment">
            <field name="name">Process Paybox Payment</field>
            <field name="wiz_name">paybox_payment.process</field>
        </record>
        <record model="ir.action.act_window.domain" id="act_payment_group_domain_non_paybox">
            <field name="name">Payment Groups</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('journal_method', '!=', 'paybox')]" pyson="1"/>
            <field name="act_window" ref="account_payment.act_payment_group_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_payment_group_domain_paybox">
            <field name="name">Paybox Groups</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('journal_method', '=', 'paybox')]" pyson="1"/>
            <field name="act_window" ref="account_payment.act_payment_group_form"/>
        </record>
        <record model="ir.model.button" id="button_generate_paybox">
            <field name="name">generate_paybox</field>
            <field name="model" search="[('model', '=', 'account.payment')]"/>
        </record>
    </data>
</tryton>
