<tryton>
    <data>
        <!-- ################# -->
        <!-- # Claim Buttons # -->
        <!-- ################# -->
        <record model="ir.model.button" id="button_launch_salaries_wizard">
            <field name="name">launch_salaries_wizard</field>
            <field name="model" search="[('model', '=', 'claim')]"/>
        </record>
        <!-- ################################ -->
        <!-- # Claim Indemnification Detail # -->
        <!-- ################################ -->
        <record model="extra_details.configuration.line" id="indemnification_extra_details_tranche_a">
            <field name="configuration" ref="claim_indemnification.indemnification_extra_details_configuration"/>
            <field name="string">Tranche A</field>
            <field name="name">tranche_a</field>
            <field name="type_">numeric</field>
            <field name="digits">2</field>
        </record>
        <record model="extra_details.configuration.line" id="indemnification_extra_details_tranche_b">
            <field name="configuration" ref="claim_indemnification.indemnification_extra_details_configuration"/>
            <field name="string">Tranche B</field>
            <field name="name">tranche_b</field>
            <field name="type_">numeric</field>
            <field name="digits">2</field>
        </record>
        <record model="extra_details.configuration.line" id="indemnification_extra_details_tranche_c">
            <field name="configuration" ref="claim_indemnification.indemnification_extra_details_configuration"/>
            <field name="string">Tranche C</field>
            <field name="name">tranche_c</field>
            <field name="type_">numeric</field>
            <field name="digits">2</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Salary ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="salary_view_form">
            <field name="model">claim.salary</field>
            <field name="type">form</field>
            <field name="name">salary_form</field>
        </record>
        <record model="ir.ui.view" id="salary_view_list">
            <field name="model">claim.salary</field>
            <field name="type">tree</field>
            <field name="name">salary_list</field>
        </record>
        <record model="ir.ui.view" id="salary_no_button_view_list">
            <field name="model">claim.salary</field>
            <field name="type">tree</field>
            <field name="name">salary_no_button_list</field>
        </record>
        <record model="ir.ui.view" id="gross_salary_view_list">
            <field name="model">claim.salary</field>
            <field name="type">tree</field>
            <field name="name">gross_salary_list</field>
        </record>
        <record model="ir.ui.view" id="claim_service_with_salary_view_form">
            <field name="model">claim.service</field>
            <field name="type">form</field>
            <field name="name">claim_service_with_salary_form</field>
        </record>
        <record model="ir.ui.view" id="extra_data_displayers_view_form">
            <field name="model">claim.extra_datas_displayers</field>
            <field name="inherit" ref="claim_indemnification.extra_data_displayers_view_form"/>
            <field name="name">extra_data_displayers_form</field>
        </record>
        <record model="ir.ui.view" id="indemnification_definition_view_form">
            <field name="model">claim.indemnification_definition</field>
            <field name="inherit" ref="claim_indemnification.indemnification_definition_view_form"/>
            <field name="name">indemnification_definition_form</field>
        </record>
        <record model="ir.ui.view" id="net_calculation_rule_view_form">
            <field name="model">claim.net_calculation_rule</field>
            <field name="type">form</field>
            <field name="name">net_calculation_rule_form</field>
        </record>
        <record model="ir.ui.view" id="net_calculation_rule_view_list">
            <field name="model">claim.net_calculation_rule</field>
            <field name="type">tree</field>
            <field name="name">net_calculation_rule_list</field>
        </record>
        <record model="ir.action.act_window" id="act_net_calculation_rule_form">
            <field name="name">Net Calculation Rules</field>
            <field name="res_model">claim.net_calculation_rule</field>
        </record>
        <record model="ir.action.act_window.view" id="act_net_calculation_rule_form_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="net_calculation_rule_view_list"/>
            <field name="act_window" ref="act_net_calculation_rule_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_net_calculation_rule_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="net_calculation_rule_view_form"/>
            <field name="act_window" ref="act_net_calculation_rule_form"/>
        </record>
        <menuitem parent="offered.menu_product_configuration" sequence="3" id="menu_net_calculation_rule" action="act_net_calculation_rule_form"/>
        <!-- ############################################################ -->
        <!-- ########### Relate on Salaries ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.act_window" id="act_salaries_list">
            <field name="name">Salaries</field>
            <field name="res_model">claim.salary</field>
            <field name="domain" eval="[('claim', 'in', Eval('active_ids'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_salaries_list_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">claim,-1</field>
            <field name="action" ref="act_salaries_list"/>
        </record>
    </data>
</tryton>
