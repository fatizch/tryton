<?xml version="1.0" encoding="UTF-8"?>
<form string="Contract">
    <label name="contract_number"/>
    <field name="contract_number"/>
    <label name="status"/>
    <field name="status"/>
    <label name="start_date"/>
    <field name="start_date"/>
    <label name="end_date"/>
    <field name="end_date"/>
    <newline/>
    <label name="subscriber"/>
    <group id="subscriber" col="99">
        <field name="subscriber_kind"/>
        <group id="person" states="{'invisible': Eval('subscriber_kind') != 'person'}">
            <field name="subscriber" view_ids="party_cog.person_view_tree"/>
        </group>
        <group id="company" states="{'invisible': Eval('subscriber_kind')== 'person'}">
            <field name="subscriber"/>
        </group>
    </group>
    <notebook colspan="4">
        <page string="Options" id="options">
            <field name="options" colspan="4"/>
        </page>
        <page string="Complementary Data" name="extra_data">
            <field name="extra_data" no_command="1"/>
        </page>
        <page string="Contacts" name="Contacts">
            <field name="contacts" colspan="4"/>
        </page>
        <page string="Administration" id="admin">
            <label name="product_kind"/>
            <field name="product_kind"/>
            <label name="product"/>
            <field name="product"/>
            <label name="appliable_conditions_date"/>
            <field name="appliable_conditions_date"/>
        </page>
        <page string="Activation History" name="activation_history">
            <field name="activation_history"/>
        </page>
    </notebook>
    <newline/>
</form>
