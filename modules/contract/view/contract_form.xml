<?xml version="1.0" encoding="UTF-8"?>
<form string="Contract">
    <label name="rec_name"/>
    <field name="rec_name"/>
    <label name="status"/>
    <group id="status">
        <field name="status"/>
        <field name="sub_status"/>
    </group>
    <label name="start_date"/>
    <field name="start_date"/>
    <label name="end_date"/>
    <field name="end_date"/>
    <newline/>
    <label name="subscriber"/>
    <group id="subscriber" col="99">
        <field name="subscriber_kind"/>
        <group id="person" states="{'invisible': Eval('subscriber_kind') != 'person'}">
            <field name="subscriber" view_ids="party_cog.person_view_tree"/>
        </group>
        <group id="company" states="{'invisible': Eval('subscriber_kind')== 'person'}">
            <field name="subscriber"/>
        </group>
    </group>
    <notebook colspan="4">
        <page string="Options" id="options" states="{'invisible': ~Eval('options')}">
            <field name="options" colspan="4"/>
        </page>
        <page string="Data" id="data">
            <field name="extra_datas" colspan="4"/>
        </page>
        <page string="Contacts" id="contacts">
            <field name="contacts" colspan="4"/>
            <field name="addresses" colspan="4"/>
        </page>
        <page string="Administration" id="admin" col="2">
            <group id="left" col="2" yfill="0">
                <label name="product"/>
                <field name="product"/>
                <label name="appliable_conditions_date"/>
                <field name="appliable_conditions_date"/>
                <label name="quote_number"/>
                <field name="quote_number"/>
            </group>
            <group id="right" yfill="0">
                <field name="activation_history" colspan="2" yfill="0" yexpand="0"/>
            </group>
        </page>
    </notebook>
    <newline/>
    <group id="button_change_start_date" states="{'invisible': True}">
        <button name="button_change_start_date" string="Change start date"/>
        <button name="button_activate" string="Activate Contract"/>
        <button name="button_decline" string="Decline Contract"/>
    </group>
</form>
