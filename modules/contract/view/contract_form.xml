<form string="Contract" col="6">
    <group id="left" colspan="4">
        <label name="rec_name"/>
        <field name="rec_name"/>
        <label name="status"/>
        <group id="status" col="99">
            <field name="status"/>
            <field name="sub_status"/>
            <group id="termination_reason">
                <image name="tryton-dialog-warning" xexpand="0" xfill="0"/>
                <label string="Will be terminated for:" id="termination_reason_label"/>
                <field name="termination_reason"/>
            </group>
        </group>
        <label name="product"/>
        <field name="product"/>
        <label name="subscriber"/>
        <group id="subscriber" col="99">
            <field name="subscriber_kind"/>
            <group id="person" colspan="40">
                <field name="subscriber" view_ids="party_cog.person_view_tree"/>
            </group>
            <group id="company" colspan="40">
                <field name="subscriber"/>
            </group>
        </group>
    </group>
    <group id="right" colspan="2" col="2">
        <label name="initial_start_date"/>
        <field name="initial_start_date"/>
        <label name="start_date"/>
        <field name="start_date"/>
        <label name="end_date"/>
        <field name="end_date"/>
        <label name="final_end_date"/>
        <field name="final_end_date"/>
    </group>
    <notebook colspan="6">
        <page string="Options" id="options">
            <field name="options" colspan="4"/>
        </page>
        <page string="Data" id="data">
            <field name="extra_datas" colspan="4"/>
        </page>
        <page string="Contacts" id="contacts">
            <field name="contacts" colspan="4"/>
        </page>
        <page string="Administration" id="admin" col="2">
            <group id="left" col="2" yfill="0">
                <label name="signature_date"/>
                <field name="signature_date"/>
                <label name="appliable_conditions_date"/>
                <field name="appliable_conditions_date"/>
                <label name="quote_number"/>
                <field name="quote_number"/>
            </group>
            <group id="right" yfill="0">
            </group>
        </page>
    </notebook>
    <newline/>
    <group id="button_change_start_date">
        <button name="button_change_start_date" string="Change start date"/>
        <button name="button_activate" string="Activate Contract"/>
        <button name="button_decline" string="Decline Contract"/>
        <button name="button_hold" string="Hold Contract"/>
        <button name="button_stop" string="Stop Contract"/>
        <button name="button_reactivate" string="Reactivate Contract"/>
    </group>
</form>
