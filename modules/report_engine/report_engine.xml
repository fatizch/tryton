<tryton>
    <data>
        <!-- ############################## -->
        <!-- # Document Creation - Select # -->
        <!-- ############################## -->
        <record model="ir.ui.view" id="document_create_select_form">
            <field name="model">report.create.select_template</field>
            <field name="type">form</field>
            <field name="name">document_create_select_form</field>
        </record>
        <!-- ############################### -->
        <!-- # Document Creation - Preview # -->
        <!-- ############################### -->
        <record model="ir.ui.view" id="document_create_preview_form">
            <field name="model">report.create.preview</field>
            <field name="type">form</field>
            <field name="name">document_create_preview_form</field>
        </record>
        <!-- ###################################### -->
        <!-- # Document Creation - Report Preview # -->
        <!-- ###################################### -->
        <record model="ir.ui.view" id="document_create_preview_report_list">
            <field name="model">report.create.preview.line</field>
            <field name="type">tree</field>
            <field name="name">document_create_preview_report_list</field>
        </record>
        <!-- ############################## -->
        <!-- # Document Creation - Attach # -->
        <!-- ############################## -->
        <record model="ir.ui.view" id="document_create_attach_form">
            <field name="model">report.create.attach</field>
            <field name="type">form</field>
            <field name="name">document_create_attach_form</field>
        </record>
        <!-- ############################ -->
        <!-- # Letter Generation Wizard # -->
        <!-- ############################ -->
        <record model="ir.action.wizard" id="letter_generation_wizard">
            <field name="name">Letter Generation</field>
            <field name="wiz_name">report.create</field>
        </record>
        <!-- ############################ -->
        <!-- # Document Filename Report # -->
        <!-- ############################ -->
        <record model="ir.action.report" id="generate_file_report">
            <field name="name">Document From Filename</field>
            <field name="report_name">report.generate_from_file</field>
        </record>
        <!-- ############################ -->
        <!-- # Letter Generation Report # -->
        <!-- ############################ -->
        <record model="ir.action.report" id="letter_generation_report">
            <field name="name">Letter Report</field>
            <field name="report_name">report.generate</field>
        </record>
        <!-- ##################### -->
        <!-- # Report Template   # -->
        <!-- ##################### -->
        <menuitem name="Report" id="menu_report" sequence="20"/>
        <record model="ir.ui.view" id="report_template_form">
            <field name="model">report.template</field>
            <field name="type">form</field>
            <field name="name">report_template_form</field>
        </record>
        <record model="ir.ui.view" id="report_template_list">
            <field name="model">report.template</field>
            <field name="type">tree</field>
            <field name="name">report_template_list</field>
        </record>
        <record model="ir.action.act_window" id="act_doc_template">
            <field name="name">Document Templates</field>
            <field name="res_model">report.template</field>
            <field name="context" eval="{'remove_document_desc_filter': 1}" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_doc_template_view1">
            <field name="sequence" eval="16"/>
            <field name="view" ref="report_template_list"/>
            <field name="act_window" ref="act_doc_template"/>
        </record>
        <record model="ir.action.act_window.view" id="act_doc_template_view2">
            <field name="sequence" eval="16"/>
            <field name="view" ref="report_template_form"/>
            <field name="act_window" ref="act_doc_template"/>
        </record>
        <menuitem parent="menu_report" sequence="30" action="act_doc_template" id="menu_doc_template"/>
        <!-- ################################ -->
        <!-- # Report Template Access Right # -->
        <!-- ################################ -->
        <record model="res.group" id="group_report">
            <field name="name">Report</field>
        </record>
        <record model="res.group" id="group_report_admin">
            <field name="name">Report Administration</field>
        </record>
        <record model="res.user-res.group" id="user_admin_group_report_admin">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_report_admin"/>
        </record>
        <record model="ir.ui.menu-res.group" id="group_report_menu_report">
            <field name="group" ref="group_report"/>
            <field name="menu" ref="menu_report"/>
        </record>
        <record model="ir.ui.menu-res.group" id="group_report_admin_menu_report">
            <field name="group" ref="group_report_admin"/>
            <field name="menu" ref="menu_report"/>
        </record>
        <record model="ir.model.access" id="default_report_template">
            <field name="model" search="[('model', '=', 'report.template')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="default_report_template_admin">
            <field name="model" search="[('model', '=', 'report.template')]"/>
            <field name="group" ref="group_report_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <!-- ############################# -->
        <!-- # Report Template Version   # -->
        <!-- ############################# -->
        <record model="ir.ui.view" id="report_template_version_form">
            <field name="model">report.template.version</field>
            <field name="type">form</field>
            <field name="name">report_template_version_form</field>
        </record>
        <record model="ir.ui.view" id="report_template_version_list">
            <field name="model">report.template.version</field>
            <field name="type">tree</field>
            <field name="name">report_template_version_list</field>
        </record>
        <!-- ############## -->
        <!-- # Parameters # -->
        <!-- ############## -->
        <record model="ir.ui.view" id="template_parameter_view_list">
            <field name="model">report.template.parameter</field>
            <field name="type">tree</field>
            <field name="name">report_template_parameter_list</field>
        </record>
        <record model="ir.ui.view" id="template_parameter_view_form">
            <field name="model">report.template.parameter</field>
            <field name="type">form</field>
            <field name="name">report_template_parameter_form</field>
        </record>
        <record model="ir.action.act_window" id="act_report_template_parameter_form">
            <field name="name">Template Parameters</field>
            <field name="res_model">report.template.parameter</field>
        </record>
        <record model="ir.action.act_window.view" id="act_report_template_parameter_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="template_parameter_view_list"/>
            <field name="act_window" ref="act_report_template_parameter_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_report_template_parameter_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="template_parameter_view_form"/>
            <field name="act_window" ref="act_report_template_parameter_form"/>
        </record>
        <menuitem parent="menu_report" sequence="50" action="act_report_template_parameter_form" id="menu_template_parameter"/>
        <record model="ir.ui.view" id="report_input_parameters_view_form">
            <field name="model">report.create.input_parameters</field>
            <field name="type">form</field>
            <field name="name">report_create_input_parameters_form</field>
        </record>
    </data>
</tryton>
