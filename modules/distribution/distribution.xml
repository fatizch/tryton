<tryton>
    <data>
        <!--############################################################-->
        <!--Menus-->
        <!--############################################################-->
        <menuitem name="Distribution" id="menu_distribution" sequence="15"/>
        <!--############################################################-->
        <!--Distribution Network-->
        <!--############################################################-->
        <record model="ir.ui.view" id="dist_network_view_form">
            <field name="model">distribution.network</field>
            <field name="type">form</field>
            <field name="name">distribution_network_form</field>
        </record>
        <record model="ir.ui.view" id="dist_network_view_list">
            <field name="model">distribution.network</field>
            <field name="type">tree</field>
            <field name="field_childs">childs</field>
            <field name="name">distribution_network_list</field>
        </record>
        <record model="ir.ui.view" id="dist_network_view_list_with_contacts">
            <field name="model">distribution.network</field>
            <field name="type">tree</field>
            <field name="field_childs">childs</field>
            <field name="name">distribution_network_list_with_contacts</field>
        </record>
        <!-- Read / Write rule -->
        <record model="ir.rule.group" id="rule_group_dist_network">
            <field name="model" search="[('model', '=', 'distribution.network')]"/>
            <field name="global_p" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_dist_network_1">
            <field name="domain"
                 eval="[('company', 'in', Eval('user', {}).get('companies', []))]" pyson="1"/>
            <field name="rule_group" ref="rule_group_dist_network"/>
        </record>
        <!--Entry Point-->
        <record model="ir.action.act_window" id="act_dist_network_form">
            <field name="name">Distribution Networks</field>
            <field name="res_model">distribution.network</field>
            <field name="domain" eval="[('parent', '=', None), ('company', '=', Eval('context', {}).get('company', None))]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_dist_network_domain_parent">
            <field name="name">Tree</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('parent', '=', None)]" pyson="1"/>
            <field name="act_window" ref="act_dist_network_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_dist_network_domain_all">
            <field name="name">All</field>
            <field name="sequence" eval="20"/>
            <field name="act_window" ref="act_dist_network_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_dist_network_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="dist_network_view_list"/>
            <field name="act_window" ref="act_dist_network_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_dist_network_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="dist_network_view_form"/>
            <field name="act_window" ref="act_dist_network_form"/>
        </record>
        <menuitem parent="menu_distribution" sequence="2" id="menu_dist_network_form" icon="tryton-list" action="act_dist_network_form"/>
        <record model="ir.action.act_window" id="act_distribution_network_relate_form">
            <field name="name">Childs</field>
            <field name="res_model">distribution.network</field>
            <field name="domain" eval="[('parent', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_distribution_network_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">distribution.network,-1</field>
            <field name="action" ref="act_distribution_network_relate_form"/>
        </record>
    </data>
</tryton>
