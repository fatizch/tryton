<tryton>
    <data>
        <!-- Menu -->
        <record model="ir.ui.menu-res.group" id="menu_distribution_admin">
            <field name="menu" ref="distribution.menu_distribution"/>
            <field name="group" ref="coog_core.group_global_config"/>
        </record>
        <record model="ir.ui.menu-res.group" id="menu_distribution_network_admin">
            <field name="menu" ref="distribution.menu_dist_network_form"/>
            <field name="group" ref="coog_core.group_global_config"/>
        </record>
        <!-- Model -->
        <record model="ir.model.access" id="access_distribution_network_default">
            <field name="model" search="[('model', '=', 'distribution.network')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_distribution_network_global_config">
            <field name="group" ref="coog_core.group_global_config"/>
            <field name="model" search="[('model', '=', 'distribution.network')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
    </data>
    <data depends="api">
        <!-- ############## -->
        <!-- # API Access # -->
        <!-- ############## -->
        <record model="ir.api.access" id="create_distribution_networks_default_access">
            <field name="api">api.core.create_distribution_networks</field>
            <field name="group" ref="api.group_default_api"/>
        </record>
        <record model="ir.api.access" id="update_distribution_networks_default_access">
            <field name="api">api.core.update_distribution_networks</field>
            <field name="group" ref="api.group_default_api"/>
        </record>
    </data>
</tryton>
