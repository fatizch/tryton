<tryton>
    <data>
        <record model="rule_engine" id="coverage_amount_per_range">
            <field name="name">Coverage Amount Per Range Rule</field>
            <field name="short_name">coverage_amount_per_range</field>
            <field name="algorithm">range_amount = param_coverage_amount_range()
return list(range(param_min_amount(), param_max_amount() + range_amount, range_amount))</field>
            <field name="description">Possible coverage amount are computed per ${coverage_amount_range} range with a ${min_amount} minimum amount and ${max_amount} maximum amount.</field>
            <field name="status">validated</field>
            <field name="type_">coverage_amount_selection</field>
            <field name="context" ref="rule_engine.default_context"/>
        </record>
        <record model="rule_engine.rule_parameter" id="minimum_coverage_amount">
            <field name="name">min_amount</field>
            <field name="type_">integer</field>
            <field name="string">Minimum Coverage Amount</field>
            <field name="sequence_order" eval="1"/>
            <field name="parent_rule" ref="coverage_amount_per_range"/>
        </record>
        <record model="rule_engine.rule_parameter" id="maximum_coverage_amount">
            <field name="name">max_amount</field>
            <field name="type_">integer</field>
            <field name="string">Maximum Coverage Amount</field>
            <field name="sequence_order" eval="2"/>
            <field name="parent_rule" ref="coverage_amount_per_range"/>
        </record>
        <record model="rule_engine.rule_parameter" id="coverage_amount_range">
            <field name="name">coverage_amount_range</field>
            <field name="type_">integer</field>
            <field name="string">Coverage Amount Range</field>
            <field name="sequence_order" eval="3"/>
            <field name="parent_rule" ref="coverage_amount_per_range"/>
        </record>
        <record model="rule_engine" id="coverage_amount_list_rule">
            <field name="name">Coverage Amount Predefined List</field>
            <field name="short_name">coverage_amount_predefined_list</field>
            <field name="algorithm">return [Decimal(x) for x in param_coverage_amount_list().split(';')]</field>
            <field name="description">Possible coverage amount are: ${' - '.join(coverage_amount_list.split(';'))}</field>
            <field name="status">validated</field>
            <field name="type_">coverage_amount_selection</field>
            <field name="context" ref="rule_engine.default_context"/>
        </record>
        <record model="rule_engine.rule_parameter" id="coverage_amount_list_parameter">
            <field name="name">coverage_amount_list</field>
            <field name="type_">char</field>
            <field name="string">Coverage Amount List Separated by ;</field>
            <field name="sequence_order" eval="1"/>
            <field name="parent_rule" ref="coverage_amount_list_rule"/>
        </record>
    </data>
</tryton>
