<tryton>
    <data>
        <!-- ###################### -->
        <!-- # Document Reception # -->
        <!-- ###################### -->
        <record model="ir.ui.view" id="document_reception_view_form">
            <field name="model">document.reception</field>
            <field name="inherit" ref="document.document_reception_view_form"/>
            <field name="name">document_reception_form</field>
        </record>
        <!-- ######################### -->
        <!-- # Document Request Line # -->
        <!-- ######################### -->
        <record model="ir.ui.view" id="document_request_line_view_list">
            <field name="model">document.request.line</field>
            <field name="inherit" ref="document_request.document_request_line_view_list"/>
            <field name="name">document_request_line_list</field>
        </record>
        <record model="ir.ui.view" id="document_desc_view_form">
            <field name="model">document.description</field>
            <field name="inherit" ref="document.document_desc_form"/>
            <field name="name">document_desc_form</field>
        </record>
        <record model="ir.ui.view" id="document_desc_view_list">
            <field name="model">document.description</field>
            <field name="inherit" ref="document.document_desc_tree"/>
            <field name="name">document_desc_list</field>
        </record>
        <record model="ir.action.act_window" id="act_document_request_relate_form">
            <field name="name">Document Request Lines</field>
            <field name="res_model">document.request.line</field>
            <field name="domain" eval="[('contract', '=', Eval('active_id'))]" pyson="1"></field>
        </record>
        <record model="ir.action.keyword" id="act_document_request_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_document_request_relate_form"/>
        </record>
        <record model="ir.action.keyword" id="report_doc_request_line_keyword">
            <field name="keyword">form_print</field>
            <field name="model">document.request.line,-1</field>
            <field name="action" ref="report_engine.letter_generation_wizard"/>
        </record>
    </data>
</tryton>
