<form>
    <label name="name"/>
    <field name="name"/>
    <label name="code"/>
    <field name="code"/>
    <label name="start_date"/>
    <field name="start_date" xexpand="0"/>
    <label name="end_date"/>
    <field name="end_date" xexpand="0"/>
    <notebook>
        <page string="Main" id="summary">
            <group id="data" colspan="4">
                <label name="company"/>
                <group id="small">
                    <field name="company"/>
                    <label name="currency"/>
                    <field name="currency"/>
                </group>
            </group>
            <field name="extra_data_def"/>
            <field name="extra_data" yfill="1" yexpand="1"/>
            <separator name="description" colspan="4"/>
            <field name="description" colspan="4"/>
        </page>
        <page string="Rules" id="managers">
            <notebook>
                <page string="Subscription" id="subscription">
                    <label name="subscription_behaviour"/>
                    <field name="subscription_behaviour"/>
                    <newline/>
                    <field name="options_required" colspan="2"/>
                    <field name="options_excluded" colspan="2"/>
                    <newline/>
                </page>
                <page name="ending_rule">
                    <field name="ending_rule" mode="form"/>
                </page>
            </notebook>
        </page>
        <page string="Administration" id="admin">
            <field name="tags" colspan="4"/>
        </page>
    </notebook>
</form>
