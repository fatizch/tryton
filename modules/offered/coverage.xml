<?xml version="1.0" encoding="utf-8"?>
<tryton>
  <data>
    <!-- ############################################################ -->
    <!-- Coverage -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="coverage_view_form">
      <field name="model">offered.option.description</field>
      <field name="type">form</field>
      <field name="inherit" ref="offered_view_form"/>
      <field name="name">coverage_form</field>
    </record>
    <record model="ir.ui.view" id="coverage_view_tree">
      <field name="model">offered.option.description</field>
      <field name="type">tree</field>
      <field name="inherit" ref="offered_view_tree"/>
      <field name="arch" type="xml"/>
    </record>
    <!-- Read / Write rule -->
    <record model="ir.rule.group" id="rule_group_coverage">
        <field name="model" search="[('model', '=', 'offered.option.description')]"/>
        <field name="global_p" eval="True"/>
    </record>
    <record model="ir.rule" id="rule_coverage_1">
      <field name="domain">[('company', 'in', [c.id for c in user.companies])]</field>
      <field name="rule_group" ref="rule_group_coverage"/>
    </record>
    <!-- Entry Point -->
    <record model="ir.action.act_window" id="act_coverage_form">
      <field name="name">Coverages</field>
      <field name="res_model">offered.option.description</field>
      <field name="domain">[("is_package", "=", False), ('company', '=', Eval('context', {}).get('company', False))]</field>
    </record>
    <record model="ir.action.act_window.view" id="act_coverage_tree_view">
      <field name="sequence" eval="10"/>
      <field name="view" ref="coverage_view_tree"/>
      <field name="act_window" ref="act_coverage_form"/>
    </record>
    <record model="ir.action.act_window.view" id="act_coverage_form_view2">
      <field name="sequence" eval="20"/>
      <field name="view" ref="coverage_view_form"/>
      <field name="act_window" ref="act_coverage_form"/>
    </record>
    <menuitem parent="menu_product" sequence="2" id="menu_coverage_form" icon="tryton-list" action="act_coverage_form"/>
    <!-- ############################################################ -->
    <!-- Package -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="package_view_form">
      <field name="model">offered.option.description</field>
      <field name="type">form</field>
      <field name="inherit" ref="coverage_view_form"/>
      <field name="arch" type="xml"/>
    </record>
    <record model="ir.ui.view" id="package_view_tree">
      <field name="model">offered.option.description</field>
      <field name="type">tree</field>
      <field name="inherit" ref="coverage_view_tree"/>
      <field name="arch" type="xml"/>
    </record>
    <!-- Entry Point -->
    <record model="ir.action.act_window" id="act_package_form">
      <field name="name">Packages</field>
      <field name="res_model">offered.option.description</field>
      <field name="domain">[("is_package", "=", True), ('company', '=', Eval('context', {}).get('company', False))]</field>
    </record>
    <record model="ir.action.act_window.view" id="act_package_tree_view">
      <field name="sequence" eval="10"/>
      <field name="view" ref="package_view_tree"/>
      <field name="act_window" ref="act_package_form"/>
    </record>
    <record model="ir.action.act_window.view" id="act_package_form_view2">
      <field name="sequence" eval="20"/>
      <field name="view" ref="package_view_form"/>
      <field name="act_window" ref="act_package_form"/>
    </record>
    <menuitem parent="menu_product" sequence="4" id="menu_package_form" icon="tryton-list" action="act_package_form"/>
  </data>
</tryton>
