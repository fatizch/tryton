<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>
        <!-- ###################### -->
        <!-- # Option Description # -->
        <!-- ###################### -->
        <record model="ir.ui.view" id="offered_view_form">
            <field name="model">offered.option.description</field>
            <field name="type">form</field>
            <field name="inherit" ref="offered.coverage_view_form"/>
            <field name="name">offered_option_eligibility_form</field>
        </record>
        <!-- ####################################### -->
        <!-- # Option Description Eligibility Rule # -->
        <!-- ####################################### -->
        <record model="ir.ui.view" id="option_description_eligibility_rule_view_form">
            <field name="model">offered.option.description.eligibility_rule</field>
            <field name="type">form</field>
            <field name="name">option_description_eligibility_rule_form</field>
        </record>
        <!-- ###################### -->
        <!-- # Method Definitions # -->
        <!-- ###################### -->
        <record model="ir.model.method" id="contract_check_eligibility">
            <field name="method_name">check_eligibility</field>
            <field name="name">Check Eligibility</field>
            <field name="model" search="[('model', '=', 'contract')]"/>
            <field name="priority">4</field>
        </record>
    </data>
</tryton>
