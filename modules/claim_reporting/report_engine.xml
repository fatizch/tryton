<tryton>
    <data noupdate="1">
        <record model="report.template" id="default_claim_reporting_template">
            <field name="name">Claim Reporting</field>
            <field name="code">claim_reporting</field>
            <field name="on_model" search="[('model', '=', 'claim.service')]"/>
            <field name="kind">claim_insurer_report</field>
            <field name="input_kind">libre_office_ods</field>
            <field name="process_method">libre_office</field>
            <field name="format_for_internal_edm">original</field>
            <field name="output_format">libre_office</field>
            <field name="modifiable_before_printing">False</field>
            <field name="split_reports">False</field>
            <field name="recipient_needed">True</field>
        </record>
        <record model="report.template.version" id="default_claim_reporting_fr_version">
            <field name="template" ref="claim_reporting.default_claim_reporting_template"/>
            <field name="name">template_claim_reporting_fr.ods</field>
            <field name="language" ref="ir.lang_fr"/>
            <field name="path">claim_reporting/reports/template_claim_reporting_fr.ods</field>
        </record>
    </data>
</tryton>
