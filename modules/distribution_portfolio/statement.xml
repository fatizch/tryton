<tryton>
    <data depends="account">
        <!-- Rule access to handle partitioning by portfolio -->
        <!-- ######### Move Lines  -->
        <record model="ir.rule.group" id="rule_group_portfolio_statement_line_group">
            <field name="model" search="[('model', '=', 'account.statement.line.group')]"/>
            <field name="global_p" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_portfolio_statement_line_group_1">
            <field name="domain"
                 eval="[[u'portfolio', u'in', Get(Eval(u'user', {}), u'network_portfolios', [])]]" pyson="1"/>
            <field name="rule_group" ref="rule_group_portfolio_statement_line_group"/>
        </record>
        <record model="ir.rule" id="rule_portfolio_statement_line_group_2">
            <field name="domain" eval="[[u'portfolio', u'=', None]]" pyson="1"/>
            <field name="rule_group" ref="rule_group_portfolio_statement_line_group"/>
        </record>
    </data>
</tryton>
