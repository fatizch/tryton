<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>
        <!--  *******************************************
              ************    Tax Version    ************
              *******************************************-->

        <record model="ir.ui.view" id="tax_version_view_tree">
            <field name="model">account.tax.description.version</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Tax Version" editable="bottom">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="kind"/>
                        <field name="value"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="tax_version_view_form">
            <field name="model">account.tax.description.version</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Tax Version">
                    <label name="start_date"/>
                    <field name="start_date"/>
                    <label name="end_date"/>
                    <field name="end_date"/>
                    <newline/>
                    <label name="kind"/>
                    <field name="kind"/>
                    <newline/>
                    <label name="value"/>
                    <field name="value"/>
                </form>
                ]]>
            </field>
        </record>

        <!--  *******************************************
              **************    Tax Desc   **************
              *******************************************-->
        <record model="ir.ui.view" id="tax_desc_view_tree">
            <field name="model">account.tax.description</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Tax Descriptor">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="current_rec_name"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="tax_desc_view_form">
            <field name="model">account.tax.description</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Tax Descriptor">
                    <group id="basic_data" col="2">
                        <label name="name"/>
                        <field name="name"/>
                        <label name="code"/>
                        <field name="code"/>
                        <label name="description"/>
                        <field name="description"/>
                    </group>
                    <newline/>
                    <group id="versions" yexpand="1" yfill="1">
                        <field name="versions" yexpand="1"/>
                    </group>
                </form>
                ]]>
            </field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_tax_form">
            <field name="name">Taxes</field>
            <field name="res_model">account.tax.description</field>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_tax_form_view1">
            <field name="sequence" eval="10" />
            <field name="view" ref="tax_desc_view_tree" />
            <field name="act_window" ref="act_tax_form" />
        </record>

        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_tax_form_view2">
            <field name="sequence" eval="20" />
            <field name="view" ref="tax_desc_view_form" />
            <field name="act_window" ref="act_tax_form" />
        </record>

        <!--  *******************************************
              ****************    Menu    ***************
              *******************************************-->

        <menuitem name="Accounting" id="menu_account" sequence="30"
            icon="tryton-currency"/>

        <menuitem name="Taxes" parent="menu_account"
            id="menu_product_taxes" sequence="40" icon="tryton-preferences"
            action="act_tax_form"/>

        <!-- Moving Currency entry point -->
        <menuitem name="Currency" id="currency.menu_currency" sequence="100"
            icon="tryton-currency" parent="menu_account"/>
    </data>
</tryton>
