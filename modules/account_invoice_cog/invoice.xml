<?xml version="1.0"?>
<tryton>
    <data>
        <record model = "res.group" id = "group_invoice_read">
            <field name="name">Invoice consultation</field>
        </record>
        <record model="ir.model.access" id="access_invoice_read">
            <field name="model" search="[('model', '=', 'account.invoice')]"/>
            <field name="group" ref="group_invoice_read"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_invoice_line_read">
            <field name="model" search="[('model', '=', 'account.invoice.line')]"/>
            <field name="group" ref="group_invoice_read"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
    </data>
</tryton>

