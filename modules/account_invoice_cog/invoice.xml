<tryton>
    <data>
        <record model="res.group" id="group_invoice_read">
            <field name="name">Invoice consultation</field>
        </record>
        <record model="ir.model.access" id="access_invoice_read">
            <field name="model" search="[('model', '=', 'account.invoice')]"/>
            <field name="group" ref="group_invoice_read"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_invoice_line_read">
            <field name="model" search="[('model', '=', 'account.invoice.line')]"/>
            <field name="group" ref="group_invoice_read"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.ui.view" id="invoice_view_list">
            <field name="model">account.invoice</field>
            <field name="inherit" ref="account_invoice.invoice_view_tree"/>
            <field name="name">invoice_list</field>
        </record>
        <record model="ir.ui.view" id="invoice_view_form">
            <field name="model">account.invoice</field>
            <field name="inherit" ref="account_invoice.invoice_view_form"/>
            <field name="name">invoice_form</field>
        </record>
        <record model="ir.action.keyword" id="letter_generation_wizard">
            <field name="keyword">form_action</field>
            <field name="model">account.invoice,-1</field>
            <field name="action" ref="report_engine.letter_generation_wizard"/>
        </record>
        <menuitem id="account_invoice.menu_invoices" icon="invoice" name="Invoices"/>
        <menuitem id="account_invoice.menu_invoice_out_form" icon="invoice" action="account_invoice.act_invoice_out_form"/>
        <!-- ################ -->
        <!-- # Invoice Line # -->
        <!-- ################ -->
        <record model="ir.ui.view" id="invoice_line_view_form">
            <field name="model">account.invoice.line</field>
            <field name="inherit" ref="account_invoice.invoice_line_view_form"/>
            <field name="name">invoice_line_form</field>
        </record>
        <!-- ###################################### -->
        <!-- # Account Invoice Line - Account Tax # -->
        <!-- ###################################### -->
       <record model="ir.ui.view" id="invoice_line_tax_view_list">
           <field name="model">account.invoice.line-account.tax</field>
           <field name="type">tree</field>
           <field name="name">invoice_line_tax_list</field>
       </record>
       <record model="ir.ui.view" id="invoice_line_tax_view_form">
           <field name="model">account.invoice.line-account.tax</field>
           <field name="type">form</field>
           <field name="name">invoice_line_tax_form</field>
       </record>
    </data>
</tryton>
