<data>
    <xpath expr="/form/label[@name='type']" position="before">
        <label name="business_kind"/>
        <field name="business_kind"/>
    </xpath>
    <xpath expr="/form" position="replace_attributes">
        <form cursor="business_kind"/>
    </xpath>

    <xpath expr="/form/label[@name='party']" position="before">
        <newline/>
    </xpath>
    <xpath expr="//field[@name='lines']" position="replace">
        <group id="invoice_lines" colspan="6" yexpand="1" yfill="1">
            <field name="lines" colspan="6"
                view_ids="account_invoice.invoice_line_view_tree_sequence"/>
        </group>
    </xpath>
    <xpath expr="/form/label[@name='type']" position="replace"/>
    <xpath expr="/form/field[@name='type']" position="replace"/>
    <xpath expr="/form/notebook/page/group/group/group/button[@name='cancel']" position="replace"/>
    <xpath expr="/form/notebook/page/group/group/group/button[@name='pay']" position="replace"/>
    <xpath expr="/form" position="inside">
        <newline/>
        <group id="invisible">
            <button name="cancel" string="Cancel"
                confirm="Are you sure to cancel the invoice?"/>
            <button name="pay" string="Pay Cash"/>
        <field name="form_color"/>
        </group>
    </xpath>
</data>
