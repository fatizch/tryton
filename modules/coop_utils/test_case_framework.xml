      <field name="name">Test Case Launcher</field>
      <field name="wiz_name">coop_utils.test_case_wizard</field>
    </record>
    <menuitem name="Test Case Launcher" id="test_case_menu" sequence="100" parent="ir.menu_administration" action="act_test_case_wizard"/>
