<?xml version="1.0"?>
<tryton>
  <data>
    <!-- ############################################################ -->
    <!-- Menu -->
    <!-- ############################################################ -->
    <menuitem name="Test Case" id="menu_test_case" sequence="100" parent="ir.menu_administration"/>
    <!-- ############################################################ -->
    <!-- Test Case Model -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="test_case_model_form">
      <field name="model">coop_utils.test_case_model</field>
      <field name="type">form</field>
      <field name="name">test_case_model_form</field>
    </record>
    <!-- Entry Point -->
    <record model="ir.action.act_window" id="act_test_case_model">
      <field name="name">Test Case Parameters</field>
      <field name="res_model">coop_utils.test_case_model</field>
    </record>
    <record model="ir.action.act_window.view" id="act_test_case_model_view2">
      <field name="sequence" eval="10"/>
      <field name="view" ref="test_case_model_form"/>
      <field name="act_window" ref="act_test_case_model"/>
    </record>
    <menuitem parent="menu_test_case" sequence="1"
      action="act_test_case_model" id="menu_test_case_model"/>
    <!-- Data -->
    <record model="coop_utils.test_case_model" id="test_case_configuration">
      <field name="language" ref="ir.lang_fr"/>
    </record>
    <!-- ############################################################ -->
    <!-- Test Case Selector -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="test_case_selector_tree">
      <field name="model">coop_utils.test_case_selector</field>
      <field name="type">tree</field>
      <field name="name">test_case_selector_tree</field>
    </record>
    <!-- ############################################################ -->
    <!-- Select Test Case -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="select_test_cases_form">
      <field name="model">coop_utils.select_test_cases</field>
      <field name="type">form</field>
      <field name="name">select_test_cases_form</field>
    </record>
    <!-- ############################################################ -->
    <!-- Test Case File Selector -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="test_case_file_selector_tree">
      <field name="model">coop_utils.test_case_file_selector</field>
      <field name="type">tree</field>
      <field name="name">test_case_file_selector_tree</field>
    </record>
    <!-- ############################################################ -->
    <!-- Load Test Case Files -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="load_test_case_files_form">
      <field name="model">coop_utils.load_test_case_files</field>
      <field name="type">form</field>
      <field name="name">load_test_case_files_form</field>
    </record> 
    <!-- ############################################################ -->
    <!-- Test Case Wizard -->
    <!-- ############################################################ -->
    <record model="ir.action.wizard" id="act_test_case_wizard">
      <field name="name">Test Case Launcher</field>
      <field name="wiz_name">coop_utils.test_case_wizard</field>
    </record>
    <menuitem name="Test Case Launcher" id="test_case_menu" sequence="100" parent="menu_test_case" action="act_test_case_wizard"/>
  </data>
</tryton>
