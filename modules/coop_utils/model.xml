<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>
        <!--  *******************************************
              ************    Version Object    ************
              *******************************************-->

        <record model="ir.ui.view" id="version_object_view_tree">
            <field name="model">utils.version_object</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Version Object" editable="bottom">
                        <field name="start_date"/>
                        <field name="end_date"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="version_object_view_form">
            <field name="model">utils.version_object</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Version Object">
                    <label name="start_date"/>
                    <field name="start_date"/>
                    <label name="end_date"/>
                    <field name="end_date"/>
                    <newline/>
                </form>
                ]]>
            </field>
        </record>

        <!--  *******************************************
              *********    Versionned Object   **********
              *******************************************-->
        <record model="ir.ui.view" id="versionned_object_view_tree">
            <field name="model">utils.versionned_object</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Versionned Object">
                        <field name="current_rec_name"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="versionned_object_view_form">
            <field name="model">utils.versionned_object</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Versionned Object">
                    <group id="basic data" col="12">
                    </group>
                    <newline/>
                    <group id="versions" yexpand="1" yfill="1">
                        <field name="versions" yexpand="1"/>
                    </group>
                </form>
                ]]>
            </field>
        </record>
    </data>
</tryton>
