<?xml version="1.0"?>
<tryton>
    <data>
        <!-- Import Wizard -->
        <record model="ir.ui.view" id="file_selector_form">
          <field name="model">coop_utils.file_selector</field>
          <field name="type">form</field>
          <field name="name">file_selector_form</field>
        </record>
        <record model="ir.action.wizard" id="import_wizard">
            <field name="name">Import File</field>
            <field name="wiz_name">coop_utils.import_wizard</field>
        </record>
        <menuitem name="Import Wizard" id="menu_import_wizard" sequence="50"
            parent="ir.menu_administration" action="import_wizard"/>
        <!--  ******************************************* 
              *********   Table of table   ***********
              *******************************************-->
        <record model="ir.ui.view" id="table_of_table_view_tree">
            <field name="model">coop.table_of_table</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree>
                        <field name="name"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="table_of_table_view_tree_editable">
            <field name="model">coop.table_of_table</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree editable="bottom">
                        <field name="name"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="table_of_table_view_form">
            <field name="model">coop.table_of_table</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form col="8">
                        <label name="key"/>
                        <field name="key"/>
                        <label name="name"/>
                        <field name="name" colspan="5"/>
                        <newline/>
                        <field name="childs" colspan="8"
                            view_ids="coop_utils.table_of_table_view_tree_editable"/>
                    </form>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              *********   Dynamic Selection   ***********
              *******************************************-->
        <!-- Dynamic Selection tree view -->
        <record model="ir.ui.view" id="dyn_selection_view_tree">
            <field name="model">coop.dyn_selection</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                        <![CDATA[
                            <tree>
                                <field name="key"/>
                                <field name="name"/>
                            </tree>
                        ]]>
            </field>
        </record>

        <!-- Dynamic Selection form view -->
        <record model="ir.ui.view" id="dyn_selection_view_form">
            <field name="model">coop.dyn_selection</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Dynamic Selection">
                        <label name="key"/>
                        <field name="key"/>
                        <label name="name"/>
                        <field name="name"/>
                     </form>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              ************    Version Object    ************
              *******************************************-->

        <record model="ir.ui.view" id="version_object_view_tree">
            <field name="model">utils.version_object</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Version Object" editable="bottom">
                        <field name="start_date"/>
                        <field name="end_date"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="version_object_view_form">
            <field name="model">utils.version_object</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Version Object">
                    <label name="start_date"/>
                    <field name="start_date"/>
                    <label name="end_date"/>
                    <field name="end_date"/>
                    <newline/>
                </form>
                ]]>
            </field>
        </record>

        <!--  ******************************************* 
              *********    Versionned Object   **********
              *******************************************-->
        <record model="ir.ui.view" id="versionned_object_view_tree">
            <field name="model">utils.versionned_object</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Versionned Object">
                        <field name="current_rec_name"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="versionned_object_view_form">
            <field name="model">utils.versionned_object</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Versionned Object">
                    <group id="basic data" col="12">
                    </group>
                    <newline/>
                    <group id="versions" yexpand="1" yfill="1">
                        <field name="versions" yexpand="1"/>
                    </group>
                </form>
                ]]>
            </field>
        </record>
    </data>
</tryton>
