<tryton>
    <data>
        <record model="ir.ui.view" id="dunning_level_view_form">
            <field name="model">account.dunning.level</field>
            <field name="inherit" ref="account_dunning.dunning_level_view_form"/>
            <field name="name">dunning_level_form</field>
        </record>
        <record model="ir.ui.view" id="dunning_level_view_list">
            <field name="model">account.dunning.level</field>
            <field name="inherit" ref="account_dunning.dunning_level_view_list"/>
            <field name="name">dunning_level_list</field>
        </record>
        <record model="ir.ui.view" id="dunning_procedure_view_form">
            <field name="model">account.dunning.procedure</field>
            <field name="inherit" ref="account_dunning.dunning_procedure_view_form"/>
            <field name="name">dunning_procedure_form</field>
        </record>
        <record model="ir.ui.view" id="dunning_level_view_list_sequence">
            <field name="model">account.dunning.level</field>
            <field name="inherit" ref="account_dunning.dunning_level_view_list_sequence"/>
            <field name="name">dunning_level_list_sequence</field>
        </record>
        <record model="ir.ui.view" id="dunning_view_form">
            <field name="model">account.dunning</field>
            <field name="inherit" ref="account_dunning.dunning_view_form"/>
            <field name="name">dunning_form</field>
        </record>
        <record model="ir.ui.view" id="dunning_view_list">
            <field name="model">account.dunning</field>
            <field name="inherit" ref="account_dunning.dunning_view_list"/>
            <field name="name">dunning_list</field>
        </record>
    </data>
    <data noupdate="1">
        <record model="account.dunning.procedure" id="french_default_dunning_procedure">
            <field name="name">French Default Dunning Procedure</field>
            <field name="code">french_default_dunning_procedure</field>
            <field name="from_payment_date" eval="True"/>
        </record>
        <record model="account.dunning.level" id="legal_dunning_level">
            <field name="name">Legal Dunning</field>
            <field name="sequence" eval="1"/>
            <field name="procedure" ref="french_default_dunning_procedure"/>
            <field name="days" eval="20"/>
            <field name="days_from_previous_step" eval="True"/>
            <field name="not_mandatory">1</field>
            <field name="apply_for">manual</field>
        </record>
        <record model="account.dunning.level" id="formal_notice_level">
            <field name="name">Formal Notice</field>
            <field name="sequence" eval="2"/>
            <field name="procedure" ref="french_default_dunning_procedure"/>
            <field name="days" eval="40"/>
            <field name="apply_for">all</field>
        </record>
        <record model="account.dunning.level" id="contract_suspension_level">
            <field name="name">Contract Suspension</field>
            <field name="sequence" eval="3"/>
            <field name="procedure" ref="french_default_dunning_procedure"/>
            <field name="days" eval="30"/>
            <field name="days_from_previous_step" eval="True"/>
            <field name="contract_action">hold</field>
            <field name="apply_for">all</field>
        </record>
        <record model="account.dunning.level" id="void_contract_level">
            <field name="name">Void Contract</field>
            <field name="sequence" eval="4"/>
            <field name="procedure" ref="french_default_dunning_procedure"/>
            <field name="days" eval="10"/>
            <field name="days_from_previous_step">1</field>
            <field name="contract_action">terminate</field>
            <field name="apply_for">all</field>
        </record>
    </data>
    <data depends="account_dunning_report_engine">
        <record model="account.dunning.level" id="contract_insurance_invoice_dunning.legal_dunning_level">
            <field name="name">Legal Dunning</field>
            <field name="report_template" ref="account_dunning_report_engine.default_dunning_invoice_report_template_fr"/>
        </record>
        <record model="account.dunning.level" id="contract_insurance_invoice_dunning.formal_notice_level">
            <field name="name">Formal Notice</field>
            <field name="report_template" ref="account_dunning_report_engine.default_dunning_report_template_fr"/>
        </record>       
    </data>
</tryton>
