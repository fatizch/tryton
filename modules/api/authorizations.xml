<tryton>
    <data>
        <!-- ################ -->
        <!-- # Entry Points # -->
        <!-- ################ -->
        <record model="ir.ui.menu-res.group" id="menu_api_access_authorization">
            <field name="menu" ref="menu_open_ir_api_access"/>
            <field name="group" ref="res.group_admin"/>
        </record>
        <!-- ################ -->
        <!-- # Model Access # -->
        <!-- ################ -->
        <record model="ir.model.access" id="access_api_access">
            <field name="model" search="[('model', '=', 'ir.api.access')]"/>
            <field name="group" ref="res.group_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_api_access_default">
            <field name="model" search="[('model', '=', 'ir.api.access')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- ##################### -->
        <!-- # Default API Group # -->
        <!-- ##################### -->
        <record model="res.group" id="group_default_api">
            <field name="name">Full API Access</field>
        </record>
    </data>
</tryton>
