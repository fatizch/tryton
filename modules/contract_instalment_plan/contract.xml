<tryton>
    <data>
        <!-- ############ -->
        <!-- # Contract # -->
        <!-- ############ -->
        <record model="ir.ui.view" id="contract_view_tree">
            <field name="model">contract</field>
            <field name="inherit" ref="contract.contract_view_tree"/>
            <field name="name">contract_tree</field>
        </record>
         <record model="ir.ui.view" id="contract_view_form">
            <field name="model">contract</field>
            <field name="inherit" ref="contract.contract_view_form"/>
            <field name="name">contract_form</field>
        </record>
        <!--#######################################-->
        <!--# Relate Contract -> Instalment Plans #-->
        <!--#######################################-->
        <record model="ir.action.act_window" id="act_instalment_plan_relate_form">
            <field name="name">Instalment Plans</field>
            <field name="res_model">contract.instalment_plan</field>
            <field name="domain" eval="[('contract', 'in', Eval('active_ids'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_instalment_plan_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_instalment_plan_relate_form"/>
        </record>
    </data>
</tryton>
