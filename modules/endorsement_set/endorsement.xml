<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="endorsement_set_view_form">
            <field name="model">endorsement.set</field>
            <field name="type">form</field>
            <field name="name">endorsement_set_form</field>
        </record>
        <record model="ir.ui.view" id="endorsement_set_view_list">
            <field name="model">endorsement.set</field>
            <field name="type">tree</field>
            <field name="name">endorsement_set_list</field>
        </record>
        <record model="ir.ui.view" id="endorsement_view_form">
            <field name="model">endorsement</field>
            <field name="type">form</field>
            <field name="inherit" ref="endorsement.endorsement_view_form"/>
            <field name="name">endorsement_form</field>
        </record>
        <record model="ir.action.act_window" id="act_endorsement_set_form">
            <field name="name">Endorsements Sets</field>
            <field name="res_model">endorsement.set</field>
        </record>
        <record model="ir.action.act_window.view" id="act_endorsement_set_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="endorsement_set_view_list"/>
            <field name="act_window" ref="act_endorsement_set_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_endorsement_set_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="endorsement_set_view_form"/>
            <field name="act_window" ref="act_endorsement_set_form"/>
        </record>
        <record model="ir.ui.view" id="select_endorsement_set_decline_reason_view_form">
            <field name="model">endorsement.set.decline.select_reason</field>
            <field name="type">form</field>
            <field name="name">select_decline_reason_form</field>
        </record>
        <record model="ir.action.wizard" id="act_decline_set">
            <field name="name">Decline Set</field>
            <field name="wiz_name">endorsement.set.decline</field>
        </record>
        <menuitem parent="contract.menu_contract" sequence="20" id="menu_endorsement_set" icon="contract" action="act_endorsement_set_form"/>
        <!-- ################# -->
        <!-- # Configuration # -->
        <!-- ################# -->
        <record model="ir.sequence.type" id="sequence_type_number">
            <field name="name">Endorsement Set Number</field>
            <field name="code">endorsement_set_number</field>
        </record>
        <record model="ir.sequence" id="sequence_number">
            <field name="name">Endorsement Set Number Sequence</field>
            <field name="code">endorsement_set_number</field>
        </record>
        <record model="ir.sequence.type-res.group" id="sequence_type_number_group_admin">
            <field name="sequence_type" ref="sequence_type_number"/>
            <field name="group" ref="res.group_admin"/>
        </record>
        <record model="ir.sequence.type-res.group" id="sequence_type_number_group_offered_admin">
            <field name="sequence_type" ref="sequence_type_number"/>
            <field name="group" ref="offered.group_offered_admin"/>
        </record>
        <record model="endorsement.configuration" id="endorsement_configuration">
            <field name="endorsement_set_number_sequence" ref="sequence_number"/>
        </record>
        <record model="ir.ui.view" id="configuration_view_form">
            <field name="model">endorsement.configuration</field>
            <field name="type">form</field>
            <field name="inherit" ref="endorsement.endorsement_configuration_view_form"/>
            <field name="name">configuration_form</field>
        </record>
        <!-- ################# -->
        <!-- # Access Rights # -->
        <!-- ################# -->
        <record model="ir.model.access" id="endorsement_set_access">
            <field name="model" search="[('model', '=', 'endorsement.set')]"/>
            <field name="group" ref="endorsement.group_endorsement_super_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.model.access" id="endorsement_set_access_user">
            <field name="model" search="[('model', '=', 'endorsement.set')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
    </data>
</tryton>
