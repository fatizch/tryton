<?xml version="1.0"?>
<form string="Claim">
  <label name="name"/>
  <field name="name"/>
  <label name="status"/>
  <group id="status" col="5">
    <field name="status"/>
    <label name="reopened_reason"/>
    <field name="reopened_reason"/>
    <label name="sub_status"/>
    <field name="sub_status"/>
  </group>
  <newline/>
  <label name="declaration_date"/>
  <field name="declaration_date"/>
  <label name="end_date"/>
  <field name="end_date"/>
  <newline/>
  <label name="claimant"/>
  <field name="claimant"/>
  <newline/>
  <notebook>
    <page string="Losses" id="losses">
      <field name="losses" group="multi_losses" mode="tree" view_ids="insurance_claim.loss_simple_tree" xexpand="0" xfill="0"/>
      <field name="losses" group="multi_losses" mode="form" relation="ins_claim.loss" relation_field="claim" view_ids="insurance_claim.loss_view_form"/>
      <field name="losses" group="multi_losses" mode="form" relation="ins_contract.delivered_service" relation_field="loss" view_ids="insurance_claim.delivered_service_view_form"/>
      <field name="losses" group="multi_losses" mode="form" relation="ins_claim.indemnification" relation_field="delivered_service" view_ids="insurance_claim.indemnification_view_form"/>
    </page>
    <page string="Documents" id="documents">
      <field name="documents" xexpand="1" xfill="1" yexpand="1" yfill="1" mode="form" />
    </page>
    <page string="History" id="History">
      <field name="claim_history" colspan="4"/>
    </page>
  </notebook>
</form>
