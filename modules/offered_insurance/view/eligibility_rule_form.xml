<?xml version="1.0" encoding="utf-8"?>
<data>
    <xpath expr="/form" position="replace_attributes">
        <form string="Eligibility rule"/>
    </xpath>
    <xpath expr="/form/field[@name='rule']" position="after">
        <group id="sub_elem" string="Covered Element" colspan="4"
            states="{'invisible': Eval('offered_kind') != 'offered.option.description'}">
            <group id="sub_elem_config_kind" colspan="2">
                <label name="sub_elem_config_kind" xfill="1"/>
                <field name="sub_elem_config_kind" xfill="1" xexpand="0"/>
            </group>
            <newline/>
            <group id="sub_simple" colspan="4"
                states="{'invisible': Eval('sub_elem_config_kind') != 'simple'}">
            </group>
            <group id="sub_rule" colspan="4"
                states="{'invisible': Eval('sub_elem_config_kind') != 'advanced'}">
                <label name="sub_elem_rule"/>
                <field name="sub_elem_rule"/>
                <label name="sub_elem_rule_extra_data"/>
                <field name="sub_elem_rule_extra_data"/>
            </group>
        </group>
    </xpath>
    <xpath expr="/form" position="inside">
        <field name="offered_kind"/>
    </xpath>
</data>
