<?xml version="1.0"?>
<tryton>
    <data>
        <!-- #################### -->
        <!-- # Endorsement Loan # -->
        <!-- #################### -->
        <record model="ir.ui.view" id="endorsement_loan_view_form">
            <field name="model">endorsement.loan</field>
            <field name="type">form</field>
            <field name="name">endorsement_loan_form</field>
        </record>
        <record model="ir.ui.view" id="endorsement_loan_view_list">
            <field name="model">endorsement.loan</field>
            <field name="type">tree</field>
            <field name="name">endorsement_loan_list</field>
        </record>
        <!-- ############### -->
        <!-- # Endorsement # -->
        <!-- ############### -->
        <record model="ir.ui.view" id="endorsement_view_form">
            <field name="model">endorsement</field>
            <field name="type">form</field>
            <field name="inherit" ref="endorsement.endorsement_view_form"/>
            <field name="name">endorsement_form</field>
        </record>
        <!-- Entry Point -->
        <record model="ir.action.act_window" id="act_endorsement">
            <field name="name">Endorsement</field>
            <field name="res_model">endorsement</field>
            <field name="domain">[('loans', '=', Eval('active_id'))]</field>
        </record>
        <record model="ir.action.act_window.view" id="act_endorsement_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="endorsement.endorsement_view_list"/>
            <field name="act_window" ref="act_endorsement"/>
        </record>
        <record model="ir.action.act_window.view" id="act_endorsement_view2">
            <field name="sequence" eval="10"/>
            <field name="view" ref="endorsement.endorsement_view_form"/>
            <field name="act_window" ref="act_endorsement"/>
        </record>
        <record model="ir.action.keyword" id="act_show_endorsements_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">loan,-1</field>
            <field name="action" ref="act_endorsement"/>
        </record>
        <!-- ###################################### -->
        <!-- # Endorsement Covered Element Option # -->
        <!-- ###################################### -->
        <record model="ir.ui.view" id="endorsement_covered_element_option_view_form">
            <field name="model">endorsement.contract.covered_element.option</field>
            <field name="type">form</field>
            <field name="inherit" ref="endorsement_insurance.endorsement_covered_element_option_view_form"/>
            <field name="name">endorsement_covered_element_option_form</field>
        </record>
        <!-- ########################## -->
        <!-- # Endorsement Loan Share # -->
        <!-- ########################## -->
        <record model="ir.ui.view" id="endorsement_loan_share_view_form">
            <field name="model">endorsement.loan.share</field>
            <field name="type">form</field>
            <field name="name">endorsement_loan_share_form</field>
        </record>
        <record model="ir.ui.view" id="endorsement_loan_share_view_list">
            <field name="model">endorsement.loan.share</field>
            <field name="type">tree</field>
            <field name="name">endorsement_loan_share_list</field>
        </record>
        <!-- ############################## -->
        <!-- # Endorsement Loan Increment # -->
        <!-- ############################## -->
        <record model="ir.ui.view" id="endorsement_loan_increment_view_form">
            <field name="model">endorsement.loan.increment</field>
            <field name="type">form</field>
            <field name="name">endorsement_loan_increment_form</field>
        </record>
        <record model="ir.ui.view" id="endorsement_loan_increment_view_list">
            <field name="model">endorsement.loan.increment</field>
            <field name="type">tree</field>
            <field name="name">endorsement_loan_increment_list</field>
        </record>
    </data>
</tryton>
