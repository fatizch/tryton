<?xml version="1.0"?>
<form string="Updated Loan Payments">
    <group id="one_loan" colspan="4" yexpand="1" yfill="1" states="{'invisible': Len(Eval('loans', [])) != Len([0])}">
        <field name="loans" colspan="4" mode="form" expand_toolbar="0"/>
    </group>
    <group id="multiple_loan" colspan="4" yexpand="1" yfill="1" states="{'invisible': Len(Eval('loans', [])) == Len([0])}">
        <field name="loans" colspan="4" mode="tree,form" expand_toolbar="0"/>
    </group>
</form>
