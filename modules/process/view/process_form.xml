<form col="4">
    <group id="global_part">
        <label name="fancy_name"/>
        <field name="fancy_name"/>
        <label name="technical_name"/>
        <field name="technical_name"/>
        <newline/>
        <label name="on_model"/>
        <field name="on_model"/>
    </group>
    <newline/>
    <notebook>
        <page string="Description" id="steps" col="4">
            <label name="display_steps_without_status"/>
            <field name="display_steps_without_status"/>
            <newline/>
            <group id="steps" colspan="2" yfill="1" yexpand="1">
                <field name="all_steps"/>
                <field name="steps_to_display"/>
            </group>
            <field name="transitions" yfill="1" colspan="2"/>
        </page>
        <page string="Views" id="views">
            <button string="Update Menu" icon="tryton-refresh" name="update_view" colspan="4"/>
            <notebook>
                <page string="View Description" id="main">
                    <group id="form_customization" col="2" yexpand="1" yfill="1">
                        <group id="customization_data" col="2" yexpand="1" yfill="1">
                            <label name="menu_icon"/>
                            <field name="menu_icon"/>
                            <label name="menu_name"/>
                            <field name="menu_name"/>
                            <label name="step_button_group_position"/>
                            <field name="step_button_group_position"/>
                            <label name="end_step_name"/>
                            <field name="end_step_name"/>
                        </group>
                    </group>
                </page>
                <page name="xml_header">
                    <field name="xml_header"/>
                </page>
                <page name="xml_footer">
                    <field name="xml_footer"/>
                </page>
                <page name="xml_tree">
                    <field name="xml_tree"/>
                </page>
            </notebook>
        </page>
        <page string="Filters" id="filters">
        </page>
        <page name="tags">
            <field name="tags" colspan="4"/>
        </page>
    </notebook>
</form>
