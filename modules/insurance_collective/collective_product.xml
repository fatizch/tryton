<?xml version="1.0"?>
<tryton>
    <data>
        <!-- *******************************************
            ************** Product **************
            ******************************************* -->
        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_product_form">
            <field name="name">Group Products</field>
            <field name="res_model">offered.product</field>
            <field name="domain">[('is_group', '=', True), ('kind', '=', 'insurance')]</field>
        </record>
        <record model="ir.ui.view" id="product_view_form">
            <field name="model">offered.product</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_product.product_view_form"/>
            <field name="name">collective_product_form</field>
        </record>
        <record model="ir.ui.view" id="product_view_tree">
            <field name="model">offered.product</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_product.product_view_tree"/>
            <field name="arch" type="xml"/>
        </record>
        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_product_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="product_view_form"/>
            <field name="act_window" ref="act_product_form"/>
        </record>
        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_product_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="product_view_tree"/>
            <field name="act_window" ref="act_product_form"/>
        </record>
        <menuitem parent="offered.menu_product" sequence="10"
            id="menu_product_form" icon="tryton-list" action="act_product_form"/>
        <!-- form view -->
        <!-- /Product -->

        <!-- *******************************************
            ************* Coverage **************
            ******************************************* -->
        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_coverage_form">
            <field name="name">Group Coverages</field>
            <field name="res_model">offered.coverage</field>
            <field name="domain">[('is_group', '=', True), ('kind', '=', 'insurance')]</field>
        </record>
        <record model="ir.ui.view" id="coverage_view_form">
            <field name="model">offered.coverage</field>
            <field name="type">form</field>
            <field name="inherit" ref="offered.coverage_view_form"/>
            <field name="name">collective_coverage_form</field>
        </record>
        <record model="ir.ui.view" id="coverage_view_tree">
            <field name="model">offered.coverage</field>
            <field name="type">tree</field>
            <field name="inherit" ref="offered.coverage_view_tree"/>
            <field name="arch" type="xml"/>
        </record>
        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_coverage_tree_view">
            <field name="sequence" eval="30"/>
            <field name="view" ref="coverage_view_tree"/>
            <field name="act_window" ref="act_coverage_form"/>
        </record>

        <!-- View for the edition or the Form of coverage -->
        <record model="ir.action.act_window.view" id="act_coverage_form_view">
            <field name="sequence" eval="40"/>
            <field name="view" ref="coverage_view_form"/>
            <field name="act_window" ref="act_coverage_form"/>
        </record>

        <menuitem parent="offered.menu_product" sequence="20"
            id="menu_coverage_form" icon="tryton-list" action="act_coverage_form"/>
        <!--/Coverage -->
        <menuitem parent="insurance_contract.menu_contract" name="Group"
            id="menu_group" sequence="20"/>
    </data>
</tryton>
