<tryton>
    <data>
        <!-- Buttons -->
        <record model="ir.model.button-res.group" id="button_contract_button_renew_contract_manage">
            <field name="button" ref="button_contract_button_renew"/>
            <field name="group" ref="contract.group_contract_manage"/>
        </record>
        <record model="ir.model.button-res.group" id="button_contract_button_decline_renewal_contract_manage">
            <field name="button" ref="button_contract_button_decline_renewal"/>
            <field name="group" ref="contract.group_contract_manage"/>
        </record>
        <!-- Product Management Group -->
        <record model="ir.model.access" id="offered_product_term_renewal_rule_product_management_group">
            <field name="model" search="[('model', '=', 'offered.product.term_renewal_rule')]"/>
            <field name="group" ref="offered.group_product_manage"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <!-- Contract Term Renewal Default Access -->
        <record model="ir.model.access" id="access_offered_product_term_renewal_rule">
            <field name="model" search="[('model', '=', 'offered.product.term_renewal_rule')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
    </data>
</tryton>
