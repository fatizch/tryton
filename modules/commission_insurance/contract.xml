<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="contract_view_form">
            <field name="model">contract</field>
            <field name="type">form</field>
            <field name="inherit" ref="contract.contract_view_form"/>
            <field name="name">contract_form</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Commission relate on contract ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.act_window" id="act_commission_contract_relate_form">
            <field name="name">Commissions</field>
            <field name="res_model">commission</field>
            <field name="domain" eval="[('commissioned_contract', '=', Eval('active_id'))]" pyson="1"/>
            <field name="search_value" eval="[('amount', '!=', 0)]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_commission_contract_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_commission_contract_relate_form"/>
        </record>
    </data>
</tryton>
