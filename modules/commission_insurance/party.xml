<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="party_view_form">
            <field name="model">party.party</field>
            <field name="type">form</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="name">party_form</field>
        </record>
        <record model="ir.ui.view" id="party_view_tree">
            <field name="model">party.party</field>
            <field name="type">tree</field>
            <field name="inherit" ref="party.party_view_tree"/>
            <field name="name">party_tree</field>
        </record>
        <record model="ir.ui.view" id="broker_view_list">
            <field name="model">party.party</field>
            <field name="type">tree</field>
            <field name="name">broker_list</field>
        </record>
        <menuitem parent="commission.menu_commission" sequence="20" id="menu_commission_insurer_form" icon="insurer" action="offered_insurance.act_insurer_form"/>
        <record model="ir.action.act_window" id="act_broker_commissioned_contract_relate_form">
            <field name="name">Commissioned Contracts</field>
            <field name="res_model">contract</field>
            <field name="domain" eval="[('agent.party.network', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_broker_commissioned_contract_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">distribution.network,-1</field>
            <field name="action" ref="act_broker_commissioned_contract_relate_form"/>
        </record>
	<record model="ir.action.act_window" id="act_commission_aggregated_distribution_relate_form">
	    <field name="name">Aggregated commissions</field>
	    <field name="res_model">commission.aggregated</field>
	    <field name="domain" eval="[('broker', 'in', Eval('active_ids'))]" pyson="1"/>
	</record>

        <record model="ir.action.keyword" id="act_commission_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">distribution.network,-1</field>
            <field name="action" ref="act_commission_aggregated_distribution_relate_form"/>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Broker entry point ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.act_window" id="act_broker_form">
            <field name="name">Brokers</field>
            <field name="res_model">party.party</field>
            <field name="domain" eval="[('is_broker', '=', True)]" pyson="1"/>
            <field name="search_value"></field>
        </record>
        <record model="ir.action.act_window.view" id="act_broker_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="broker_view_list"/>
            <field name="act_window" ref="act_broker_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_broker_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="party.party_view_form"/>
            <field name="act_window" ref="act_broker_form"/>
        </record>
        <menuitem parent="commission.menu_commission" action="act_broker_form"
            id="menu_broker" sequence="19" icon="coog-broker"/>
        <!-- ######################################## -->
        <!-- # Display Commissions Synthesis Wizard # -->
        <!-- ######################################## -->
        <record model="ir.action.wizard" id="act_commission_synthesis_display">
            <field name="name">Commissions Synthesis</field>
            <field name="wiz_name">commission.synthesis</field>
        </record>
    </data>
</tryton>
