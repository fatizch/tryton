<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="invoice_line_view_form">
            <field name="model">account.invoice.line</field>
            <field name="type">form</field>
            <field name="inherit" ref="account_invoice.invoice_line_view_form"/>
            <field name="name">invoice_line_form</field>
        </record>
        <menuitem parent="commission.menu_commission" name="Commission Invoices" id="menu_commission_invoice" sequence="25"/>
        <record model="ir.action.act_window" id="account_invoice.act_invoice_in_invoice_form">
            <field name="domain" eval="[('type', '=', 'in_invoice'), ('business_kind', '!=', 'insurer_invoice'), ('business_kind', '!=', 'broker_invoice')]" pyson="1"/>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Broker Invoices ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.act_window" id="act_invoice_broker_invoice_form">
            <field name="name">Broker Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="domain" eval="[('business_kind', '=', 'broker_invoice')]" pyson="1"/>
            <field name="search_value"></field>
        </record>
        <record model="ir.action.act_window.view" id="act_invoice_broker_invoice_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="account_invoice.invoice_view_tree"/>
            <field name="act_window" ref="act_invoice_broker_invoice_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_invoice_broker_invoice_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="account_invoice.invoice_view_form"/>
            <field name="act_window" ref="act_invoice_broker_invoice_form"/>
        </record>
        <menuitem parent="menu_commission_invoice" action="act_invoice_broker_invoice_form"
            id="menu_invoice_broker_invoice" sequence="20"/>
        <!-- ############################################################ -->
        <!-- ########### Insurer Invoices ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.act_window" id="act_invoice_insurer_invoice_form">
            <field name="name">Insurer Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="domain" eval="[('business_kind', '=', 'insurer_invoice')]" pyson="1"/>
            <field name="search_value"></field>
        </record>
        <record model="ir.action.act_window.view" id="act_invoice_insurer_invoice_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="account_invoice.invoice_view_tree"/>
            <field name="act_window" ref="act_invoice_insurer_invoice_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_invoice_insurer_invoice_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="account_invoice.invoice_view_form"/>
            <field name="act_window" ref="act_invoice_insurer_invoice_form"/>
        </record>
        <menuitem parent="menu_commission_invoice" action="act_invoice_insurer_invoice_form"
            id="menu_invoice_insurer_invoice" sequence="20"/>
        <!-- ################################### -->
        <!-- ########### Commissions ########### -->
        <!-- ################################### -->
        <record model="ir.action.act_window" id="commission.act_commission_relate">
            <field name="active" eval="False"/>
        </record>
        <record model="ir.action.act_window" id="commission.act_commission_from_relate">
            <field name="active" eval="False"/>
        </record>
        <!-- ################################### -->
        <!-- ######## Received premiums ######## -->
        <!-- ################################### -->
        <record model="ir.action.act_window" id="act_received_premiums_relate">
            <field name="name">Received Premiums</field>
            <field name="res_model">account.move.line</field>
            <field name="domain"
                eval="[('principal_invoice_line.invoice', 'in', Eval('active_ids'))]"
                pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_received_premiums_relate_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="account_cog.move_line_party_balance_view_list"/>
            <field name="act_window" ref="act_received_premiums_relate"/>
        </record>
            <record model="ir.action.act_window.view" id="act_received_premiums_relate_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="account_cog.move_line_party_balance_view_form"/>
            <field name="act_window" ref="act_received_premiums_relate"/>
        </record>
        <record model="ir.action.keyword" id="act_received_premiums_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">account.invoice,-1</field>
            <field name="action" ref="act_received_premiums_relate"/>
        </record>
    </data>
</tryton>
