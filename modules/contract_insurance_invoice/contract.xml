<?xml version="1.0"?>
<tryton>
    <data>
        <!-- ############ -->
        <!-- # Contract # -->
        <!-- ############ -->
        <record model="ir.ui.view" id="contract_view_form">
            <field name="model">contract</field>
            <field name="inherit" ref="contract.contract_view_form"/>
            <field name="name">contract_form</field>
        </record>
        <!-- ################################## -->
        <!-- ########### sub status ########### -->
        <!-- ################################## -->
        <record model="ir.ui.view" id="sub_status_view_form">
            <field name="model">contract.sub_status</field>
            <field name="inherit" ref="contract.sub_status_view_form"/>
            <field name="name">sub_status_form</field>
        </record>
        <!-- ################################ -->
        <!-- # Contract Billing Information # -->
        <!-- ################################ -->
        <record model="ir.ui.view" id="contract_billing_information_view_list">
            <field name="model">contract.billing_information</field>
            <field name="type">tree</field>
            <field name="name">contract_billing_information_list</field>
        </record>
        <record model="ir.ui.view" id="contract_billing_information_view_form">
            <field name="model">contract.billing_information</field>
            <field name="type">form</field>
            <field name="name">contract_billing_information_form</field>
        </record>
        <record model="ir.ui.view" id="contract_billing_information_without_date_view_form">
            <field name="model">contract.billing_information</field>
            <field name="type">form</field>
            <field name="name">contract_billing_information_without_date_form</field>
        </record>
        <!-- ########### -->
        <!-- # Premium # -->
        <!-- ########### -->
        <record model="ir.ui.view" id="premium_view_form">
            <field name="model">contract.premium</field>
            <field name="inherit" ref="premium.premium_view_form"/>
            <field name="name">premium_form</field>
        </record>
        <record model="ir.ui.view" id="contract_view_list">
            <field name="model">contract</field>
            <field name="inherit" ref="contract.contract_view_tree"/>
            <field name="name">contract_list</field>
        </record>
        <!-- #################### -->
        <!-- # Contract Invoice # -->
        <!-- #################### -->
        <record model="ir.ui.view" id="contract_invoice_view_list">
            <field name="model">contract.invoice</field>
            <field name="type">tree</field>
            <field name="name">contract_invoice_list</field>
        </record>
        <record model="ir.ui.view" id="contract_invoice_view_form">
            <field name="model">contract.invoice</field>
            <field name="type">form</field>
            <field name="name">contract_invoice_form</field>
        </record>
        <record model="ir.action.act_window" id="act_premium_notice_form">
            <field name="name">Premium Notices</field>
            <field name="res_model">account.invoice</field>
            <field name="domain" eval="[('contract', 'in', Eval('active_ids'))]" pyson="1"/>
            <field name="order" eval="[('start', 'DESC')]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_invoice_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="premium_notice_view_list"/>
            <field name="act_window" ref="act_premium_notice_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_invoice_view2">
            <field name="sequence" eval="10"/>
            <field name="view" ref="invoice_view_form"/>
            <field name="act_window" ref="act_premium_notice_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_invoice_domain_pending">
            <field name="name">Pending</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state', 'in', ('posted', 'validated'))]" pyson="1"/>
            <field name="act_window" ref="act_premium_notice_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_invoice_domain_paid">
            <field name="name">Paid</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('state', '=', 'paid')]" pyson="1"/>
            <field name="act_window" ref="act_premium_notice_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_invoice_domain_canceled">
            <field name="name">Canceled</field>
            <field name="sequence" eval="30"/>
            <field name="domain" eval="[('state', '=', 'cancel')]" pyson="1"/>
            <field name="act_window" ref="act_premium_notice_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_invoice_domain_all">
            <field name="name">All</field>
            <field name="sequence" eval="99"/>
            <field name="act_window" ref="act_premium_notice_form"/>
        </record>
        <record model="ir.action.keyword" id="act_premium_notice_form_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_premium_notice_form"/>
        </record>
        <record model="ir.ui.view" id="invoice_start_view_form">
            <field name="model">contract.do_invoice.start</field>
            <field name="type">form</field>
            <field name="name">invoice_start_form</field>
        </record>
        <record model="ir.action.wizard" id="act_invoice">
            <field name="name">Invoice Contracts</field>
            <field name="wiz_name">contract.do_invoice</field>
            <field name="model">contract</field>
        </record>
        <record model="ir.action.keyword" id="act_invoice_keyword1">
            <field name="keyword">form_action</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_invoice"/>
        </record>
        <!-- ###################### -->
        <!-- # Method Definitions # -->
        <!-- ###################### -->
        <record model="ir.model.method" id="calculate_prices_after_renewal">
            <field name="method_name">calculate_prices_after_renewal</field>
            <field name="name">Calculate Prices After Renewal</field>
            <field name="model" search="[('model', '=', 'contract')]"/>
            <field name="priority">10</field>
        </record>
        <record model="ir.model.method" id="rebill_after_renewal">
            <field name="method_name">rebill_after_renewal</field>
            <field name="name">Rebill After Renewal</field>
            <field name="model" search="[('model', '=', 'contract')]"/>
            <field name="priority">15</field>
        </record>
    </data>
</tryton>
