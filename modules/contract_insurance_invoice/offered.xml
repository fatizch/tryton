<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="offered_billing_mode_view_form">
            <field name="model">offered.billing_mode</field>
            <field name="type">form</field>
            <field name="name">offered_billing_mode_form</field>
        </record>
        <record model="ir.ui.view" id="offered_billing_mode_view_list">
            <field name="model">offered.billing_mode</field>
            <field name="type">tree</field>
            <field name="name">offered_billing_mode_list</field>
        </record>
        <record model="ir.action.act_window" id="act_offered_billing_mode">
            <field name="name">Billing Choices</field>
            <field name="res_model">offered.billing_mode</field>
        </record>

        <record model="ir.ui.view" id="product-billing_mode_view_list">
            <field name="model">offered.product-offered.billing_mode</field>
            <field name="type">tree</field>
            <field name="name">product-billing_mode_list</field>
        </record>

        <record model="ir.ui.view" id="billing_mode-payment_term_view_list">
            <field name="model">offered.billing.mode-account.invoice.payment_term</field>
            <field name="type">tree</field>
            <field name="name">billing_mode-payment_term_list</field>
        </record>

        <record model="ir.action.act_window.view" id="act_offered_billing_mode_view1">
            <field name="sequence" eval="16"/>
            <field name="view" ref="offered_billing_mode_view_list"/>
            <field name="act_window" ref="act_offered_billing_mode"/>
        </record>
        <record model="ir.action.act_window.view" id="act_offered_billing_mode_view2">
            <field name="sequence" eval="16"/>
            <field name="view" ref="offered_billing_mode_view_form"/>
            <field name="act_window" ref="act_offered_billing_mode"/>
        </record>
        <menuitem parent="account.menu_account_configuration" sequence="20" action="act_offered_billing_mode" id="menu_offered_billing_mode"/>

        <record model="ir.ui.view" id="product_view_form">
            <field name="model">offered.product</field>
            <field name="inherit" ref="offered.product_view_form"/>
            <field name="name">product_form</field>
        </record>
        <record model="ir.ui.view" id="option_description_view_form">
            <field name="model">offered.option.description</field>
            <field name="inherit" ref="offered.coverage_view_form"/>
            <field name="name">option_description_form</field>
        </record>
        <record model="ir.ui.view" id="fee_description_view_form">
            <field name="model">account.fee.description</field>
            <field name="inherit" ref="account_cog.fee_description_view_form"/>
            <field name="name">fee_description_form</field>
        </record>
        <record model="ir.ui.view" id="tax_description_view_form">
            <field name="model">account.tax.description</field>
            <field name="inherit" ref="account_cog.tax_desc_view_form"/>
            <field name="name">tax_description_form</field>
        </record>
    </data>
</tryton>
