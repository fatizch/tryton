<?xml version="1.0"?>
<data>
    <xpath expr="/form/label[@name='description']" position="before">
        <label name="contract"/>
        <field name="contract"/>
        <label name="start"/>
        <field name="start"/>
        <label name="end"/>
        <field name="end"/>
    </xpath>
    <xpath expr="//label[@name='tax_amount']" position="before">
        <label name="base_amount" xalign="1.0" xexpand="1"/>
        <field name="base_amount" xalign="1.0" xexpand="0"/>
        <label name="fees" xalign="1.0" xexpand="1"/>
        <field name="fees" xalign="1.0" xexpand="0"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='payment']/field[@name='payment_lines']" position="replace">
        <field name="lines_to_pay" colspan="4" view_ids="account_cog.move_line_to_pay_view_list"/>
    </xpath>
</data>
