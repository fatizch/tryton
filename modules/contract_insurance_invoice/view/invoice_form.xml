<data>
    <xpath expr="/form/label[@name='description']" position="before">
        <label name="contract"/>
        <field name="contract"/>
        <label name="start"/>
        <field name="start"/>
        <label name="end"/>
        <field name="end"/>
    </xpath>
    <xpath expr="//group[@id='invoice_lines']" position="after">
        <group id="invoice_lines_insurance" colspan="6" yexpand="1" yfill="1">
            <field name="lines" colspan="6"
                view_ids="contract_insurance_invoice.invoice_line_sequence_view_list,contract_insurance_invoice.invoice_line_view_form"/>
        </group>
    </xpath>
    <xpath expr="//label[@name='tax_amount']" position="before">
        <label name="base_amount" xalign="1.0" xexpand="1"/>
        <field name="base_amount" xalign="1.0" xexpand="0"/>
        <label name="fees" xalign="1.0" xexpand="1"/>
        <field name="fees" xalign="1.0" xexpand="0"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='invoice']/group[@id='taxes_amount_state_buttons']/group[@id='amount_state_buttons']/group[@id='reconciled_state']/field[@name='state']" position="after">
        <label name="reconciliation_date"/>
        <field name="reconciliation_date"/>
    </xpath>
</data>
