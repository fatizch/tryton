<?xml version="1.0"?>
<form string="Invoice Line">
    <label name="invoice"/>
    <field name="invoice" colspan="3"/>
    <notebook>
        <page string="General" id="general">
            <label name="type"/>
            <field name="type"/>
            <newline/>
            <label name="description"/>
            <field name="description"/>
            <label name="origin"/>
            <field name="origin"/>
            <label name="account"/>
            <field name="account"/>
            <label name="amount"/>
            <field name="amount"/>
            <field name="taxes" colspan="4"/>
        </page>
        <page string="Notes" id="notes">
            <separator name="note" colspan="4"/>
            <field name="note" colspan="4" spell="If(Bool(Eval('_parent_invoice')), Get(Eval('_parent_invoice', {}), 'party_lang'), Eval('party_lang'))"/>
        </page>
    </notebook>
    <newline/>
    <field name="party_lang" invisible="1" colspan="4"/>
</form>
