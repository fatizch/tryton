<?xml version="1.0"?>
<tryton>
    <data>
        <!-- ############################## -->
        <!-- # Change Contract Start Date # -->
        <!-- ############################## -->
        <record model="ir.ui.view" id="endorsement_change_contract_start_date_view_form">
            <field name="model">endorsement.contract.change_start_date</field>
            <field name="type">form</field>
            <field name="name">endorsement_change_contract_start_date_form</field>
        </record>
        <!-- ########################## -->
        <!-- # Full Contract Revision # -->
        <!-- ########################## -->
        <record model="ir.ui.view" id="full_contract_revision_view_form">
            <field name="model">endorsement.contract.full_revision_start</field>
            <field name="type">form</field>
            <field name="name">full_contract_revision_form</field>
        </record>
        <!-- ###################### -->
        <!-- # Select Endorsement # -->
        <!-- ###################### -->
        <record model="ir.ui.view" id="select_endorsement_view_form">
            <field name="model">endorsement.start.select_endorsement</field>
            <field name="type">form</field>
            <field name="name">select_endorsement_form</field>
        </record>
        <record model="ir.ui.view" id="endorsement_summary_view_form">
            <field name="model">endorsement.start.select_endorsement</field>
            <field name="type">form</field>
            <field name="name">endorsement_summary_form</field>
        </record>
        <!-- ################### -->
        <!-- # Preview Changes # -->
        <!-- ################### -->
        <record model="ir.ui.view" id="preview_changes_view_form">
            <field name="model">endorsement.start.preview_changes</field>
            <field name="type">form</field>
            <field name="name">preview_changes_form</field>
        </record>
        <!-- ##################### -->
        <!-- # Start Endorsement # -->
        <!-- ##################### -->
        <record model="ir.action.wizard" id="act_start_endorsement">
            <field name="name">Start Endorsement</field>
            <field name="wiz_name">endorsement.start</field>
            <!-- <field name="window">True</field> -->
        </record>
        <record model="ir.action.keyword" id="act_start_endorsement_keyword_contract">
            <field name="keyword">form_action</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_start_endorsement"/>
        </record>
        <!-- We need different actions because the name must be different -->
        <record model="ir.action.wizard" id="act_resume_endorsement">
            <field name="name">Resume Endorsement</field>
            <field name="wiz_name">endorsement.start</field>
            <!-- <field name="window">True</field> -->
        </record>
        <record model="ir.action.keyword" id="act_resume_endorsement_keyword">
            <field name="keyword">form_action</field>
            <field name="model">endorsement,-1</field>
            <field name="action" ref="act_resume_endorsement"/>
        </record>
        <!-- ##################################### -->
        <!-- # Open Contract at Application Date # -->
        <!-- ##################################### -->
        <record model="ir.action.wizard" id="act_contract_open">
            <field name="name">Open Contract</field>
            <field name="wiz_name">endorsement.contract.open</field>
        </record>
        <!-- Relate to open contract at application date -->
        <record model="ir.action.act_window" id="act_open_contract_at_date">
            <field name="name">Contract</field>
            <field name="res_model">contract</field>
            <field name="window_name" eval="False"/>
            <field name="domain">[('id', 'in', Eval('contracts'))]</field>
            <field name="context">{'_datetime': Eval('application_date'), 'contract': Eval('contract')}</field>
        </record>
    </data>
</tryton>
