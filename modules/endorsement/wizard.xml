<?xml version="1.0" encoding="utf-8"?>
<tryton>
  <data>
    <!-- ############################################################ -->
    <!-- Endorsement Selection -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="wizard_launcher_selection_form">
      <field name="model">endorsement.wizard.selection</field>
      <field name="type">form</field>
      <field name="name">selection_form</field>
    </record>
    <!-- ############################################################ -->
    <!-- Endorsement Launcher -->
    <!-- ############################################################ -->
    <record model="ir.action.wizard" id="act_launcher">
      <field name="name">Endorsement Launcher</field>
      <field name="wiz_name">endorsement.wizard.launcher</field>
    </record>
    <record model="ir.action.keyword" id="act_launcher_keyword">
      <field name="keyword">form_action</field>
      <field name="model">contract,-1</field>
      <field name="action" ref="act_launcher"/>
    </record>
    <menuitem name="Start Endorsement" id="menu_launch_endorsement" parent="insurance_contract.menu_contract" action="act_launcher" sequence="10"/>
  </data>
</tryton>
