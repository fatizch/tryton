<?xml version="1.0"?>
<form string="Endorsement Group">
    <label name="effective_date"/>
    <field name="effective_date"/>
    <label name="definition"/>
    <field name="definition"/>
    <label name="state"/>
    <field name="state"/>
    <label name="applicant"/>
    <field name="applicant"/>
    <newline/>
    <group id="endorsements" colspan="2" yexpand="1" yfill="1">
        <field name="contract_endorsements"/>
    </group>
    <field name="endorsement_summary" colspan="2"/>
    <newline/>
    <group id="application" colspan="4">
        <group id="application_buttons" yfill="1">
            <button string="Apply" name="apply"/>
            <button string="Draft" name="draft"/>
        </group>
        <group id="application_info" xfill="0">
            <label name="application_date"/>
            <field name="application_date"/>
            <newline/>
            <label name="applied_by"/>
            <field name="applied_by"/>
        </group>
    </group>
</form>
