<form>
    <group id="async_info" colspan="4">
        <field name="current_async_task" invisible="1"/>
        <field name="async_task_state" invisible="1"/>
        <newline/>
        <field name="async_task_message" colspan="4"/>
        <field name="current_async_task" invisible="1"/>
    </group>
    <newline/>
    <label name="effective_date"/>
    <field name="effective_date"/>
    <label name="number"/>
    <field name="number"/>
    <label name="application_date"/>
    <field name="application_date"/>
    <label name="applied_by"/>
    <field name="applied_by"/>
    <label name="definition"/>
    <field name="definition"/>
    <label name="applicant"/>
    <field name="applicant"/>
    <label name="state"/>
    <field name="state"/>
    <label name="generated_by"/>
    <field name="generated_by"/>
    <newline/>
    <group id="endorsements" colspan="2" yexpand="1" yfill="1">
        <field name="contract_endorsements"/>
    </group>
    <field name="endorsement_summary" colspan="2" widget="richtext"/>
    <newline/>
    <group id="application" colspan="4">
        <group id="application_buttons" yfill="1">
            <button string="Apply Synchronous" name="apply_synchronous"/>
            <button string="Resume" name="start_endorsement"/>
        </group>
    </group>
    <group id="invisible" string="">
        <button string="Open Contract before Application" name="open_contract"/>
        <button string="Cancel" name="cancel"/>
    </group>
    <group id="invisible" string="">
        <button name="start_endorsement" string="Resume Endorsement"/>
    </group>
</form>
