<?xml version="1.0"?>
<form string="Select Endorsement">
    <label name="applicant"/>
    <field name="applicant"/>
    <label name="endorsement_definition"/>
    <field name="endorsement_definition" view_ids="endorsement.endorsement_definition_light_view_list"/>
    <newline/>
    <label name="effective_date"/>
    <field name="effective_date"/>
    <newline/>
    <label name="contract"/>
    <field name="contract"/>
    <label name="product"/>
    <field name="product"/>
    <newline/>
    <field name="endorsement"/>
    <newline/>
    <group id="filler" string="" colspan="4" yexpand="1" yfill="1">
    </group>
    <group id="warnings" string="" colspan="4" states="{'invisible': Not(Eval('contract_in_process', False))}">
        <image name="tryton-dialog-warning" xexpand="0" xfill="0"/>
        <label string="Selected Contract is currently in a process. You will not be able to apply / preview the endorsement while it's not completed" id="contrct_in_process_warning" yalign="0.0" xalign="0.0" xexpand="1" colspan="3"/>
        <newline/>
        <field name="contract_in_process"/>
    </group>
</form>
