<?xml version="1.0" encoding="utf-8"?>
<data>
    <xpath expr="/form" position="replace_attributes">
        <form string="Collective Rating Rule"/>
    </xpath>
    <xpath expr="/form/label[@name='config_kind']" position="before">
        <label name="rating_kind"/>
        <field name="rating_kind"/>
        <label name="index"/>
        <field name="index"/>
        <newline/>
    </xpath>
    <xpath expr="/form" position="inside">
        <group id="sub_rating_rules" states="{'invisible': Eval('rating_kind') != 'tranche'}" colspan="4" yexpand="1" yfill="1">
            <field name="sub_rating_rules" colspan="4" view_ids="life_billing_collective_fr.rating_rule_by_tranche_view_tree,life_billing_collective_fr.sub_rating_rule_view_form"/>
        </group>
        <group id="rates_by_index" states="{'invisible': Eval('rating_kind') != 'fare_class'}" colspan="4" yexpand="1" yfill="1">
            <field name="sub_rating_rules" colspan="4" view_ids="life_billing_collective_fr.rating_rule_by_fare_class_view_tree,life_billing_collective_fr.sub_rating_rule_view_form"/>
        </group>
    </xpath>
    <xpath expr="/form/label[@name='config_kind']" position="replace"/>
    <xpath expr="/form/field[@name='config_kind']" position="replace"/>
</data>
