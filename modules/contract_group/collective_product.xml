<?xml version="1.0" encoding="utf-8"?>
<tryton>
  <data>
    <!-- ############################################################ -->
    <!-- Product -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="product_view_form">
      <field name="model">offered.product</field>
      <field name="type">form</field>
      <field name="inherit" ref="offered.product_view_form"/>
      <field name="name">product_form</field>
    </record>
    <record model="ir.ui.view" id="product_view_tree">
      <field name="model">offered.product</field>
      <field name="type">tree</field>
      <field name="inherit" ref="offered.product_view_tree"/>
      <field name="arch" type="xml"/>
    </record>
    <!-- Entry Point -->
    <record model="ir.action.act_window" id="act_product_form">
      <field name="name">Group Products</field>
      <field name="res_model">offered.product</field>
      <field name="domain">[('is_group', '=', True), ('kind', '=', 'insurance'), ('company', '=', Eval('context', {}).get('company', False))]</field>
    </record>
    <record model="ir.action.act_window.view" id="act_product_form_view">
      <field name="sequence" eval="20"/>
      <field name="view" ref="product_view_form"/>
      <field name="act_window" ref="act_product_form"/>
    </record>
    <record model="ir.action.act_window.view" id="act_product_tree_view">
      <field name="sequence" eval="10"/>
      <field name="view" ref="product_view_tree"/>
      <field name="act_window" ref="act_product_form"/>
    </record>
    <menuitem parent="offered.menu_product" sequence="10" id="menu_product_form" icon="tryton-list" action="act_product_form"/>
    <!-- ############################################################ -->
    <!-- Option Description -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="coverage_view_form">
      <field name="model">offered.option.description</field>
      <field name="type">form</field>
      <field name="inherit" ref="offered.coverage_view_form"/>
      <field name="name">option_description_form</field>
    </record>
    <record model="ir.ui.view" id="coverage_view_tree">
      <field name="model">offered.option.description</field>
      <field name="type">tree</field>
      <field name="inherit" ref="offered.coverage_view_tree"/>
      <field name="arch" type="xml"/>
    </record>
    <!-- Entry Point -->
    <record model="ir.action.act_window" id="act_coverage_form">
      <field name="name">Group Coverages</field>
      <field name="res_model">offered.option.description</field>
      <field name="domain">[('is_group', '=', True), ('kind', '=', 'insurance'), ('company', '=', Eval('context', {}).get('company', False))]</field>
    </record>
    <record model="ir.action.act_window.view" id="act_coverage_tree_view">
      <field name="sequence" eval="30"/>
      <field name="view" ref="coverage_view_tree"/>
      <field name="act_window" ref="act_coverage_form"/>
    </record>
    <record model="ir.action.act_window.view" id="act_coverage_form_view">
      <field name="sequence" eval="40"/>
      <field name="view" ref="coverage_view_form"/>
      <field name="act_window" ref="act_coverage_form"/>
    </record>
    <menuitem parent="offered.menu_product" sequence="20" id="menu_coverage_form" icon="tryton-list" action="act_coverage_form"/>
    <!-- ############################################################ -->
    <!-- Package -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="package_view_form">
      <field name="model">offered.option.description</field>
      <field name="type">form</field>
      <field name="inherit" ref="offered.coverage_view_form"/>
      <field name="arch" type="xml"/>
    </record>
    <record model="ir.ui.view" id="package_view_tree">
      <field name="model">offered.option.description</field>
      <field name="type">tree</field>
      <field name="inherit" ref="offered.coverage_view_tree"/>
      <field name="arch" type="xml"/>
    </record>
    <!-- Entry Point -->
    <record model="ir.action.act_window" id="act_package_form">
      <field name="name">Group Packages</field>
      <field name="res_model">offered.option.description</field>
      <field name="domain">[("is_package", "=", True), ('is_group', '=', True), ('kind', '=', 'insurance'), ('company', '=', Eval('context', {}).get('company', False))]</field>
    </record>
    <record model="ir.action.act_window.view" id="act_package_tree_view">
      <field name="sequence" eval="10"/>
      <field name="view" ref="package_view_tree"/>
      <field name="act_window" ref="act_package_form"/>
    </record>
    <record model="ir.action.act_window.view" id="act_package_form_view2">
      <field name="sequence" eval="20"/>
      <field name="view" ref="package_view_form"/>
      <field name="act_window" ref="act_package_form"/>
    </record>
    <menuitem parent="offered.menu_product" sequence="5" id="menu_package_form" icon="tryton-list" action="act_package_form"/>
    <menuitem parent="contract.menu_contract" name="Group" id="menu_group" sequence="20"/>
  </data>
</tryton>
