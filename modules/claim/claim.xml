<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- ########### User group ##################################### -->
        <!-- ############################################################ -->
        <record model="res.group" id="group_claim_admin">
            <field name="name">Claim Administration</field>
        </record>
        <record model="res.user-res.group" id="user_admin_group_claim_admin">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_claim_admin"/>
        </record>
        <record model="res.user-res.group" id="user_trigger_group_claim_admin">
            <field name="user" ref="res.user_trigger"/>
            <field name="group" ref="group_claim_admin"/>
        </record>
        <record model="res.group" id="group_claim">
            <field name="name">Claim</field>
        </record>
        <record model="res.user-res.group" id="user_admin_group_claim">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_claim"/>
        </record>
        <record model="res.user-res.group" id="user_trigger_group_claim">
            <field name="user" ref="res.user_trigger"/>
            <field name="group" ref="group_claim"/>
        </record>
        <menuitem name="Claim" id="menu_claim" sequence="15" icon="claim"/>
        <menuitem name="Configuration" parent="menu_claim" sequence="20" id="menu_claim_configuration" icon="tryton-preferences"/>
        <record model="ir.ui.menu-res.group" id="menu_configuration_group_claim_admin">
            <field name="menu" ref="menu_claim_configuration"/>
            <field name="group" ref="group_claim_admin"/>
        </record>
        <!-- ############################################################ -->
        <!-- Claim -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="claim_view_form">
            <field name="model">claim</field>
            <field name="type">form</field>
            <field name="name">claim_form</field>
        </record>
        <record model="ir.ui.view" id="claim_view_list">
            <field name="model">claim</field>
            <field name="type">tree</field>
            <field name="name">claim_list</field>
        </record>
        <!-- Read / Write rule -->
        <record model="ir.rule.group" id="rule_group_claim">
            <field name="model" search="[('model', '=', 'claim')]"/>
            <field name="global_p" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_claim_1">
            <field name="domain" eval="[('company', '=', Eval('user', {}).get('company', None))]" pyson="1"/>
            <field name="rule_group" ref="rule_group_claim"/>
        </record>
        <!-- Entry Point -->
        <record model="ir.action.act_window" id="act_claim_form">
            <field name="name">Claims</field>
            <field name="res_model">claim</field>
            <field name="domain" eval="[('company', '=', Eval('context', {}).get('company', None))]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_claim_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="claim_view_list"/>
            <field name="act_window" ref="act_claim_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_claim_domain_open">
            <field name="name">Open</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="['OR', ('status', '=', 'open'), ('status', '=', 'reopened')]" pyson="1"/>
            <field name="act_window" ref="act_claim_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_claim_domain_closed">
            <field name="name">Closed</field>
            <field name="sequence" eval="30"/>
            <field name="domain" eval="[('status', '=', 'closed')]" pyson="1"/>
            <field name="act_window" ref="act_claim_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_claim_domain_all">
            <field name="name">All</field>
            <field name="sequence" eval="40"/>
            <field name="domain" eval="[]" pyson="1"/>
            <field name="act_window" ref="act_claim_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_claim_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="claim_view_form"/>
            <field name="act_window" ref="act_claim_form"/>
        </record>
        <menuitem parent="menu_claim" sequence="4" id="menu_claim_form" icon="claim" action="act_claim_form"/>
        <!-- ############################################################ -->
        <!-- Claim Substatus -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="sub_status_view_list">
            <field name="model">claim.sub_status</field>
            <field name="type">tree</field>
            <field name="name">claim_sub_status_list</field>
        </record>
        <record model="ir.ui.view" id="sub_status_view_form">
            <field name="model">claim.sub_status</field>
            <field name="type">form</field>
            <field name="name">claim_sub_status_form</field>
        </record>
        <record model="ir.action.act_window" id="act_sub_status_form">
            <field name="name">Sub-status</field>
            <field name="res_model">claim.sub_status</field>
        </record>
        <record model="ir.action.act_window.view" id="act_sub_status_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="sub_status_view_list"/>
            <field name="act_window" ref="act_sub_status_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_sub_status_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="sub_status_view_form"/>
            <field name="act_window" ref="act_sub_status_form"/>
        </record>
        <menuitem parent="claim.menu_claim_configuration" id="sub_status_form" icon="tryton-tree" action="act_sub_status_form"/>
        <!-- ############################################################ -->
        <!-- Loss -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="loss_view_list">
            <field name="model">claim.loss</field>
            <field name="type">tree</field>
            <field name="name">loss_list</field>
        </record>
        <record model="ir.ui.view" id="loss_view_form">
            <field name="model">claim.loss</field>
            <field name="type">form</field>
            <field name="priority" eval="10"/>
            <field name="name">loss_form</field>
        </record>
        <record model="ir.ui.view" id="loss_without_service_view_form">
            <field name="model">claim.loss</field>
            <field name="type">form</field>
            <field name="name">loss_without_service_form</field>
        </record>
        <record model="ir.ui.view" id="loss_simple_list">
            <field name="model">claim.loss</field>
            <field name="type">tree</field>
            <field name="field_childs">multi_level_view</field>
            <field name="name">loss_simple_list</field>
        </record>
        <!--################################################################ -->
        <!-- Claim Service -->
        <!--################################################################ -->
        <record model="ir.ui.view" id="claim_service_view_form">
            <field name="model">claim.service</field>
            <field name="type">form</field>
            <field name="name">service_form</field>
        </record>
        <record model="ir.ui.view" id="claim_service_view_list">
            <field name="model">claim.service</field>
            <field name="type">tree</field>
            <field name="name">service_list</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Claim Service Extra_data ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="claim_service_extra_data_view_list">
            <field name="model">claim.service.extra_data</field>
            <field name="type">tree</field>
            <field name="name">claim_service_extra_data_list</field>
        </record>
        <record model="ir.ui.view" id="contract_extra_data_view_form">
            <field name="model">claim.service.extra_data</field>
            <field name="type">form</field>
            <field name="name">claim_service_extra_data_form</field>
        </record>
        <!--################################################################ -->
        <!-- Relate -->
        <!--################################################################ -->
        <record model="ir.action.act_window" id="act_claim_relate_form">
            <field name="name">Claims</field>
            <field name="res_model">claim</field>
            <field name="domain" eval="[('claimant', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_claim_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_claim_relate_form"/>
        </record>
        <!-- Claim Number Generator -->
        <record model="ir.sequence.type" id="sequence_type_claim_number">
            <field name="name">Claim Number</field>
            <field name="code">claim</field>
        </record>
        <record model="ir.sequence.type-res.group" id="sequence_type_claim_number_group_admin">
            <field name="sequence_type" ref="sequence_type_claim_number"/>
            <field name="group" ref="res.group_admin"/>
        </record>
        <record model="ir.sequence.type-res.group" id="sequence_type_number_group_offered_admin">
            <field name="sequence_type" ref="sequence_type_claim_number"/>
            <field name="group" ref="offered.group_offered_admin"/>
        </record>
        <record model="ir.sequence" id="claim_sequence">
            <field name="name">Claim Sequence</field>
            <field name="code">claim</field>
            <field name="prefix">SIN${year}</field>
            <field name="padding">10</field>
        </record>
    </data>
</tryton>
