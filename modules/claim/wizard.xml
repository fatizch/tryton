<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- ########### Deliver wizard ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="benefit_to_deliver_view_form">
            <field name="model">claim.benefit_to_deliver</field>
            <field name="type">form</field>
            <field name="name">benefit_to_deliver_form</field>
        </record>
        <record model="ir.ui.view" id="benefit_to_deliver_view_list">
            <field name="model">claim.benefit_to_deliver</field>
            <field name="type">tree</field>
            <field name="name">benefit_to_deliver_list</field>
        </record>
        <record model="ir.ui.view" id="select_benefit_view_form">
            <field name="model">claim.select_benefits</field>
            <field name="type">form</field>
            <field name="name">select_benefit_form</field>
        </record>
        <record model="ir.action.wizard" id="act_deliver_wizard">
            <field name="name">Deliver Benefits</field>
            <field name="wiz_name">claim.deliver_benefits</field>
        </record>
        <record model="ir.ui.view" id="close_reason_view_form">
            <field name="model">claim.close_reason_view</field>
            <field name="type">form</field>
            <field name="name">close_reason_view_form</field>
        </record>
        <record model="ir.action.wizard" id="act_close_claim_wizard">
            <field name="name">Close Claims</field>
            <field name="wiz_name">claim.close</field>
        </record>
        <!-- ########################################################### -->
        <!-- ########### Service propagate extra data wizard ########### -->
        <!-- ########################################################### -->
        <record model="ir.ui.view" id="service_select_extra_data_view_form">
            <field name="model">benefit.select_extra_data_view</field>
            <field name="type">form</field>
            <field name="name">service_select_extra_data_form</field>
        </record>
        <record model="ir.action.wizard" id="act_service_propagate_extra_data_wizard">
            <field name="name">Propagate Extra Data On Claim Services</field>
            <field name="wiz_name">benefit.propagate_extra_data</field>
        </record>
        <record model="ir.action.keyword" id="act_service_propagate_extra_data_keyword">
            <field name="keyword">form_action</field>
            <field name="model">benefit,-1</field>
            <field name="action" ref="act_service_propagate_extra_data_wizard"/>
        </record>
        <!-- ######################################################## -->
        <!-- ########### Loss propagate extra data wizard ########### -->
        <!-- ######################################################## -->
        <record model="ir.ui.view" id="loss_select_extra_data_view_form">
            <field name="model">loss.select_extra_data_view</field>
            <field name="type">form</field>
            <field name="name">loss_select_extra_data_form</field>
        </record>
        <record model="ir.action.wizard" id="act_loss_propagate_extra_data_wizard">
            <field name="name">Propagate Extra Data On Claim Losses</field>
            <field name="wiz_name">loss.propagate_extra_data</field>
        </record>
        <record model="ir.action.keyword" id="act_loss_propagate_extra_data_keyword">
            <field name="keyword">form_action</field>
            <field name="model">benefit.loss.description,-1</field>
            <field name="action" ref="act_loss_propagate_extra_data_wizard"/>
        </record>
    </data>
</tryton>
