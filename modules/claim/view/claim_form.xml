<form string="Claim">
    <label name="name"/>
    <field name="name"/>
    <label name="status"/>
    <group id="status" col="5">
        <field name="status"/>
        <label name="sub_status"/>
        <field name="sub_status" widget="selection"/>
    </group>
    <newline/>
    <label name="declaration_date"/>
    <field name="declaration_date"/>
    <label name="end_date"/>
    <field name="end_date"/>
    <newline/>
    <label name="claimant"/>
    <field name="claimant"/>
    <label name="main_contract"/>
    <field name="main_contract"/>
    <newline/>
    <notebook>
        <page string="Losses" id="losses">
            <field name="losses" group="multi_losses" mode="tree" view_ids="claim.loss_simple_list" xexpand="0" xfill="0"/>
            <field name="losses" group="multi_losses" mode="form" relation="claim.loss" relation_field="claim" view_ids="claim.loss_view_form"/>
            <field name="losses" group="multi_losses" mode="form" relation="claim.service" relation_field="loss" view_ids="claim.claim_service_view_form"/>
        </page>
    </notebook>
    <group id="contracts">
        <field name="possible_contracts"/>
    </group>
</form>
