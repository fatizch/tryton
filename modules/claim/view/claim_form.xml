<?xml version="1.0" encoding="utf-8"?>
<form string="Claim">
  <label name="name"/>
  <field name="name"/>
  <label name="status"/>
  <group id="status" col="5">
    <field name="status"/>
    <label name="reopened_reason"/>
    <field name="reopened_reason"/>
    <label name="sub_status"/>
    <field name="sub_status"/>
  </group>
  <newline/>
  <label name="declaration_date"/>
  <field name="declaration_date"/>
  <label name="end_date"/>
  <field name="end_date"/>
  <newline/>
  <label name="claimant"/>
  <field name="claimant"/>
  <label name="main_contract"/>
  <field name="main_contract"/>
  <newline/>
  <notebook>
    <page string="Losses" id="losses">
      <field name="losses" group="multi_losses" mode="tree" view_ids="claim.loss_simple_tree" xexpand="0" xfill="0"/>
      <field name="losses" group="multi_losses" mode="form" relation="claim.loss" relation_field="claim" view_ids="claim.loss_view_form"/>
      <field name="losses" group="multi_losses" mode="form" relation="contract.service" relation_field="loss" view_ids="claim.service_view_form"/>
      <field name="losses" group="multi_losses" mode="form" relation="claim.indemnification" relation_field="service" view_ids="claim.indemnification_view_form"/>
    </page>
    <page string="Documents" id="documents">
      <field name="documents" xexpand="1" xfill="1" yexpand="1" yfill="1" mode="form" />
    </page>
  </notebook>
  <group id="contracts" states="{'invisible': True}">
    <field name="possible_contracts"/>
  </group>
</form>
