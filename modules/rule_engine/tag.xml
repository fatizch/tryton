<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="tag_view_form">
            <field name="model">rule_engine.tag</field>
            <field name="type">form</field>
            <field name="name">tag_form</field>
        </record>
        <record model="ir.ui.view" id="tag_view_tree">
            <field name="model">rule_engine.tag</field>
            <field name="type">tree</field>
            <field name="name">tag_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_tag_form">
            <field name="name">Tags</field>
            <field name="res_model">rule_engine.tag</field>
        </record>

        <record model="ir.action.act_window.view" id="act_tag_form_view_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="tag_view_tree"/>
            <field name="act_window" ref="act_tag_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_tag_form_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="tag_view_form"/>
            <field name="act_window" ref="act_tag_form"/>
        </record>
        <menuitem parent="menu_rule_engine" id="menu_tag_form"
            icon="tryton-list" action="act_tag_form"/>
    </data>
</tryton>
