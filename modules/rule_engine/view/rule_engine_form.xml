<?xml version="1.0" encoding="UTF-8"?>
<form string="Rule">
  <label name="name"/>
  <field name="name"/>
  <label name="context"/>
  <field name="context"/>
  <notebook>
    <page name="code">
      <field name="code" widget="source" context_tree="data_tree" colspan="4" xexpand="1" xfill="1"/>
      <label name="extra_data"/>
      <field name="extra_data" xalign="0" colspan="3"/>
      <label name="extra_data_kind"/>
      <field name="extra_data_kind"/>
      <newline/>
      <field name="rule_kwargs" view_ids="rule_engine.kwarg_parameter_tree,rule_engine.parameter_form" colspan="4"/>
      <newline/>
      <field name="rule_rules" view_ids="rule_engine.rule_parameter_tree,rule_engine.parameter_form" colspan="4"/>
      <newline/>
      <field name="rule_tables" view_ids="rule_engine.table_parameter_tree,rule_engine.parameter_form" colspan="4"/>
    </page>
    <page id="tags" string="Tags">
      <field name="tags" colspan="4"/>
    </page>
    <page string="Parameters" id="parameters">
      <field name="rule_parameters"/>
    </page>
    <page name="test_cases">
      <field name="test_cases" colspan="4"/>
    </page>
    <page string="Debug" id="executions" col="2">
      <label name="debug_mode"/>
      <field name="debug_mode"/>
      <field name="exec_logs" colspan="2"/>
    </page>
  </notebook>
  <newline/>
  <field name="data_tree" invisible="1"/>
</form>
