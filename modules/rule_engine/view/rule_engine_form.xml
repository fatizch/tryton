<?xml version="1.0" encoding="UTF-8"?>
<form string="Rule">
  <label name="name"/>
  <field name="name"/>
  <label name="context"/>
  <field name="context"/>
  <notebook>
    <page name="code">
      <group id="display_extra_data" col="2" colspan="4">
        <label name="extra_data" xexpand="1" xfill="1" xalign="1"/>
        <field name="extra_data" xexpand="0" xfill="0"/>
      </group>
      <field name="code" widget="source" context_tree="data_tree" colspan="3" xexpand="1" xfill="1"/>
      <group id="extra_parameters" col="2" yexpand="1" yfill="1" states="{'invisible': ~Eval('extra_data')}" xexpand="0" xfill="0">
        <field name="rule_kwargs" view_ids="rule_engine.kwarg_parameter_tree"/>
        <field name="rule_rules" view_ids="rule_engine.rule_parameter_tree"/>
        <field name="rule_tables" view_ids="rule_engine.table_parameter_tree"/>
      </group>
      <field name="data_tree" invisible="1"/>
    </page>
    <page string="Parameters" id="parameters">
      <field name="rule_parameters"/>
    </page>
    <page name="test_cases">
      <field name="test_cases" colspan="4"/>
    </page>
    <page string="Debug" id="executions" col="2">
      <label name="debug_mode"/>
      <field name="debug_mode"/>
      <field name="exec_logs" colspan="2"/>
    </page>
  </notebook>
</form>
