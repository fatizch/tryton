<?xml version="1.0"?>
<tryton>
    <data group="1">
        <record model="ir.message" id="msg_reduced_contract">
            <field name="text">Contract %(contract)s has been reduced since %(date)s, you cannot perform any endorsements on it.</field>
        </record>
        <record model="ir.message" id="msg_terminate_reduced_contract">
            <field name="text">Contract %(contract)s has been reduced since %(date)s, do you want to apply this endorsement on it.</field>
        </record>
        <record model="ir.message" id="msg_no_cancellation_on_reduced">
            <field name="text">The following contracts are reduced:

%(contracts)s

You cannot cancel endorsements on reduced contracts.</field>
        </record>
        <record model="ir.message" id="msg_invalid_date">
            <field name="text">Impossible to reduce the contract before the contract's start_date (%(start_date)s).</field>
        </record>
        <record model="ir.message" id="msg_will_reduce">
            <field name="text">Contracts will be reduced.</field>
        </record>
        <record model="ir.message" id="msg_cannot_reduce">
            <field name="text">Contract %(contract)s cannot be reduced.</field>
        </record>
        <record model="ir.message" id="msg_no_reductionable_options">
            <field name="text">No options were found that can be reduced for contract %(contract)s.</field>
        </record>
        <record model="ir.message" id="msg_auto_reducing">
            <field name="text">Contracts will automatically be reduced.</field>
        </record>
        <record model="ir.message" id="msg_cannot_reduce_surrendered">
            <field name="text">A contract that was surrendered cannot be reduced.</field>
        </record>
        <record model="ir.message" id="msg_will_cancel_reduction">
            <field name="text">Contracts reduction will be cancelled.</field>
        </record>
        <record model="ir.message" id="msg_contract_not_reduced">
            <field name="text">Contract %(contract)s is not reduced. Therefore, it cannot be reactivated.</field>
        </record>
    </data>
</tryton>
