<data>
    <!-- form header -->
    <xpath expr="/form/group[@id='checkboxes']" position="replace_attributes">
        <group id="checkboxes" colspan="5"/>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']/label[@name='active']" position="before">
        <label name="code"/>
        <field name="code" xexpand="0"/>
        <label name="is_person"/>
        <field name="is_person" xexpand="0"/>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <group id="person" colspan="6" col="6">
            <label name="gender"/>
            <field name="gender" widget="selection" xexpand="0"/>
            <label name="name"/>
            <field name="name"/>
            <label name="first_name"/>
            <field name="first_name"/>
            <label name="birth_date"/>
            <field name="birth_date"/>
            <label name="birth_name"/>
            <field name="birth_name"/>
            <label name="ssn"/>
            <field name="ssn"/>
        </group>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <group id="company" colspan="6" col="6">
            <label name="name"/>
            <field name="name"/>
            <label name="commercial_name"/>
            <field name="commercial_name"/>
        </group>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <group id="button" xexpand="0">
            <button name="button_start_synthesis_menu" string="Synthesis"/>
        </group>
    </xpath>
    <xpath expr="/form/field[@name='name']" position="replace"/>
    <xpath expr="/form/label[@name='name']" position="replace"/>
    <xpath expr="/form/field[@name='code']" position="replace"/>
    <xpath expr="/form/label[@name='code']" position="replace"/>
    <!-- Remove accounting, relations, bank page -->
    <xpath expr="/form/notebook/page[@id='relations']" position="replace"/>
    <!-- General page modification -->
    <xpath expr="/form/notebook/page/group[@id='lang']" position="replace"/>
    <xpath expr="/form/notebook/page/field[@name='categories']" position="replace"/>
    <xpath expr="/form/notebook/page/field[@name='contact_mechanisms']" position="replace"/>
    <xpath expr="/form/notebook/page/field[@name='addresses']" position="after">
        <group col="4" colspan="1" string="Contact" id="contact_shortcut" yfill="1">
            <label name="phone"/>
            <field name="phone"/>
            <newline/>
            <label name="mobile"/>
            <field name="mobile"/>
            <newline/>
            <label name="email"/>
            <field name="email"/>
            <newline/>
            <label name="lang"/>
            <field name="lang"/>
            <newline/>
            <label name="logo"/>
            <field name="logo"/>
        </group>
        <field name="relations" colspan="2" view_ids="party_cog.relation_view_editable_list"/>
    </xpath>
    <xpath expr="/form/notebook/page/field[@name='addresses']" position="replace">
        <group id="one_address" col="4" colspan="4" yexpand="1" yfill="1">
            <field name="all_addresses" mode="form,tree" colspan="4" yexpand="1" yfill="1" view_ids="party.address_view_form,party.address_view_tree_sequence"/>
        </group>
        <group id="several_addresses" col="4" colspan="4" yexpand="1" yfill="1">
            <field name="all_addresses" mode="tree,from" colspan="4" yexpand="1" yfill="1" view_ids="party.address_view_tree_sequence,party.address_view_form"/>
        </group>
        <field name="addresses" invisible="1" colspan="4"/>
        <field name="has_multiple_addresses" invisible="1"/>
    </xpath>
    <!-- Add Company and Role pages-->
    <xpath expr="/form/notebook" position="inside">
        <page string="Roles" id="role">
            <group id="role_group" colspan="4">
            </group>
            <notebook/>
        </page>
    </xpath>
</data>
