<?xml version="1.0" encoding="utf-8"?>
<data>
    <!-- form header -->
    <xpath expr="/form/group[@id='checkboxes']" position="replace_attributes">
        <group id='checkboxes' colspan="5"/>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']/label[@name='active']"
        position="before">
        <label name="code"/>
        <field name="code" xexpand="0"/>
        <label name="is_person"/>
        <field name="is_person" xexpand="0"/>
        <label name="is_company"/>
        <field name="is_company" xexpand="0"/>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <group id="person" colspan="6" col="6"
            states="{'invisible':Bool(~Eval('is_person'))}">
            <label name="gender"/>
            <field name="gender" widget="selection" xexpand="0"/>
            <label name="name"/>
            <field name="name"/>
            <label name="first_name"/>
            <field name="first_name"/>
            <label name="birth_date"/>
            <field name="birth_date"/>
            <label name="maiden_name"/>
            <field name="maiden_name"/>
            <label name="ssn"/>
            <field name="ssn"/>
        </group>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <group id="company" colspan="6" col="6"
            states="{'invisible':Bool(~Eval('is_company'))}">
            <label name="short_name"/>
            <field name="short_name"/>
            <label name="name"/>
            <field name="name"/>
        </group>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <button name="button_start_synthesis_menu" string="Synthesis"/>
    </xpath>
    <xpath expr="/form/field[@name='name']" position="replace"/>
    <xpath expr="/form/label[@name='name']" position="replace"/>
    <xpath expr="/form/field[@name='code']" position="replace"/>
    <xpath expr="/form/label[@name='code']" position="replace"/>
    <!-- Remove accounting, relations, bank page -->
    <xpath expr="/form/notebook/page[@id='relations']" position="replace"/>
    <!-- General page modification -->
    <xpath expr="/form/notebook/page/group[@id='lang']" position="replace"/>
    <xpath expr="/form/notebook/page/field[@name='categories']" position="replace"/>
    <xpath expr="/form/notebook/page/field[@name='contact_mechanisms']"
        position="replace"/>
    <xpath expr="/form/notebook/page/field[@name='addresses']"
        position="after">
        <group col="6" colspan="4" id="contact_shortcut">
            <label name="phone"/>
            <field name="phone"/>
            <label name="mobile"/>
            <field name="mobile"/>
            <label name="email"/>
            <field name="email"/>
        </group>
        <newline/>
    </xpath>
    <!-- Add Extra Data pages-->
    <xpath expr="/form/notebook/page[@id='general']" position="after">
        <page string="Extra Data" id="extra_data">
            <group col="2" colspan="2" id="lang">
                <label name="lang"/>
                <field name="lang" widget="selection"/>
            </group>
            <newline/>
            <field name="contact_mechanisms" colspan="2"
                view_ids="party.contact_mechanism_view_tree_sequence"/>
            <field name="relations" colspan="2"/>
        </page>
    </xpath>
        <!-- Add Company and Role pages-->
    <xpath expr="/form/notebook" position="inside">
        <page string="Company" id="tree" states="{'invisible': ~Eval('is_company')}">
            <label name="parent"/>
            <field name="parent"/>
            <newline/>
            <field name="children" colspan="4"
                view_ids="party_cog.company_view_tree_hierarchical,party_cog.company_view_form"
                    mode="tree,form"/>
            <label name="logo" xalign="0"/>
            <field name="logo" colspan="3"/>
        </page>
        <page string="Roles" id="role">
            <group id="role_group" colspan="4">
            </group>
            <notebook/>
        </page>
    </xpath>
</data>
