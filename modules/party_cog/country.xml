    <data>
        <!-- ########### -->
        <!-- # Country # -->
        <!-- ########### -->
        <record model="ir.ui.view" id="country_view_form">
            <field name="model">country.country</field>
            <field name="inherit" ref="country.country_view_form"/>
            <field name="name">country_form</field>
        </record>
        <!-- ######################## -->
        <!-- # Country Address Line # -->
        <!-- ######################## -->
        <record model="ir.ui.view" id="country_address_line_view_form">
            <field name="model">country.address.line</field>
            <field name="type">form</field>
            <field name="name">country_address_line_form</field>
        </record>
        <record model="ir.ui.view" id="country_address_line_view_list">
            <field name="model">country.address.line</field>
            <field name="type">tree</field>
            <field name="name">country_address_line_list</field>
        </record>
    </data>
    <data skiptest="1" grouped="1">
        <!-- ############################ -->
        <!-- # Fr Address Configuration # -->
        <!-- ############################ -->
        <record model="country.address.line" id="fr_afnor2">
            <field name="country" ref="country.fr"/>
