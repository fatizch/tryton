<tryton>
    <data depends="api">
        <!-- ################ -->
        <!-- # API Identity # -->
        <!-- ################ -->
        <record model="ir.ui.view" id="api_identity_view_form">
            <field name="model">ir.api.identity</field>
            <field name="inherit" ref="coog_core.api_identity_view_form"/>
            <field name="name">api_identity_form</field>
        </record>
        <record model="ir.ui.view" id="api_identity_view_list">
            <field name="model">ir.api.identity</field>
            <field name="inherit" ref="coog_core.api_identity_view_list"/>
            <field name="name">api_identity_list</field>
        </record>
        <!-- ################ -->
        <!-- # Party Relate # -->
        <!-- ################ -->
        <record model="ir.action.act_window" id="act_open_party_api_identity">
            <field name="name">API Identity</field>
            <field name="domain" eval="[('party', '=', Eval('active_id'))]" pyson="1"/>
            <field name="res_model">ir.api.identity</field>
        </record>
        <record model="ir.action.act_window.view" id="act_open_party_api_identity_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="api_identity_view_list"/>
            <field name="act_window" ref="act_open_party_api_identity"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_party_api_identity_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="api_identity_view_form"/>
            <field name="act_window" ref="act_open_party_api_identity"/>
        </record>
        <record model="ir.action.keyword" id="act_open_party_api_identity_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_open_party_api_identity"/>
        </record>
    </data>
</tryton>
