<tryton>
    <data>
        <!-- Move configuration to end of the menu -->
        <menuitem name="Configuration" id="party.menu_configuration" sequence="100"/>
        <!-- *******************************************
            ******** Party **********
            ******************************************* -->
        <record model="ir.ui.view" id="party_view_tree">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_tree"/>
            <field name="name">party_tree</field>
        </record>
        <record model="ir.ui.view" id="party_view_form">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="name">party_form</field>
        </record>
        <record model="ir.ui.view" id="party_view_synthesis_form">
            <field name="model">party.party</field>
            <field name="type">form</field>
            <field name="name">party_synthesis_form</field>
        </record>
        <record model="ir.action.act_window.domain" id="act_party_domain_active">
            <field name="name">All</field>
            <field name="sequence" eval="10"/>
            <field name="act_window" ref="party.act_party_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_party_domain_recent">
            <field name="name">Recent</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="['OR', [('create_uid', '=', Eval('_user')), ('write_uid', '=', None)], [('write_uid', '=', Eval('_user'))]]" pyson="1"/>
            <field name="act_window" ref="party.act_party_form"/>
        </record>
        <!-- *******************************************
            ******** Relates **********
            ******************************************* -->
        <record model="ir.action.act_window" id="act_contact_mechanisms_relate_form">
            <field name="name">Contact Mechanisms</field>
            <field name="res_model">party.contact_mechanism</field>
            <field name="domain" eval="[('party', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_contact_mechanisms_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_contact_mechanisms_relate_form"/>
        </record>
        <record model="ir.action.act_window" id="act_related_parties_relate_form">
            <field name="name">Related parties</field>
            <field name="res_model">contract.contact</field>
            <field name="domain" eval="[('party.related_contracts.contacts.party', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_related_parties_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_related_parties_relate_form"/>
        </record>
        <!-- *******************************************
            ******** Person **********
            ******************************************* -->
        <record model="ir.ui.view" id="person_view_tree">
            <field name="model">party.party</field>
            <field name="type">tree</field>
            <field name="name">person_tree</field>
        </record>
        <record model="ir.ui.view" id="person_view_form">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="arch" type="xml"/>
        </record>
        <record model="ir.action.act_window" id="act_person_form">
            <field name="name">Persons</field>
            <field name="res_model">party.party</field>
            <field name="domain" eval="[('is_person', '=', True)]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_person_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="person_view_tree"/>
            <field name="act_window" ref="act_person_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_person_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="person_view_form"/>
            <field name="act_window" ref="act_person_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_person_domain_active">
            <field name="name">All</field>
            <field name="sequence" eval="10"/>
            <field name="act_window" ref="act_person_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_person_domain_recent">
            <field name="name">Recent</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="['OR', [('create_uid', '=', Eval('_user')), ('write_uid', '=', None)], [('write_uid', '=', Eval('_user'))]]" pyson="1"/>
            <field name="act_window" ref="act_person_form"/>
        </record>
        <menuitem parent="party.menu_party" sequence="0" id="menu_person_form" icon="coopengo-party" action="act_person_form"/>
        <!-- *******************************************
            ******** Company **********
            ******************************************* -->
        <record model="ir.ui.view" id="company_view_tree">
            <field name="model">party.party</field>
            <field name="type">tree</field>
            <field name="name">company_tree</field>
        </record>
        <record model="ir.ui.view" id="company_view_form">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="arch" type="xml"/>
        </record>
        <record model="ir.action.act_window" id="act_company_form">
            <field name="name">Companies</field>
            <field name="res_model">party.party</field>
            <field name="domain" eval="[('is_person', '=', False)]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_company_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="company_view_tree"/>
            <field name="act_window" ref="act_company_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_company_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="company_view_form"/>
            <field name="act_window" ref="act_company_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_company_domain_active">
            <field name="name">All</field>
            <field name="sequence" eval="10"/>
            <field name="act_window" ref="act_company_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_company_domain_recent">
            <field name="name">Recent</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="['OR', [('create_uid', '=', Eval('_user')), ('write_uid', '=', None)], [('write_uid', '=', Eval('_user'))]]" pyson="1"/>
            <field name="act_window" ref="act_company_form"/>
        </record>
        <menuitem parent="party.menu_party" sequence="0" id="menu_company_form" icon="coopengo-company" action="act_company_form"/>
        <!-- ******************************************
            ********** Party Identifier Type **********
            ******************************************* -->
            <record model="ir.ui.view" id="party_identifier_type_view_form">
                <field name="model">party.identifier.type</field>
                <field name="type">form</field>
                <field name="name">party_identifier_type_form</field>
            </record>
            <record model="ir.ui.view" id="party_identifier_type_view_list">
                <field name="model">party.identifier.type</field>
                <field name="type">tree</field>
                <field name="name">party_identifier_type_list</field>
            </record>
            <record model="ir.action.act_window" id="act_party_identifier_type_form">
                <field name="name">Party Identifier Type</field>
                <field name="res_model">party.identifier.type</field>
            </record>

            <record model="ir.action.act_window.view" id="act_party_identifier_type_form_view_list">
                <field name="sequence" eval="10"/>
                <field name="view" ref="party_identifier_type_view_list"/>
                <field name="act_window" ref="act_party_identifier_type_form"/>
            </record>
            <record model="ir.action.act_window.view" id="act_party_identifier_type_form_view_form">
                <field name="sequence" eval="20"/>
                <field name="view" ref="party_identifier_type_view_form"/>
                <field name="act_window" ref="act_party_identifier_type_form"/>
            </record>
            <menuitem parent="party.menu_configuration" id="menu_party_identifier_type_form"
                icon="tryton-list" action="act_party_identifier_type_form"/>

        <!-- *******************************************
            ******** Parent childreen relationship ******
            ******************************************* -->
        <record model="party.relation.type" id="child_relation_type">
            <field name="code">child</field>
            <field name="name">Child</field>
        </record>
        <record model="party.relation.type" id="parent_relation_type">
            <field name="code">parent</field>
            <field name="name">Parent</field>
            <field name="reverse" ref="party_cog.child_relation_type"/>
        </record>
        <record model="party.relation.type" id="child_relation_type" update="1">
            <field name="reverse" ref="party_cog.parent_relation_type"/>
        </record>
        <!-- *******************************************
            ******** Synthesis **********
            ******************************************* -->
        <record model="ir.ui.view" id="menu_view_tree">
            <field name="model">party.synthesis.menu</field>
            <field name="type">tree</field>
            <field name="field_childs">childs</field>
            <field name="priority" eval="20"/>
            <field name="name">menu_tree</field>
        </record>
        <record model="ir.ui.view" id="menu_view_list">
            <field name="model">party.synthesis.menu</field>
            <field name="type">tree</field>
            <field name="priority" eval="10"/>
            <field name="name">menu_list</field>
        </record>
        <record model="ir.ui.view" id="menu_view_form">
            <field name="model">party.synthesis.menu</field>
            <field name="type">form</field>
            <field name="name">menu_form</field>
        </record>
        <record model="ir.action.act_window" id="act_menu_form">
            <field name="name">Synthesis</field>
            <field name="res_model">party.synthesis.menu</field>
            <field name="domain" eval="[['OR', ('party', 'in', Eval('active_ids', [])), ('party', '=', None)], ('parent', '=', None)]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_menu_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="menu_view_tree"/>
            <field name="act_window" ref="act_menu_form"/>
        </record>
        <record model="ir.action.wizard" id="start_synthesis_menu">
            <field name="name">Synthesis</field>
            <field name="wiz_name">party.synthesis.menu.set</field>
            <field name="model">party.party</field>
        </record>
        <record model="ir.action.keyword" id="start_synthesis_menu_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="start_synthesis_menu"/>
        </record>
        <record model="ir.action.keyword" id="start_synthesis_menu_keyword2">
            <field name="keyword">tree_open</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="start_synthesis_menu"/>
        </record>
        <record model="ir.action.wizard" id="wizard_open">
            <field name="name">Open Party Synthesis Menu</field>
            <field name="wiz_name">party.synthesis.menu.open</field>
            <field name="model">party.synthesis.menu</field>
        </record>
        <record model="ir.action.keyword" id="wizard_open_keyword1">
            <field name="keyword">tree_open</field>
            <field name="model">party.synthesis.menu,-1</field>
            <field name="action" ref="wizard_open"/>
        </record>
        <record model="ir.action.act_window" id="act_menu_open">
            <field name="name">Open Party Synthesis Menu</field>
        </record>
        <record model="ir.action.wizard" id="party.wizard_check_vies">
            <field name="active" eval="False"/>
        </record>
    </data>
</tryton>
