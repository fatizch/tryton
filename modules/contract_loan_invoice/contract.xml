<?xml version="1.0"?>
<tryton>
    <data>
        <!-- ############## -->
        <!-- # Loan Share # -->
        <!-- ############## -->
        <record model="ir.ui.view" id="loan_share_view_form">
            <field name="model">loan.share</field>
            <field name="type">form</field>
            <field name="inherit" ref="loan.loan_share_view_form"/>
            <field name="name">loan_share_form</field>
        </record>
        <!-- ######## -->
        <!-- # Loan # -->
        <!-- ######## -->
        <record model="ir.ui.view" id="loan_mean_premium_view_tree">
            <field name="model">loan</field>
            <field name="type">tree</field>
            <field name="field_childs">current_loan_shares</field>
            <field name="name">loan_mean_premium_tree</field>
        </record>
        <!-- #################################### -->
        <!-- # Display Loan Mean Premium Values # -->
        <!-- #################################### -->
        <record model="ir.ui.view" id="display_mean_premium_values_view_form">
            <field name="model">loan.mean_premium.display.values</field>
            <field name="type">form</field>
            <field name="name">display_mean_premium_values_form</field>
        </record>
        <!-- ############################# -->
        <!-- # Display Loan Mean Premium # -->
        <!-- ############################# -->
        <record model="ir.action.wizard" id="act_loan_mean_premium_display">
            <field name="name">Show Loan Mean Premium</field>
            <field name="wiz_name">loan.mean_premium.display</field>
        </record>
        <record model="ir.action.keyword" id="act_loan_mean_premium_display_keyword">
            <field name="keyword">form_action</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_loan_mean_premium_display"/>
        </record>
    </data>
</tryton>
