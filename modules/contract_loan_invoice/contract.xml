<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="contract_view_form">
            <field name="model">contract</field>
            <field name="type">form</field>
            <field name="inherit" ref="contract.contract_view_form"/>
            <field name="name">contract_form</field>
        </record>
        <!-- ####################################### -->
        <!-- # Average Premium Rate Loan Displayer # -->
        <!-- ####################################### -->
        <record model="ir.ui.view" id="loan_average_premium_view_tree">
            <field name="model">loan.average_premium_rate.loan_displayer</field>
            <field name="type">tree</field>
            <field name="field_childs">current_loan_shares</field>
            <field name="name">loan_average_premium_tree</field>
            <field name="priority" eval="99"/>
        </record>
        <!-- #################################### -->
        <!-- # Display Loan Average Premium Values # -->
        <!-- #################################### -->
        <record model="ir.ui.view" id="display_average_premium_values_view_form">
            <field name="model">loan.average_premium_rate.display.values</field>
            <field name="type">form</field>
            <field name="name">display_average_premium_values_form</field>
        </record>
        <!-- ############################# -->
        <!-- # Display Loan Average Premium # -->
        <!-- ############################# -->
        <record model="ir.action.wizard" id="act_loan_average_premium_display">
            <field name="name">Show Loan Average Premium</field>
            <field name="wiz_name">loan.average_premium_rate.display</field>
        </record>
        <record model="ir.action.keyword" id="act_loan_average_premium_display_keyword">
            <field name="keyword">form_action</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_loan_average_premium_display"/>
        </record>
        <!-- ################## -->
        <!-- # Premium Amount # -->
        <!-- ################## -->
        <record model="ir.ui.view" id="premium_amount_view_list">
            <field name="model">contract.premium.amount</field>
            <field name="type">tree</field>
            <field name="name">premium_amount_list</field>
        </record>
        <record model="ir.ui.view" id="premium_amount_view_form">
            <field name="model">contract.premium.amount</field>
            <field name="type">form</field>
            <field name="name">premium_amount_form</field>
        </record>
        <!-- ############################# -->
        <!-- # Premium Amount Per Period # -->
        <!-- ############################# -->
        <record model="ir.ui.view" id="premium_amount_per_period_view_list">
            <field name="model">contract.premium.amount.per_period</field>
            <field name="type">tree</field>
            <field name="name">premium_amount_per_period_list</field>
        </record>
        <record model="ir.ui.view" id="premium_amount_per_period_view_form">
            <field name="model">contract.premium.amount.per_period</field>
            <field name="type">form</field>
            <field name="name">premium_amount_per_period_form</field>
        </record>
        <record model="ir.action.act_window" id="act_premium_amount_per_period_form">
            <field name="name">Premium Amounts per Period</field>
            <field name="res_model">contract.premium.amount.per_period</field>
            <field name="domain" eval="[('contract', 'in', Eval('active_ids'))]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_premium_amount_per_period_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="premium_amount_per_period_view_list"/>
            <field name="act_window" ref="act_premium_amount_per_period_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_premium_amount_per_period_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="premium_amount_per_period_view_form"/>
            <field name="act_window" ref="act_premium_amount_per_period_form"/>
        </record>
        <record model="ir.action.keyword" id="act_premium_amount_per_period_form_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">contract,-1</field>
            <field name="action" ref="act_premium_amount_per_period_form"/>
        </record>
        <!-- Access Rights -->
        <record model="ir.model.access" id="access_method_definition">
            <field name="model" search="[('model', '=', 'contract.premium.amount.per_period')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
    </data>
</tryton>
