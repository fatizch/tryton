<data>
    <xpath expr="/form/group/field[@name='document_desc']" position="after">
        <label name="status"/>
        <group id="status_buttons" col="4" colspan="1">
            <field name="status"/>
            <button name="valid" string="Validate" icon="check"/>
            <button name="invalid" string="Invalidate" icon="cancel-list"/>
            <button name="waiting" string="Put On Hold" icon="pause"/>
        </group>
        <label name="status_change_date"/>
        <field name="status_change_date"/>
        <label name="request_line"/>
        <field name="request_line"/>
    </xpath>
</data>
