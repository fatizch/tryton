<tryton>
    <data>
        <!-- ############ -->
        <!-- # Document # -->
        <!-- ############ -->
        <record model="ir.ui.view" id="document_request_line_view_form">
            <field name="model">document.request.line</field>
            <field name="type">form</field>
            <field name="name">document_request_line_form</field>
        </record>
        <record model="ir.ui.view" id="document_request_line_view_list">
            <field name="model">document.request.line</field>
            <field name="type">tree</field>
            <field name="name">document_request_line_list</field>
            <field name="priority" eval="15"/>
        </record>
        <record model="ir.ui.view" id="document_request_line_wo_buttons_view_list">
            <field name="model">document.request.line</field>
            <field name="type">tree</field>
            <field name="name">document_request_line_wo_buttons_list</field>
        </record>
        <record model="ir.action.act_window" id="act_document_request_line_form">
            <field name="name">Document Request Lines</field>
            <field name="res_model">document.request.line</field>
            <field name="search_value" eval="[('received', '=', False)]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_document_request_line_form_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="document_request_line_wo_buttons_view_list"/>
            <field name="act_window" ref="act_document_request_line_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_document_request_line_form_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="document_request_line_view_form"/>
            <field name="act_window" ref="act_document_request_line_form"/>
        </record>
        <menuitem parent="document.menu_document" sequence="25" id="menu_document_request_line_form"
            icon="document_request" action="act_document_request_line_form"/>
        <!-- ############################### -->
        <!-- # Document Request Buttons    # -->
        <!-- ############################### -->
        <record model="ir.model.button" id="button_generic_send_letter">
            <field name="name">generic_send_letter</field>
            <field name="model" search="[('model', '=', 'document.request')]"/>
        </record>
        <!-- #################### -->
        <!-- # Document Request # -->
        <!-- #################### -->
        <record model="ir.ui.view" id="document_request_form">
            <field name="model">document.request</field>
            <field name="type">form</field>
            <field name="name">document_request_form</field>
        </record>
        <record model="ir.ui.view" id="document_request_tree">
            <field name="model">document.request</field>
            <field name="type">tree</field>
            <field name="name">document_request_tree</field>
        </record>
        <record model="ir.action.keyword" id="report_document_request_keyword">
            <field name="keyword">form_action</field>
            <field name="model">document.request,-1</field>
            <field name="action" ref="report_engine.letter_generation_wizard"/>
        </record>
        <!-- ######################## -->
        <!-- # Document Description # -->
        <!-- ######################## -->
        <record model="ir.ui.view" id="document_desc_form">
            <field name="model">document.description</field>
            <field name="inherit" ref="document.document_desc_form"/>
            <field name="name">document_description_form</field>
        </record>
        <record model="ir.ui.view" id="document_desc_list">
            <field name="model">document.description</field>
            <field name="inherit" ref="document.document_desc_tree"/>
            <field name="name">document_description_list</field>
        </record>
        <!-- ###################### -->
        <!-- # Document Reception # -->
        <!-- ###################### -->
        <record model="ir.ui.view" id="document_reception_view_form">
            <field name="model">document.reception</field>
            <field name="inherit" ref="document.document_reception_view_form"/>
            <field name="name">document_reception_form</field>
        </record>
        <!-- ##################### -->
        <!-- # Reattach Document # -->
        <!-- ##################### -->
        <record model="ir.ui.view" id="reattach_document_view_form">
            <field name="model">document.receive.reattach</field>
            <field name="inherit" ref="document.reattach_document_view_form"/>
            <field name="name">reattach_document_form</field>
        </record>
        <!-- ######################### -->
        <!-- # Receive Document Line # -->
        <!-- ######################### -->
        <record model="ir.ui.view" id="document_reception_line_view_list">
            <field name="model">document.receive.line</field>
            <field name="type">tree</field>
            <field name="name">document_reception_line_list</field>
        </record>
    </data>
</tryton>
