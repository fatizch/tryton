<?xml version="1.0"?>
<tryton>
    <data>
        <menuitem id="menu_discount" name="Commercial Discount"/>

        <!-- ####################### -->
        <!-- # Commercial Discount # -->
        <!-- ####################### -->
        <record model="ir.ui.view" id="commercial_discount_view_list">
            <field name="model">commercial_discount</field>
            <field name="type">tree</field>
            <field name="name">commercial_discount_list</field>
        </record>
        <record model="ir.ui.view" id="commercial_discount_view_form">
            <field name="model">commercial_discount</field>
            <field name="type">form</field>
            <field name="name">commercial_discount_form</field>
        </record>
        <record model="ir.action.act_window" id="act_commercial_discount">
            <field name="name">Discounts</field>
            <field name="res_model">commercial_discount</field>
        </record>
        <record model="ir.action.act_window.view" id="act_commercial_discount_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="commercial_discount_view_list"/>
            <field name="act_window" ref="act_commercial_discount"/>
        </record>
        <record model="ir.action.act_window.view" id="act_commercial_discount_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="commercial_discount_view_form"/>
            <field name="act_window" ref="act_commercial_discount"/>
        </record>
        <menuitem parent="menu_discount" action="act_commercial_discount" id="menu_commercial_discount_form"/>

        <!-- ################# -->
        <!-- # Discount Rule # -->
        <!-- ################# -->
        <record model="ir.ui.view" id="discount_rule_view_list">
            <field name="model">commercial_discount.rule</field>
            <field name="type">tree</field>
            <field name="name">discount_waiver_list</field>
        </record>
        <record model="ir.ui.view" id="discount_rule_view_form">
            <field name="model">commercial_discount.rule</field>
            <field name="type">form</field>
            <field name="name">discount_waiver_form</field>
        </record>
        <record model="ir.action.act_window" id="act_discount_rule">
            <field name="name">Commercial Discount Rules</field>
            <field name="res_model">commercial_discount.rule</field>
        </record>
        <record model="ir.action.act_window.view" id="act_discount_rule_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="discount_rule_view_list"/>
            <field name="act_window" ref="act_discount_rule"/>
        </record>
        <record model="ir.action.act_window.view" id="act_discount_rule_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="discount_rule_view_form"/>
            <field name="act_window" ref="act_discount_rule"/>
        </record>
        <menuitem parent="menu_discount" action="act_discount_rule" id="menu_discount_rule_form"/>

        <!-- ############################### -->
        <!-- # Contract - Premium Discount # -->
        <!-- ############################### -->
        <record model="ir.ui.view" id="discount_premium_modification_view_list">
            <field name="model">contract.premium_modification.discount</field>
            <field name="type">tree</field>
            <field name="name">discount_premium_option_list</field>
        </record>
        <record model="ir.ui.view" id="discount_premium_modification_view_form">
            <field name="model">contract.premium_modification.discount</field>
            <field name="type">form</field>
            <field name="name">discount_premium_option_form</field>
        </record>
    </data>
</tryton>
