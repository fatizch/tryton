<?xml version="1.0" encoding="utf-8"?>
<tryton>
  <data>
    <!-- ############################################################ -->
    <!-- Table Definition -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="table_definition_form_view">
      <field name="model">table.table_def</field>
      <field name="type">form</field>
      <field name="name">table_definition_form</field>
    </record>
    <record model="ir.ui.view" id="table_basic_data_form">
      <field name="model">table.table_def</field>
      <field name="type">form</field>
      <field name="name">table_basic_data_form</field>
    </record>
    <record model="ir.ui.view" id="table_definition_list_view">
      <field name="model">table.table_def</field>
      <field name="type">tree</field>
      <field name="name">table_definition_tree</field>
    </record>
    <record model="ir.action.act_window" id="act_table_definition_form">
      <field name="name">Tables</field>
      <field name="res_model">table.table_def</field>
    </record>
    <record model="ir.action.act_window.view" id="act_table_definition_form_view1">
      <field name="sequence" eval="10"/>
      <field name="view" ref="table_definition_list_view"/>
      <field name="act_window" ref="act_table_definition_form"/>
    </record>
    <record model="ir.action.act_window.view" id="act_table_definition_form_view2">
      <field name="sequence" eval="20"/>
      <field name="view" ref="table_definition_form_view"/>
      <field name="act_window" ref="act_table_definition_form"/>
    </record>
    <menuitem action="act_table_definition_form" sequence="10" id="menu_table_defintion_form"/>
    <!-- ############################################################ -->
    <!-- Table Definition Dimension -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="table_definition_dimension_form_view">
      <field name="model">table.table_dimension</field>
      <field name="type">form</field>
      <field name="name">table_dimension_form</field>
    </record>
    <record model="ir.ui.view" id="table_definition_dimension_list_view">
      <field name="model">table.table_dimension</field>
      <field name="type">tree</field>
      <field name="name">table_dimension_tree</field>
    </record>
    <record model="ir.ui.view" id="table_definition_dimension_list_sequence_view">
      <field name="model">table.table_dimension</field>
      <field name="type">tree</field>
      <field name="name">table_dimension_tree_sequence</field>
    </record>
    <!-- ############################################################ -->
    <!-- Table Cell -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="cell_form_view">
      <field name="model">table.table_cell</field>
      <field name="type">form</field>
      <field name="name">cell_form</field>
    </record>
    <record model="ir.ui.view" id="cell_list_view">
      <field name="model">table.table_cell</field>
      <field name="type">tree</field>
      <field name="name">cell_tree</field>
    </record>
    <record model="ir.action.act_window" id="act_cell_form">
      <field name="name">Cells</field>
      <field name="res_model">table.table_cell</field>
    </record>
    <record model="ir.action.act_window.view" id="act_cell_form_view1">
      <field name="sequence" eval="10"/>
      <field name="view" ref="cell_list_view"/>
      <field name="act_window" ref="act_cell_form"/>
    </record>
    <record model="ir.action.act_window.view" id="act_cell_form_view2">
      <field name="sequence" eval="20"/>
      <field name="view" ref="cell_form_view"/>
      <field name="act_window" ref="act_cell_form"/>
    </record>
    <!--  
        <menuitem parent="menu_table"
            action="act_cell_form"
            sequence="20"
            id="menu_cell_form"/>
        -->
    <record model="ir.action.act_window" id="act_cell_relate_form">
      <field name="name">Cells</field>
      <field name="res_model">table.table_cell</field>
      <field name="domain">[('definition', '=', Eval('active_id'))]</field>
      <field name="context">{'table.table_def': Eval('active_id')}</field>
    </record>
    <record model="ir.action.keyword" id="act_table_relate_keyword1">
      <field name="keyword">form_relate</field>
      <field name="model">table.table_def,-1</field>
      <field name="action" ref="act_cell_relate_form"/>
    </record>
    <!-- ############################################################ -->
    <!-- Table 2D Open Ask Dimensions -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="table_2d_open_ask_dimensions_form_view">
      <field name="model">table.2d.open.ask_dimensions</field>
      <field name="type">form</field>
      <field name="arch" type="xml"><![CDATA[
                <form string="Dimensions" col="2">
                    <label name="dimension3"/>
                    <field name="dimension3" widget="selection"/>
                    <label name="dimension4"/>
                    <field name="dimension4" widget="selection"/>
                </form>
                ]]></field>
    </record>
    <!-- ############################################################ -->
    <!-- Table 2D Open Wizard -->
    <!-- ############################################################ -->
    <record model="ir.action.wizard" id="act_table_2d_open">
      <field name="name">Table 2D</field>
      <field name="wiz_name">table.2d.open</field>
    </record>
    <record model="ir.action.keyword" id="act_table_2d_open_keyword1">
      <field name="keyword">form_relate</field>
      <field name="model">table.table_def,-1</field>
      <field name="action" ref="act_table_2d_open"/>
    </record>
    <record model="ir.action.act_window" id="act_table_2d_relate_form">
      <field name="name">Table 2D</field>
      <field name="res_model">table.2d</field>
      <field name="window_name" eval="False"/>
      <field name="context">{'table.table_def': Eval('active_id'), 'dimension3': Eval('dimension3'), 'dimension4': Eval('dimension4')}</field>
    </record>
    <record model="ir.model.access" id="access_table_2d">
      <field name="model" search="[('model', '=', 'table.2d')]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="False"/>
      <field name="perm_delete" eval="False"/>
    </record>
    <!-- ############################################################ -->
    <!-- Dimension Displayer -->
    <!-- ############################################################ -->
    <record model="ir.ui.view" id="dimension_displayer_form">
      <field name="model">table.manage_dimension.show.dimension</field>
      <field name="type">form</field>
      <field name="name">dimension_displayer_form</field>
    </record>
    <!-- ############################################################ -->
    <!-- Manage Dimension 1 Wizard -->
    <!-- ############################################################ -->
    <record model="ir.action.wizard" id="act_manage_dimension_1">
      <field name="name">Manage Dimension 1</field>
      <field name="wiz_name">table.manage_dimension.show_dimension_1</field>
    </record>
    <!-- ############################################################ -->
    <!-- Manage Dimension 2 Wizard -->
    <!-- ############################################################ -->
    <record model="ir.action.wizard" id="act_manage_dimension_2">
      <field name="name">Manage Dimension 2</field>
      <field name="wiz_name">table.manage_dimension.show_dimension_2</field>
    </record>
    <!-- ############################################################ -->
    <!-- Manage Dimension 3 Wizard -->
    <!-- ############################################################ -->
    <record model="ir.action.wizard" id="act_manage_dimension_3">
      <field name="name">Manage Dimension 3</field>
      <field name="wiz_name">table.manage_dimension.show_dimension_3</field>
    </record>
    <!-- ############################################################ -->
    <!-- Manage Dimension 4 Wizard -->
    <!-- ############################################################ -->
    <record model="ir.action.wizard" id="act_manage_dimension_4">
      <field name="name">Manage Dimension 4</field>
      <field name="wiz_name">table.manage_dimension_4</field>
    </record>
    <!-- ############################################################ -->
    <!-- Create Table -->
    <!-- ############################################################ -->
    <record model="ir.action.wizard" id="act_create_table">
      <field name="name">Create Table</field>
      <field name="wiz_name">table.create</field>
    </record>
    <menuitem name="Create Table" id="menu_create_table" action="act_create_table" sequence="4"/>
  </data>
</tryton>
