<?xml version="1.0" encoding="utf-8"?>
<data>
    <xpath expr="/form" position="replace_attributes">
        <form string="benefit rule"/>
    </xpath>
    <xpath expr="/form/label[@name='config_kind']" position="before">
        <label name="amount_evolves_over_time"/>
        <field name="amount_evolves_over_time"/>
        <field name="rule_stages" colspan="4"/>
        <newline/>
    </xpath>
    <xpath expr="/form/label[@name='rule']" position="before">
        <label name="amount_kind"/>
        <field name="amount_kind" xexpand="0"/>
        <newline/>
        <label name="amount"/>
        <field name="amount"/>
        <newline/>
        <label name="coef_coverage_amount"/>
        <group id="coef_coverage_amount">
            <field name="coef_coverage_amount" factor="100" xexpand="0"/>
            <label string="%" id="percent" xexpand="0" xalign="0" states="{'invisible': Or(Eval('config_kind') != 'simple', Eval('amount_kind') != 'cov_amount', Bool(Eval('amount_evolves_over_time')))}"/>
        </group>
        <newline/>
    </xpath>
    <xpath expr="/form" position="inside">
        <label name="indemnification_calc_unit"/>
        <field name="indemnification_calc_unit"/>
        <label name="use_monthly_period"/>
        <field name="use_monthly_period"/>
        <newline/>
        <label name="max_duration_per_indemnification"/>
        <group id="max_duration_per_indemnification">
            <field name="max_duration_per_indemnification"/>
            <field name="max_duration_per_indemnification_unit"/>
        </group>
        <label name="validation_delay"/>
        <group id="validation_delay">
            <field name="validation_delay"/>
            <field name="validation_delay_unit"/>
        </group>
        <newline/>
        <label name="with_revaluation"/>
        <field name="with_revaluation"/>
        <newline/>
        <label name="revaluation_index"/>
        <field name="revaluation_index"/>
        <label name="index_initial_date"/>
        <field name="index_initial_date"/>
        <label name="index_initial_value"/>
        <field name="index_initial_value"/>
        <label name="revaluation_date"/>
        <field name="revaluation_date"/>
    </xpath>
</data>
