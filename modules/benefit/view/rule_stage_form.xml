<?xml version="1.0" encoding="utf-8"?>
<form string="Sub Benefit Rule">
    <label name="benefit_rule"/>
    <field name="benefit_rule"/>
    <newline/>
    <label name="limited_duration"/>
    <field name="limited_duration" xexpand="0"/>
    <label name="duration"/>
    <group id="duration_unit">
        <field name="duration" xexpand="0"/>
        <field name="duration_unit" xexpand="0" xalign="0"/>
    </group>
    <label name="config_kind"/>
    <field name="config_kind" xexpand="0"/>
    <newline/>
    <group id="amount" states="{'invisible': Eval('config_kind') != 'simple'}" colspan="2" xexpand="0">
        <label name="amount"/>
        <field name="amount"/>
        <label name="indemnification_calc_unit" xexpand="0"/>
        <field name="indemnification_calc_unit" xalign="0"/>
    </group>
    <newline/>
    <group id="rule" states="{'invisible': Eval('config_kind') != 'advanced'}" colspan="2" xexpand="0">
        <label name="rule"/>
        <field name="rule"/>
        <label name="rule_extra_data"/>
        <field name="rule_extra_data"/>
        <label name="indemnification_calc_unit" xexpand="0"/>
        <field name="indemnification_calc_unit" xalign="0"/>
    </group>
</form>
