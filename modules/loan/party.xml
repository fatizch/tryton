<tryton>
    <data>
        <!-- ################################## -->
        <!-- # Outstanding Amount Select Date # -->
        <!-- ################################## -->
        <record model="ir.ui.view" id="display_insured_outstanding_loan_balance_select_date_view_form">
            <field name="model">party.display_insured_outstanding_loan_balance.select_date</field>
            <field name="type">form</field>
            <field name="name">display_insured_outstanding_loan_balance_select_date_form</field>
        </record>
        <!-- ########################### -->
        <!-- # Outstanding Amount View # -->
        <!-- ########################### -->
        <record model="ir.ui.view" id="display_insured_outstanding_loan_balance_view_form">
            <field name="model">party.display_insured_outstanding_loan_balance.view</field>
            <field name="type">form</field>
            <field name="name">display_insured_outstanding_loan_balance_form</field>
        </record>
        <record model="ir.ui.view" id="display_insured_outstanding_loan_balance_line_view_form">
            <field name="model">party.display_insured_outstanding_loan_balance.line_view</field>
            <field name="type">form</field>
            <field name="name">display_insured_outstanding_loan_balance_line_form</field>
        </record>
        <record model="ir.ui.view" id="display_insured_outstanding_loan_balance_line_view_list">
            <field name="model">party.display_insured_outstanding_loan_balance.line_view</field>
            <field name="type">tree</field>
            <field name="name">display_insured_outstanding_loan_balance_line_list</field>
            <field name="field_childs">childs</field>
        </record>
        <!-- ############################# -->
        <!-- # Outstanding Amount Wizard # -->
        <!-- ############################# -->
        <record model="ir.action.wizard" id="act_display_insured_outstanding_loan_balance">
            <field name="name">Insured Outstanding Loan Balances</field>
            <field name="wiz_name">party.display_insured_outstanding_loan_balance</field>
        </record>
        <record model="ir.action.keyword" id="act_display_insured_outstanding_loan_balance_keyword">
            <field name="keyword">form_action</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_display_insured_outstanding_loan_balance"/>
        </record>
        <record model="ir.action.act_window" id="act_loan_relate_form">
            <field name="name">Loans</field>
            <field name="res_model">loan</field>
            <field name="domain" eval="[('insured_persons', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_loan_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">party.party,-1</field>
            <field name="action" ref="act_loan_relate_form"/>
        </record>
        <record model="ir.ui.view" id="lender_view_form">
            <field name="model">lender</field>
            <field name="type">form</field>
            <field name="name">lender_form</field>
        </record>
        <record model="ir.ui.view" id="lender_view_list">
            <field name="model">lender</field>
            <field name="type">tree</field>
            <field name="name">lender_list</field>
        </record>
        <record model="ir.ui.view" id="party_view_form">
            <field name="model">party.party</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="name">party_form</field>
        </record>
        <record model="ir.action.act_window" id="act_lender_form">
            <field name="name">Lenders</field>
            <field name="res_model">lender</field>
        </record>
        <record model="ir.action.act_window.view" id="act_lender_form_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="lender_view_list"/>
            <field name="act_window" ref="act_lender_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_lender_form_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="lender_view_form"/>
            <field name="act_window" ref="act_lender_form"/>
        </record>
        <menuitem parent="party.menu_configuration" id="menu_lender_form" action="act_lender_form"/>
    </data>
</tryton>
