<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- ########### Loan ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="loan_view_form">
            <field name="model">loan</field>
            <field name="type">form</field>
            <field name="name">loan_form</field>
        </record>
        <record model="ir.ui.view" id="loan_simple_view_form">
            <field name="model">loan</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="name">loan_simple_form</field>
        </record>
        <record model="ir.ui.view" id="loan_only_increments_view_form">
            <field name="model">loan</field>
            <field name="type">form</field>
            <field name="priority">25</field>
            <field name="name">loan_only_increments_form</field>
        </record>
        <record model="ir.ui.view" id="loan_only_payments_view_form">
            <field name="model">loan</field>
            <field name="type">form</field>
            <field name="priority">30</field>
            <field name="name">loan_only_payments_form</field>
        </record>
        <record model="ir.ui.view" id="loan_view_tree">
            <field name="model">loan</field>
            <field name="type">tree</field>
            <field name="name">loan_tree</field>
        </record>
        <record model="ir.model.access" id="access_loan">
            <field name="model" search="[('model', '=', 'loan')]"/>
            <field name="group" ref="contract.group_contract"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_loan_admin">
            <field name="model" search="[('model', '=', 'loan')]"/>
            <field name="group" ref="contract.group_contract_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Loan Share ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="loan_share_view_form">
            <field name="model">loan.share</field>
            <field name="type">form</field>
            <field name="name">loan_share_form</field>
        </record>
        <record model="ir.ui.view" id="loan_share_view_tree">
            <field name="model">loan.share</field>
            <field name="priority" eval="10"/>
            <field name="type">tree</field>
            <field name="name">loan_share_tree</field>
        </record>
        <record model="ir.ui.view" id="loan_share_view_tree_editable">
            <field name="model">loan.share</field>
            <field name="priority" eval="20"/>
            <field name="type">tree</field>
            <field name="name">loan_share_list</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Loan Payment ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="loan_payment_view_tree">
            <field name="model">loan.payment</field>
            <field name="type">tree</field>
            <field name="name">loan_payment_tree</field>
        </record>
        <record model="ir.ui.view" id="loan_increment_view_tree">
            <field name="model">loan.increment</field>
            <field name="type">tree</field>
            <field name="name">loan_increment_tree</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Loan Create Wizard ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.wizard" id="launch_loan_creation_wizard">
          <field name="name">Loan Create</field>
          <field name="wiz_name">loan.create</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Loan Share Propagation Wizard ########### -->
        <!-- ############################################################ -->
        <record model="ir.action.wizard" id="launch_loan_share_propagation_wizard">
          <field name="name">Loan Share Propagation</field>
          <field name="wiz_name">loan.loan_share_propagate</field>
        </record>
        <record model="ir.ui.view" id="loan_share_propagate_parameters_view_form">
            <field name="model">loan.loan_share_propagate.parameters</field>
            <field name="type">form</field>
            <field name="name">loan_share_propagate_parameters_form</field>
        </record>
        <record model="ir.action.wizard" id="propagate_loan_share">
          <field name="name">Propagate Loan Share</field>
          <field name="wiz_name">loan.loan_share_propagate</field>
          <field name="model">loan.share</field>
        </record>
        <record model="ir.action.keyword" id="propagate_loan_share_keyword">
            <field name="keyword">form_action</field>
            <field name="model">loan.share,-1</field>
            <field name="action" ref="propagate_loan_share"/>
        </record>
    </data>
</tryton>
