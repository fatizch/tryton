<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- ########### Loan ########### -->
        <!-- ############################################################ -->
        <record model="res.group" id="group_loan_read">
            <field name="name">Loan consultation</field>
        </record>
        <record model="res.group" id="group_loan_admin">
            <field name="name">Loan administration</field>
        </record>
        <record model="ir.ui.view" id="loan_view_form">
            <field name="model">loan</field>
            <field name="type">form</field>
            <field name="name">loan_form</field>
        </record>
        <record model="ir.ui.view" id="loan_no_button_view_form">
            <field name="model">loan</field>
            <field name="type">form</field>
            <field name="name">loan_no_button_form</field>
        </record>
        <record model="ir.ui.view" id="loan_simple_view_form">
            <field name="model">loan</field>
            <field name="type">form</field>
            <field name="name">loan_simple_form</field>
        </record>
        <record model="ir.ui.view" id="loan_view_form_patcher">
            <field name="model">loan</field>
            <field name="inherit" ref="loan.loan_view_form"/>
            <field name="name">loan_form_patch</field>
        </record>
        <record model="ir.ui.view" id="loan_no_button_view_form_patcher">
            <field name="model">loan</field>
            <field name="inherit" ref="loan.loan_no_button_view_form"/>
            <field name="name">loan_form_patch</field>
        </record>
        <record model="ir.ui.view" id="loan_simple_view_form_patcher">
            <field name="model">loan</field>
            <field name="inherit" ref="loan.loan_simple_view_form"/>
            <field name="name">loan_form_patch</field>
        </record>
        <record model="ir.ui.view" id="loan_view_list">
            <field name="model">loan</field>
            <field name="type">tree</field>
            <field name="name">loan_list</field>
        </record>
        <record model="ir.ui.view" id="ordered_loan_view_list">
            <field name="model">loan</field>
            <field name="type">tree</field>
            <field name="name">ordered_loan_list</field>
        </record>
        <record model="ir.action.act_window" id="act_loan_form">
            <field name="name">Loans</field>
            <field name="res_model">loan</field>
        </record>
        <record model="ir.action.act_window.view" id="act_loan_form_view_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="loan_view_list"/>
            <field name="act_window" ref="act_loan_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_loan_form_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="loan_no_button_view_form"/>
            <field name="act_window" ref="act_loan_form"/>
        </record>
        <menuitem id="menu_loan_form" icon="loan-interest" action="act_loan_form"/>
        <record model="ir.model.access" id="access_loan_admin">
            <field name="model" search="[('model', '=', 'loan')]"/>
            <field name="group" ref="contract.group_contract_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_loan_user">
            <field name="model" search="[('model', '=', 'loan')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.sequence.type" id="sequence_type_loan">
            <field name="name">Loan</field>
            <field name="code">loan</field>
        </record>
        <record model="ir.sequence.type-res.group" id="sequence_type_loan_group_admin">
            <field name="sequence_type" ref="sequence_type_loan"/>
            <field name="group" ref="res.group_admin"/>
        </record>
        <record model="ir.action.act_window" id="act_contract_relate_form">
            <field name="name">Contracts</field>
            <field name="res_model">contract</field>
            <field name="domain" eval="[('loans', '=', Eval('active_id'))]" pyson="1"></field>
        </record>
        <record model="ir.action.keyword" id="act_contract_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">loan,-1</field>
            <field name="action" ref="act_contract_relate_form"/>
        </record>
        <record model="ir.model.button" id="button_loan_draft">
            <field name="name">draft</field>
            <field name="model" search="[('model', '=', 'loan')]"/>
        </record>
        <record model="ir.model.button" id="button_loan_calculate_loan">
            <field name="name">calculate_loan</field>
            <field name="model" search="[('model', '=', 'loan')]"/>
        </record>
        <record model="ir.model.button" id="button_loan_add_manual_increment">
            <field name="name">add_manual_increment</field>
            <field name="model" search="[('model', '=', 'loan')]"/>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Loan Share ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="loan_share_view_form">
            <field name="model">loan.share</field>
            <field name="type">form</field>
            <field name="name">loan_share_form</field>
        </record>
        <record model="ir.ui.view" id="loan_share_view_tree">
            <field name="model">loan.share</field>
            <field name="priority" eval="10"/>
            <field name="type">tree</field>
            <field name="name">loan_share_tree</field>
        </record>
        <record model="ir.ui.view" id="loan_share_view_tree_editable">
            <field name="model">loan.share</field>
            <field name="priority" eval="20"/>
            <field name="type">tree</field>
            <field name="name">loan_share_list</field>
        </record>
        <!-- ############################################################ -->
        <!-- ########### Loan Payment ########### -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="loan_payment_view_tree">
            <field name="model">loan.payment</field>
            <field name="type">tree</field>
            <field name="name">loan_payment_tree</field>
        </record>
        <!-- ################### -->
        <!-- # Loan Increments # -->
        <!-- ################### -->
        <record model="ir.ui.view" id="loan_increment_view_tree">
            <field name="model">loan.increment</field>
            <field name="type">tree</field>
            <field name="name">loan_increment_tree</field>
        </record>
        <record model="ir.ui.view" id="loan_increment_view_form">
            <field name="model">loan.increment</field>
            <field name="type">form</field>
            <field name="name">loan_increment_form</field>
        </record>
        <!-- Default : no access -->
        <record model="ir.model.access" id="default_access_loan">
            <field name="model" search="[('model', '=', 'loan')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="read_access_loan">
            <field name="model" search="[('model', '=', 'loan')]"/>
            <field name="group" ref="group_loan_read"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="admin_access_loan">
            <field name="model" search="[('model', '=', 'loan')]"/>
            <field name="group" ref="group_loan_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_loan_payment_admin">
            <field name="model" search="[('model', '=', 'loan.payment')]"/>
            <field name="group" ref="contract.group_contract_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_loan_payment_user">
            <field name="model" search="[('model', '=', 'loan.payment')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.action.act_window" id="act_loan_payment_relate_form">
            <field name="name">Loan Payments</field>
            <field name="res_model">loan.payment</field>
            <field name="domain" eval="[('loan', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_loan_payment_relate_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">loan,-1</field>
            <field name="action" ref="act_loan_payment_relate_form"/>
        </record>
    </data>
    <data noupdate="1" skiptest="1">
        <record model="ir.sequence" id="default_loan_sequence">
            <field name="name">Default Loan Sequence</field>
            <field name="code">loan</field>
        </record>
    </data>
</tryton>
