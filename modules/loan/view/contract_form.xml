<?xml version="1.0" encoding="utf-8"?>
<data>
    <xpath expr="/form/notebook/page[@id='cov_elements']" position="after">
        <page id="loans" string="Loans"
            states="{'invisible': ~Eval('is_loan')}">
            <button name="create_loan" string="Create Loan" colspan="4"/>
            <field name="loans" colspan="4" pre_validate="1"/>
            <newline/>
            <field name="is_loan" invisible="1"/>
        </page>
    </xpath>
    <xpath expr="//page[@id='cov_elements']" position="inside">
        <field name="multi_mixed_view" group="covered_elements" mode="form" relation="loan.share" relation_field="option"/>
    </xpath>
</data>
