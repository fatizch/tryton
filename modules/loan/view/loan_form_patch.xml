<data>
    <xpath expr="/form//label[@id='main_view_placeholder']" position="replace">
        <label name="number"/>
        <field name="number"/>
        <label name="order"/>
        <field name="order"/>
        <newline/>
        <label name="lender"/>
        <field name="lender"/>
        <newline/>
        <label name="lender_address"/>
        <field name="lender_address"/>
        <newline/>
        <label name="kind"/>
        <field name="kind"/>
        <label name="amount"/>
        <group id="amount">
            <field name="amount" xexpand="0"/>
            <field name="currency" xexpand="0" xalign="0"/>
        </group>
        <label name="rate"/>
        <group id="rate">
            <field name="rate" factor="100" xexpand="0"/>
            <label string="%" name="rate" xexpand="0" xalign="0"/>
        </group>
        <newline/>
        <label name="duration"/>
        <group id="duration">
            <field name="duration" xexpand="0"/>
            <field name="duration_unit" xexpand="0" xalign="0"/>
        </group>
        <label name="payment_frequency"/>
        <field name="payment_frequency"/>
        <newline/>
        <label name="funds_release_date"/>
        <field name="funds_release_date"/>
        <label name="first_payment_date"/>
        <group id="first_payment_date_group" string="" col="2">
            <field name="first_payment_date"/>
            <button name="propagate_first_payment_date" string="_Propagate Dates" icon="tryton-executable"/>
        </group>
        <newline/>
        <label name="deferral"/>
        <field name="deferral"/>
        <label name="deferral_duration"/>
        <field name="deferral_duration"/>
        <field name="extra_data" colspan="2"/>
        <group id="warning" string="" colspan="4">
            <image name="tryton-dialog-warning" xexpand="0" xfill="0"/>
            <label string="Please check the last payment" id="warning_payment" yalign="0.0" xalign="0.0" xexpand="1" colspan="3"/>
            <newline/>
        </group>
        <field name="increments" colspan="4" mode="tree" pre_validate="1"/>
        <group name="insured_persons" colspan="4">
            <field name="insured_persons" colspan="4" view_ids="party_cog.person_view_tree,party.party_view_form" expand_toolbar="0"/>
        </group>
        <field name="display_warning" invisible="1"/>
    </xpath>
</data>
