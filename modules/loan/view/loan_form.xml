<?xml version="1.0"?>
<form string="Loan">
    <notebook>
        <page id="main" string="Loan Parameters">
            <label id="main_view_placeholder"/>
        </page>
        <page id="table" string="Amortization Table">
            <field name="payments" colspan="4" mode="tree"/>
        </page>
        <page id="quota_share" string="Quota share">
            <field name="loan_shares" colspan="4" mode="tree,form" view_ids="loan.loan_share_view_tree_editable,loan.loan_share_view_form"/>
        </page>
    </notebook>
    <label name="state"/>
    <field name="state"/>
    <group col="99" colspan="2" id="buttons">
        <button name="draft" string="_Modify" icon="tryton-go-previous"/>
        <button name="calculate_loan" string="Calculate Amortization Table" icon="tryton-go-next"/>
    </group>
    <newline/>
</form>
