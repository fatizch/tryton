<tryton>
    <data>
        <!-- #################### -->
        <!-- # Clause Displayer # -->
        <!-- #################### -->
        <record model="ir.ui.view" id="endorsement_clause_displayer_view_form">
            <field name="model">contract.manage_clauses.clause</field>
            <field name="type">form</field>
            <field name="name">endorsement_clause_displayer_form</field>
        </record>
        <record model="ir.ui.view" id="endorsement_clause_displayer_view_list">
            <field name="model">contract.manage_clauses.clause</field>
            <field name="type">tree</field>
            <field name="name">endorsement_clause_displayer_list</field>
        </record>
        <!-- ################## -->
        <!-- # Manage Clauses # -->
        <!-- ################## -->
        <record model="ir.ui.view" id="contract_manage_clauses_view_form">
            <field name="model">contract.manage_clauses</field>
            <field name="type">form</field>
            <field name="name">contract_manage_clauses_form</field>
        </record>
        <record model="ir.model.button" id="contract_manage_clauses_add_clause">
            <field name="name">add_clause</field>
            <field name="model" search="[('model', '=', 'contract.manage_clauses')]"/>
        </record>
        <record model="ir.model.button" id="contract_manage_clauses_add_text_clause">
            <field name="name">add_text_clause</field>
            <field name="model" search="[('model', '=', 'contract.manage_clauses')]"/>
        </record>
    </data>
</tryton>
