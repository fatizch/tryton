<tryton>
    <data>
        <!-- ############################################################ -->
        <!-- Menu -->
        <!-- ############################################################ -->
        <menuitem name="Test Case" id="menu_test_case" sequence="100" parent="ir.menu_administration"/>
        <!-- ############################################################ -->
        <!-- Test Case Model -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="test_case_form">
            <field name="model">ir.test_case</field>
            <field name="type">form</field>
            <field name="name">test_case_form</field>
        </record>
        <!-- Entry Point -->
        <record model="ir.action.act_window" id="act_test_case_model">
            <field name="name">Test Case Parameters</field>
            <field name="res_model">ir.test_case</field>
        </record>
        <record model="ir.action.act_window.view" id="act_test_case_model_view2">
            <field name="sequence" eval="10"/>
            <field name="view" ref="test_case_form"/>
            <field name="act_window" ref="act_test_case_model"/>
        </record>
        <menuitem parent="menu_test_case" sequence="1" action="act_test_case_model" id="menu_test_case_model"/>
        <!-- Data -->
        <record model="ir.test_case" id="test_case_configuration">
            <field name="language" ref="ir.lang_en"/>
        </record>
        <!-- ###################### -->
        <!-- # Test Case Instance # -->
        <!-- ###################### -->
        <record model="ir.ui.view" id="test_case_instance_view_form">
            <field name="model">ir.test_case.instance</field>
            <field name="type">form</field>
            <field name="name">test_case_instance_form</field>
        </record>
        <record model="ir.ui.view" id="test_case_instance_view_list">
            <field name="model">ir.test_case.instance</field>
            <field name="type">tree</field>
            <field name="name">test_case_instance_list</field>
        </record>
        <!-- Data -->
        <record model="ir.test_case.instance" id="set_global_search">
            <field name="name">Set Global Search</field>
            <field name="method_name">set_global_search</field>
        </record>
        <record model="ir.test_case.instance" id="set_language_translatable">
            <field name="name">Set Language Translatable</field>
            <field name="method_name">set_language_translatable</field>
        </record>
        <!-- ############################################################ -->
        <!-- Test Case Selector -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="test_case_run_select_method_list">
            <field name="model">ir.test_case.run.select.method</field>
            <field name="type">tree</field>
            <field name="name">test_case_run_select_method_list</field>
        </record>
        <!-- ############################################################ -->
        <!-- Select Test Case -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="test_case_run_select_form">
            <field name="model">ir.test_case.run.select</field>
            <field name="type">form</field>
            <field name="name">test_case_run_select_form</field>
        </record>
        <!-- ############################################################ -->
        <!-- Test Case File Selector -->
        <!-- ############################################################ -->
        <record model="ir.ui.view" id="test_case_run_select_file_list">
            <field name="model">ir.test_case.run.select.file</field>
            <field name="type">tree</field>
            <field name="name">test_case_run_select_file_list</field>
        </record>
        <!-- ############################################################ -->
        <!-- Test Case Wizard -->
        <!-- ############################################################ -->
        <record model="ir.action.wizard" id="act_test_case_wizard">
            <field name="name">Test Case Launcher</field>
            <field name="wiz_name">ir.test_case.run</field>
        </record>
        <menuitem name="Test Case Launcher" id="test_case_menu" sequence="100" parent="menu_test_case" action="act_test_case_wizard"/>
    </data>
</tryton>
