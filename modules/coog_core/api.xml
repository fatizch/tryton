<tryton>
    <data depends="api">
        <!-- ##################### -->
        <!-- # API Configuration # -->
        <!-- ##################### -->
        <record model="ir.ui.view" id="api_configuration_view_form">
            <field name="model">api.configuration</field>
            <field name="type">form</field>
            <field name="name">api_configuration_form</field>
        </record>
        <record model="ir.action.act_window" id="act_api_configuration">
            <field name="name">api Configuration</field>
            <field name="res_model">api.configuration</field>
        </record>
        <record model="ir.action.act_window.view" id="act_api_configuration_view">
            <field name="sequence" eval="1"/>
            <field name="view" ref="api_configuration_view_form"/>
            <field name="act_window" ref="act_api_configuration"/>
        </record>
        <menuitem id="menu_api_conf" name="API Configuration" parent="ir.menu_administration" icon="tryton-settings" action="act_api_configuration"/>
        <!-- ################## -->
        <!-- # API Identity # -->
        <!-- ################## -->
        <record model="ir.ui.view" id="api_identity_view_form">
            <field name="model">ir.api.identity</field>
            <field name="type">form</field>
            <field name="name">api_identity_form</field>
        </record>
        <record model="ir.ui.view" id="api_identity_view_list">
            <field name="model">ir.api.identity</field>
            <field name="type">tree</field>
            <field name="name">api_identity_list</field>
        </record>
        <!-- Menu -->
        <record model="ir.action.act_window" id="act_open_api_identity">
            <field name="name">API Identities</field>
            <field name="res_model">ir.api.identity</field>
        </record>
        <record model="ir.action.act_window.view" id="act_open_api_identity_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="api_identity_view_list"/>
            <field name="act_window" ref="act_open_api_identity"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_api_identity_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="api_identity_view_form"/>
            <field name="act_window" ref="act_open_api_identity"/>
        </record>
        <menuitem parent="res.menu_res" sequence="200" action="act_open_api_identity" id="menu_open_api_identity"/>
        <!-- ################ -->
        <!-- # API Resource # -->
        <!-- ################ -->
        <record model="ir.ui.view" id="api_resource_view_form">
            <field name="model">api.resource</field>
            <field name="type">form</field>
            <field name="name">api_resource_form</field>
        </record>
        <record model="ir.ui.view" id="api_resource_view_list">
            <field name="model">api.resource</field>
            <field name="type">tree</field>
            <field name="name">api_resource_list</field>
        </record>
        <record model="ir.action.act_window" id="act_open_api_resources">
            <field name="name">API Resources</field>
            <field name="domain" eval="[('origin', '=', (Eval('active_model'),Eval('active_id')))]" pyson="1"/>
            <field name="res_model">api.resource</field>
        </record>
        <record model="ir.action.act_window.view" id="act_open_api_resource_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="api_resource_view_list"/>
            <field name="act_window" ref="act_open_api_resources"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_api_resource_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="api_resource_view_form"/>
            <field name="act_window" ref="act_open_api_resources"/>
        </record>
        <!-- ############### -->
        <!-- # User Relate # -->
        <!-- ############### -->
        <record model="ir.action.act_window" id="act_open_user_api_identity">
            <field name="name">API Identity</field>
            <field name="domain" eval="[('user', '=', Eval('active_id'))]" pyson="1"/>
            <field name="res_model">ir.api.identity</field>
        </record>
        <record model="ir.action.act_window.view" id="act_open_user_api_identity_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="api_identity_view_list"/>
            <field name="act_window" ref="act_open_user_api_identity"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_user_api_identity_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="api_identity_view_form"/>
            <field name="act_window" ref="act_open_user_api_identity"/>
        </record>
        <record model="ir.action.keyword" id="act_open_user_api_identity_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">res.user,-1</field>
            <field name="action" ref="act_open_user_api_identity"/>
        </record>
    </data>
    <data depends="api" noupdate="1">
        <record model="api.configuration" id="api_configuration_instance"/>
    </data>
</tryton>
