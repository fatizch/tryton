<tryton>
    <data>
        <!-- Person form view -->
        <record model="ir.ui.view" id="person_view_form">
            <field name="model">party.person</field>
            <field name="type">form</field>
            <field name="inherit" ref="coop_party.person_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                <xpath expr="/form"
                    position="replace_attributes">
                    <form col="10"/>
                </xpath>
                <xpath expr="/form/notebook"
                    position="replace_attributes">
                    <notebook colspan="10"/>
                </xpath>
                    <xpath expr="/form/label[@name=&quot;ssn&quot;]"
                        position="replace"/>
                    <xpath expr="/form/field[@name=&quot;ssn&quot;]"
                        position="replace"/>
                    <xpath expr="/form/label[@name=&quot;gender&quot;]" position="before">
                        <label name="ssn" xalign="0"/>
                        <group id="ssn" col="8" colspan="1">
                            <field name="ssn_no_key" colspan="7"/>
                            <field name="ssn_key"/>
                        </group>
                    </xpath>
                    
                </data>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              **************   Employee     *************
              *******************************************-->
        <record model="ir.ui.view" id="employee_view_form">
            <field name="model">company.employee</field>
            <field name="type">form</field>
            <field name="inherit" ref="company.employee_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath expr="/form/label[@name=&quot;siren&quot;]" position="replace">
                    </xpath>
                    <xpath expr="/form/field[@name=&quot;siren&quot;]" position="replace">
                    </xpath>
                </data>
                ]]>
            </field>
        </record>
        <!-- Company form view -->
        <record model="ir.ui.view" id="company_view_form">
            <field name="model">company.company</field>
            <field name="type">form</field>
            <field name="inherit" ref="coop_party.company_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath expr="/form/notebook" position="before">
                        <label name="siren"/>
                        <field name="siren"/>
                </xpath>
                </data>
                ]]>
            </field>
        </record>
    </data>
</tryton>