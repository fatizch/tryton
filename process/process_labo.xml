<?xml version="1.0"?>
<tryton>
  <data>
    <!-- Process -->
    <menuitem name="Process Lab" id="menu_process_test" sequence="50"/>
    <!-- /Process -->
    <record model="ir.ui.view" id="step_view_tree">
      <field name="model">process.step_desc</field>
      <field name="type">tree</field>
      <field name="name">step_desc_tree</field>
    </record>
    <!-- form view -->
    <record model="ir.ui.view" id="step_view_form">
      <field name="model">process.step_desc</field>
      <field name="type">form</field>
      <field name="name">step_desc_form</field>
    </record>
    <!-- View for the main menu and the event -->
    <record model="ir.action.act_window" id="act_step_form">
      <field name="name">step</field>
      <field name="res_model">process.step_desc</field>
    </record>
    <!-- View that connect the form in the tree with the specification -->
    <record model="ir.action.act_window.view" id="act_step_form_view1">
      <field name="sequence" eval="10"/>
      <field name="view" ref="step_view_tree"/>
      <field name="act_window" ref="act_step_form"/>
    </record>
    <!-- View for the edition or the Form of step -->
    <record model="ir.action.act_window.view" id="act_step_form_view2">
      <field name="sequence" eval="21"/>
      <field name="view" ref="step_view_form"/>
      <field name="act_window" ref="act_step_form"/>
    </record>
    <!-- Step -->
    <menuitem parent="test_process" sequence="1" id="menu_process_test_form" icon="tryton-list" action="act_step_form"/>
    <!-- Method -->
    <record model="ir.ui.view" id="step_method_view_tree">
      <field name="model">process.step_method_desc</field>
      <field name="type">tree</field>
      <field name="name">step_method_tree</field>
    </record>
    <!-- form view -->
    <record model="ir.ui.view" id="step_method_view_form">
      <field name="model">process.step_method_desc</field>
      <field name="type">form</field>
      <field name="name">step_method_form</field>
    </record>
    <!-- View for the main menu and the event -->
    <record model="ir.action.act_window" id="act_step_method_form">
      <field name="name">Step Method</field>
      <field name="res_model">process.step_method_desc</field>
    </record>
    <!-- View that connect the form in the tree with the specification -->
    <record model="ir.action.act_window.view" id="act_step_method_form_view1">
      <field name="sequence" eval="10"/>
      <field name="view" ref="step_method_view_tree"/>
      <field name="act_window" ref="act_step_method_form"/>
    </record>
    <!-- View for the edition or the Form of step -->
    <record model="ir.action.act_window.view" id="act_step_method_form_view2">
      <field name="sequence" eval="21"/>
      <field name="view" ref="step_method_view_form"/>
      <field name="act_window" ref="act_step_method_form"/>
    </record>
    <!-- Method -->
  </data>
</tryton>
