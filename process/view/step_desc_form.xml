<?xml version="1.0"?>
<form string="Step Descriptor">
  <group id="global_part">
    <label name="fancy_name"/>
    <field name="fancy_name"/>
    <label name="technical_name"/>
    <field name="technical_name"/>
  </group>
  <newline/>
  <notebook>
    <page string="XML" id="XML">
      <label name="colspan"/>
      <field name="colspan" colspan="3"/>
      <newline/>
      <field name="step_xml" xexpand="1" xfill="1" yexpand="1" yfill="1" colspan="4"/>
    </page>
    <page string="Code" id="code">
      <field name="code_before" pre_validate="1"/>
      <field name="code_after" pre_validate="1"/>
    </page>
    <page string="Authorizations" id="authorizations">
      <field name="authorizations" xexpand="1" xfill="1" yexpand="1" yfill="1"/>
    </page>
    <page string="Usage" id="usage">
      <field name="processes" xexpand="1" xfill="1" yexpand="1" yfill="1" readonly="1"/>
    </page>
  </notebook>
</form>
