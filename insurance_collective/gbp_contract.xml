<?xml version="1.0"?>
<tryton>
    <data>
        <!-- Tree view for contract -->
        <record model="ir.ui.view" id="gbp_contract_view_tree">
            <field name="model">ins_collective.gbp_contract</field>
            <field name="type">tree</field>
            <field name="name">gbp_contract_tree</field>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="gbp_contract_view_form">
            <field name="model">ins_collective.gbp_contract</field>
            <field name="type">form</field>
            <field name="name">gbp_contract_form</field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_gbp_contract_form">
            <field name="name">GBP Contract</field>
            <field name="res_model">ins_collective.gbp_contract</field>
        </record>

        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_gbp_contract_form_view1">
            <field name="sequence" eval="30"/>
            <field name="view" ref="gbp_contract_view_tree"/>
            <field name="act_window" ref="act_gbp_contract_form"/>
        </record>

        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_gbp_contract_form_view2">
            <field name="sequence" eval="40"/>
            <field name="view" ref="gbp_contract_view_form"/>
            <field name="act_window" ref="act_gbp_contract_form"/>
        </record>

        <menuitem parent="menu_group" sequence="3"
            id="menu_gbp_contract_form" icon="tryton-list" action="act_gbp_contract_form"/>

        <record model="ir.ui.view" id="option_view_tree">
            <field name="model">ins_collective.option</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_contract.option_view_tree"/>
            <field name="name">option_tree</field>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="option_view_form">
            <field name="model">ins_collective.option</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_contract.option_view_form"/>
            <field name="arch" type="xml"/>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_option_form">
            <field name="name">option</field>
            <field name="res_model">ins_collective.option</field>
        </record>

        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_option_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="option_view_tree"/>
            <field name="act_window" ref="act_option_form"/>
        </record>

        <!-- View for the edition or the Form of coverage -->
        <record model="ir.action.act_window.view" id="act_option_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="option_view_form"/>
            <field name="act_window" ref="act_option_form"/>
        </record>
    </data>
</tryton>
