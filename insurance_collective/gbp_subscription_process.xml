<?xml version="1.0"?>
<tryton>
	<data>
		<record model="ir.action.wizard" id="gbp_project_view_action">
			<field name="name">New GBP Subscription Process</field>
			<field name="wiz_name">ins_contract.gbp_subs_process</field>
			<field name="model">ir.ui.menu</field>
		</record>

		<menuitem parent="menu_contract" action="gbp_project_view_action"
			id="menu_start_gbp_subs"/>

		<record model="ir.ui.view" id="gbp_project_view">
			<field name="model">ins_contract.gbp_subs_process.project</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
					<![CDATA[ 
						<form string="GBP Subscription Process - Project Step">
							<label name="start_date" xalign="0"/>
							<field name="start_date" xfill="1"/>
							<newline/>
							<label name="subscriber" xalign="0"/>
							<field name="subscriber"/>
							<newline/>
							<label name="broker" xalign="0"/>
							<field name="broker" xfill="1"/>				
						</form>
					]]>
			</field>
		</record>

		<record model="ir.ui.view" id="gbp_extension_view">
			<field name="model">ins_contract.gbp_subs_process.extension_gbp</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
					<![CDATA[
						<form string="GBP Subscription Process - GBP">
							<label name="contact" xalign="0"/>
							<field name="contact"/>
							<newline/>
							<field name="final_product" mode="form"/>
						</form>
					]]>
			</field>
		</record>
		
		<record model="ir.action.wizard" id="resume_gbp_subs_process">
            <field name="name">Resume Process</field>
            <field name="wiz_name">ins_contract.gbp_subs_process</field>
            <field name="model">ins_process.suspended_process</field>
        </record>
	</data>
	
		<!-- Here are some init data for a default GBP Subscription Process -->
	
	<data>
		<record model="ins_process.process_desc" id="gbp_subs_process_desc">
			<field name="name">GBP Subscription Process Descriptor</field>
			<field name="process_model">ins_contract.gbp_subs_process</field>	
		</record>
		<record model="ins_process.step_desc" id="gbp_project_step_desc">
			<field name="button_next">True</field>
			<field name="button_previous"></field>
			<field name="button_check"></field>
			<field name="button_complete"></field>
			<field name="button_cancel">True</field>
			<field name="button_suspend">True</field>
			<field name="button_default">button_next</field>
			<field name="on_product_step">0</field>
			<field name="process" ref="gbp_subs_process_desc"/>
			<field name="virtual_step">0</field>
			<field name="sequence">1</field>
			<field name="step_model">ins_contract.gbp_subs_process.project</field>	
		</record>
		<record model="ins_process.step_desc" id="gbp_extension_step_desc">
			<field name="button_next"></field>
			<field name="button_previous">True</field>
			<field name="button_check">True</field>
			<field name="button_complete">True</field>
			<field name="button_cancel">True</field>
			<field name="button_suspend">True</field>
			<field name="button_default">button_complete</field>
			<field name="on_product_step">0</field>
			<field name="process" ref="gbp_subs_process_desc"/>
			<field name="virtual_step">0</field>
			<field name="sequence">2</field>
			<field name="step_model">ins_contract.gbp_subs_process.extension_gbp</field>	
		</record>
	</data>
</tryton>
		