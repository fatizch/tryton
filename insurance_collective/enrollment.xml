<?xml version="1.0"?>
<tryton>
    <data>
        <!-- Tree view for contract -->
        <record model="ir.ui.view" id="enrollment_view_tree">
            <field name="model">ins_collective.enrollment</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_contract.contract_view_tree"/>
            <field name="name">enrollment_tree</field>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="enrollment_view_form">
            <field name="model">ins_collective.enrollment</field>
            <field name="type">form</field>
            <field name="name">enrollment_form</field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_enrollment_form">
            <field name="name">Enrollment</field>
            <field name="res_model">ins_collective.enrollment</field>
        </record>

        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_enrollment_form_view1">
            <field name="sequence" eval="50"/>
            <field name="view" ref="enrollment_view_tree"/>
            <field name="act_window" ref="act_enrollment_form"/>
        </record>

        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_enrollment_form_view2">
            <field name="sequence" eval="60"/>
            <field name="view" ref="enrollment_view_form"/>
            <field name="act_window" ref="act_enrollment_form"/>
        </record>

        <menuitem parent="menu_group" sequence="7" id="menu_enrollment_form"
            icon="tryton-list" action="act_enrollment_form"/>
        <!--################################################################ -->
        <!-- Enrollment Relate -->
        <!--################################################################ -->
        <record model="ir.action.act_window" id="act_enrollment_relate_form">
            <field name="name">Enrollments</field>
            <field name="res_model">ins_collective.enrollment</field>
            <field name="domain">[('gbp', '=', Eval('active_id'))]</field>
        </record>
        <record model="ir.action.keyword" id="act_gbp_relate_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">ins_collective.contract,-1</field>
            <field name="action" ref="act_enrollment_relate_form"/>
        </record>
    </data>
</tryton>
