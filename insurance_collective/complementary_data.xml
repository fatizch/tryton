<?xml version="1.0"?>
<tryton>
    <data>
    <!--################################################################-->
    <!--                       Complementary Data Manager                     -->
    <!--################################################################-->

        <record model="ir.ui.view" id="complementary_data_view_form">
            <field name="model">ins_collective.complementary_data_manager</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_product.complementary_data_view_form"/>
            <field name="arch" type="xml"/>
        </record>
    <!--################################################################-->
    <!--                       Coop Schema Elements                     -->
    <!--################################################################-->

        <record model="ir.ui.view" id="schema_element_view_tree">
            <field name="model">ins_collective.schema_element</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_product.schema_element_view_tree"/>
            <field name="arch" type="xml"/>
        </record>

        <record model="ir.ui.view" id="schema_element_view_form">
            <field name="model">ins_collective.schema_element</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_product.schema_element_view_form"/>
            <field name="arch" type="xml"/>
        </record>

        <record model="ir.action.act_window" id="act_model_coop_schema">
            <field name="name">Collective Complementary Data</field>
            <field name="res_model">ins_collective.schema_element</field>
        </record>
        <record model="ir.action.act_window.view" id="act_model_coop_schema_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="schema_element_view_tree"/>
            <field name="act_window" ref="act_model_coop_schema"/>
        </record>
        <record model="ir.action.act_window.view" id="act_model_coop_schema_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="schema_element_view_form"/>
            <field name="act_window" ref="act_model_coop_schema"/>
        </record>
        <menuitem parent="insurance_product.menu_product_configuration"
            action="act_model_coop_schema" id="menu_model_coop_schema"/>
    </data>
</tryton>
