        <menuitem parent="insurance_contract.menu_contract" name="Group"
            id="menu_group" sequence="20"/>
        <!--################################################################ -->
        <!-- BR Relate -->
        <!--################################################################ -->
        <record model="ir.action.act_window" id="act_pricing_rule_relate_form">
            <field name="name">Pricing</field>
            <field name="res_model">ins_collective.generic_business_rule</field>
            <field name="domain">[('manager.offered', '=', ('ins_collective.coverage', Eval('active_id'))), ('kind', '=','ins_collective.pricing_rule')]</field>
        </record>
        <record model="ir.action.keyword" id="act_coverage_relate_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">ins_collective.coverage,-1</field>
            <field name="action" ref="act_pricing_rule_relate_form"/>
        </record>
    </data>
</tryton>
