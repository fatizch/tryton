<?xml version="1.0"?>
<tryton>
    <data>

        <!-- *******************************************
            ************** Product **************
            ******************************************* -->
        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_product_form">
            <field name="name">Insurance Plan</field>
            <field name="res_model">ins_collective.product</field>
        </record>
        <record model="ir.ui.view" id="product_view_form">
            <field name="model">ins_collective.product</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_product.product_view_form"/>
            <field name="name">gbp_product_form</field>
        </record>
        <record model="ir.ui.view" id="product_view_tree">
            <field name="model">ins_collective.product</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_product.product_view_tree"/>
            <field name="arch" type="xml"/>
        </record>
        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_product_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="product_view_form"/>
            <field name="act_window" ref="act_product_form"/>
        </record>
        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_product_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="product_view_tree"/>
            <field name="act_window" ref="act_product_form"/>
        </record>
        <menuitem parent="insurance_product.menu_product" sequence="10"
            id="menu_product_form" icon="tryton-list" action="act_product_form"/>
        <!-- form view -->
        <!-- /Product -->

        <!-- *******************************************
            ************* Coverage **************
            ******************************************* -->
        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_coverage_form">
            <field name="name">Plan Coverages</field>
            <field name="res_model">ins_collective.coverage</field>
        </record>
        <record model="ir.ui.view" id="coverage_view_form">
            <field name="model">ins_collective.coverage</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_product.coverage_view_form"/>
            <field name="name">gbp_coverage_form</field>
        </record>
        <record model="ir.ui.view" id="coverage_view_tree">
            <field name="model">ins_collective.coverage</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_product.coverage_view_tree"/>
            <field name="arch" type="xml"/>
        </record>
        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_coverage_tree_view">
            <field name="sequence" eval="30"/>
            <field name="view" ref="coverage_view_tree"/>
            <field name="act_window" ref="act_coverage_form"/>
        </record>

        <!-- View for the edition or the Form of coverage -->
        <record model="ir.action.act_window.view" id="act_coverage_form_view">
            <field name="sequence" eval="40"/>
            <field name="view" ref="coverage_view_form"/>
            <field name="act_window" ref="act_coverage_form"/>
        </record>

        <menuitem parent="insurance_product.menu_product" sequence="20"
            id="menu_coverage_form" icon="tryton-list" action="act_coverage_form"/>
        <!--/Coverage -->

        <!--############################################################### -->
        <!-- Coverage Relate -->
        <!--############################################################### -->
        <record model="ir.action.act_window" id="act_coverage_relate_form">
            <field name="name">Coverages</field>
            <field name="res_model">ins_collective.coverage</field>
            <field name="domain">[('product', '=', Eval('active_id')), ('is_package', '=', False)]</field>
        </record>
        <record model="ir.action.keyword" id="act_product_relate_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">ins_collective.product,-1</field>
            <field name="action" ref="act_coverage_relate_form"/>
        </record>

        <record model="ir.action.act_window" id="act_package_relate_form">
            <field name="name">Packages</field>
            <field name="res_model">ins_collective.coverage</field>
            <field name="domain">[('product', '=', Eval('active_id')), ('is_package', '=', True)]</field>
        </record>
        <record model="ir.action.keyword" id="act_product_relate_keyword2">
            <field name="keyword">form_relate</field>
            <field name="model">ins_collective.product,-1</field>
            <field name="action" ref="act_package_relate_form"/>
        </record>
        <!--############################################################### -->

        <!-- *******************************************
            ******** benefit ********
            ******************************************* -->
