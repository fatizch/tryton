<?xml version="1.0"?>
<tryton>
	<data>
		<record model="ir.action.wizard" id="enrollment_view_action">
			<field name="name">New Enrollment</field>
			<field name="wiz_name">ins_collective.enrollment_process</field>
			<field name="model">ir.ui.menu</field>
		</record>

		<menuitem parent="insurance_contract.menu_contract" action="enrollment_view_action"
			id="menu_start_enroll"/>

		<record model="ir.ui.view" id="enrollment_project_view">
			<field name="model">ins_collective.enrollment_process.project</field>
			<field name="type">form</field>
            <field name="inherit" ref="insurance_contract.project_view"/>
			<field name="arch" type="xml">
					<![CDATA[ 
		                <data>
			                <xpath expr="/form/label[@name=&quot;product&quot;]"
			                    position="replace_attributes">
			                    <label name="on_contract" xalign="0"/>
			                </xpath>
						    <xpath expr="/form/field[@name=&quot;product&quot;]"
			                    position="replace_attributes">
			                    <field name="on_contract" colspan="2"/>
			                </xpath>
		                </data>
					]]>
			</field>
		</record>

		<record model="ir.action.wizard" id="resume_enrollment_process">
            <field name="name">Resume Process</field>
            <field name="wiz_name">ins_collective.enrollment_process</field>
            <field name="model">ins_process.suspended_process</field>
        </record>
	</data>
	
		<!-- Here are some init data for a default GBP Subscription Process -->
	
	<data>
		<record model="ins_process.process_desc" id="enrollment_process_desc">
			<field name="name">Enrollment Process Descriptor</field>
			<field name="process_model">ins_collective.enrollment_process</field>	
		</record>
		<record model="ins_process.step_desc" id="enrollment_project_step_desc">
			<field name="button_next">True</field>
			<field name="button_previous"></field>
			<field name="button_check"></field>
			<field name="button_complete"></field>
			<field name="button_cancel">True</field>
			<field name="button_suspend">True</field>
			<field name="button_default">button_next</field>
			<field name="on_product_step">0</field>
			<field name="process" ref="enrollment_process_desc"/>
			<field name="virtual_step">0</field>
			<field name="sequence">1</field>
			<field name="step_model">ins_collective.enrollment_process.project</field>	
		</record>
		<record model="ins_process.step_desc" id="enrollment_option_selection_step_desc">
			<field name="button_next">True</field>
			<field name="button_previous">True</field>
			<field name="button_check">True</field>
			<field name="button_complete"></field>
			<field name="button_cancel">True</field>
			<field name="button_suspend">True</field>
			<field name="button_default">button_next</field>
			<field name="on_product_step">0</field>
			<field name="process" ref="enrollment_process_desc"/>
			<field name="virtual_step">0</field>
			<field name="sequence">2</field>
			<field name="step_model">ins_collective.enrollment_process.option_selection</field>	
		</record>
		<record model="ins_process.step_desc" id="enrollment_extension_step_desc">
			<field name="button_next"></field>
			<field name="button_previous">True</field>
			<field name="button_check">True</field>
			<field name="button_complete">True</field>
			<field name="button_cancel">True</field>
			<field name="button_suspend">True</field>
			<field name="button_default">button_complete</field>
			<field name="on_product_step">1</field>
			<field name="process" ref="enrollment_process_desc"/>
			<field name="virtual_step">0</field>
			<field name="sequence">3</field>
			<field name="product_step_name">extension</field>	
		</record>
	</data>
</tryton>
		