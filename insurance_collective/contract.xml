<?xml version="1.0"?>
<tryton>
    <data>
        <!-- Tree view for contract -->
        <record model="ir.ui.view" id="contract_view_tree">
            <field name="model">ins_collective.contract</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_contract.contract_view_tree"/>
            <field name="arch" type="xml"/>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="contract_view_form">
            <field name="model">ins_collective.contract</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_contract.contract_view_form"/>
            <field name="name">contract_form</field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_contract_form">
            <field name="name">Group Contract</field>
            <field name="res_model">ins_collective.contract</field>
        </record>

        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_contract_form_view1">
            <field name="sequence" eval="30"/>
            <field name="view" ref="contract_view_tree"/>
            <field name="act_window" ref="act_contract_form"/>
        </record>

        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_contract_form_view2">
            <field name="sequence" eval="40"/>
            <field name="view" ref="contract_view_form"/>
            <field name="act_window" ref="act_contract_form"/>
        </record>

        <menuitem parent="menu_group" sequence="3" id="menu_contract_form"
            icon="tryton-list" action="act_contract_form"/>

        <record model="ir.ui.view" id="option_view_tree">
            <field name="model">ins_collective.option</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_contract.option_view_tree"/>
            <field name="arch" type="xml"/>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="option_view_form">
            <field name="model">ins_collective.option</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_contract.option_view_form"/>
            <field name="arch" type="xml"/>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_option_form">
            <field name="name">option</field>
            <field name="res_model">ins_collective.option</field>
        </record>

        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_option_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="option_view_tree"/>
            <field name="act_window" ref="act_option_form"/>
        </record>

        <!-- View for the edition or the Form of coverage -->
        <record model="ir.action.act_window.view" id="act_option_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="option_view_form"/>
            <field name="act_window" ref="act_option_form"/>
        </record>
        <!--################################################################ -->
        <!-- Covered Element -->
        <!--################################################################ -->

        <record model="ir.ui.view" id="covered_element_view_tree">
            <field name="model">ins_collective.covered_element</field>
            <field name="type">tree</field>
            <field name="name">covered_element_tree</field>
        </record>

        <record model="ir.ui.view" id="covered_element_view_form">
            <field name="model">ins_collective.covered_element</field>
            <field name="type">form</field>
            <field name="name">covered_element_form</field>
        </record>
        <record model="ir.ui.view" id="covered_element_view_form_simple">
            <field name="model">ins_collective.covered_element</field>
            <field name="type">form</field>
            <field name="name">covered_element_form_simple</field>
        </record>
        <!--################################################################ -->
        <!-- Covered Data -->
        <!--################################################################ -->
        <record model="ir.ui.view" id="covered_data_view_tree">
            <field name="model">ins_collective.covered_data</field>
            <field name="type">tree</field>
            <field name="name">covered_data_tree</field>
        </record>
        <record model="ir.ui.view" id="covered_data_view_form">
            <field name="model">ins_collective.covered_data</field>
            <field name="type">form</field>
            <field name="name">covered_data_form</field>
        </record>
        <!--################################################################ -->
        <!-- Price Lines -->
        <!--################################################################ -->
        <record model="ir.ui.view" id="price_line_expandable_view_tree">
            <field name="model">ins_collective.price_line</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_contract.price_line_expandable_view_tree"/>
            <field name="arch" type="xml"/>
        </record>
        <record model="ir.ui.view" id="price_line_view_tree">
            <field name="model">ins_collective.price_line</field>
            <field name="type">tree</field>
            <field name="inherit" ref="insurance_contract.price_line_view_tree"/>
            <field name="arch" type="xml"/>
        </record>
        <record model="ir.ui.view" id="price_line_view_form">
            <field name="model">ins_collective.price_line</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_contract.price_line_view_form"/>
            <field name="arch" type="xml"/>
        </record>
        <!--################################################################ -->
        <!-- Billing Manager -->
        <!--################################################################ -->
        <record model="ir.ui.view" id="billing_manager_view_form">
            <field name="model">ins_collective.billing_manager</field>
            <field name="type">form</field>
            <field name="inherit" ref="insurance_contract.billing_manager_view_form"/>
            <field name="arch" type="xml"/>
        </record>
    </data>
</tryton>
