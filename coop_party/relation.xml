<?xml version="1.0"?>
<tryton>
    <data>
        <!-- *******************************************
            ********* Party Relation Kind ***********
            ******************************************* -->

        <!-- Party Relation kind tree view -->
        <record model="ir.ui.view" id="party_relation_kind_view_tree">
            <field name="model">party.party_relation_kind</field>
            <field name="type">tree</field>
            <field name="name">relation_kind_tree</field>
        </record>

        <!-- Party Relation Kind form view -->
        <record model="ir.ui.view" id="party_relation_kind_view_form">
            <field name="model">party.party_relation_kind</field>
            <field name="type">form</field>
            <field name="name">relation_kind_form</field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_party_relation_kind_form">
            <field name="name">Party Relation Kind</field>
            <field name="res_model">party.party_relation_kind</field>
            <field name="domain">[("parent", "=", False)]</field>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_party_relation_kind_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="party_relation_kind_view_tree"/>
            <field name="act_window" ref="act_party_relation_kind_form"/>
        </record>

        <!-- View for the edition or the Party Relation -->
        <record model="ir.action.act_window.view" id="act_party_relation_kind_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="party_relation_kind_view_form"/>
            <field name="act_window" ref="act_party_relation_kind_form"/>
        </record>

        <!-- Sub menu configuration Party Relation -->
        <menuitem parent="party.menu_configuration" sequence="10"
            id="menu_party_relation_kind_form" icon="tryton-list"
            action="act_party_relation_kind_form"/>
        <!-- *******************************************
            ************** Party Relation ***************
            ******************************************* -->
        <record model="ir.ui.view" id="party_relation_view_form">
            <field name="model">party.party-relation</field>
            <field name="type">form</field>
            <field name="name">relation_form</field>
        </record>
        <record model="ir.ui.view" id="party_relation_view_tree_from">
            <field name="model">party.party-relation</field>
            <field name="type">tree</field>
            <field name="name">relation_tree_from</field>
        </record>
        <record model="ir.ui.view" id="party_relation_view_tree_to">
            <field name="model">party.party-relation</field>
            <field name="type">tree</field>
            <field name="name">relation_tree_to</field>
        </record>
        <!-- *******************************************
            *** Party Relation Kind Test Case*******
            ******************************************* -->
        <record model="party.party_relation_kind" id="spouse">
            <field name="name">Spouse Of</field>
            <field name="key">spouse</field>
        </record>
        <record model="party.party_relation_kind" id="parent">
            <field name="name">Parent Of</field>
            <field name="key">parent</field>
        </record>
        <record model="party.party_relation_kind" id="child">
            <field name="name">Children Of</field>
            <field name="key">child</field>
            <field name="parent" ref="parent"/>
        </record>
    </data>
</tryton>
