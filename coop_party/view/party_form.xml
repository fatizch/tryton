<?xml version="1.0"?>
<data>

    <xpath expr="/form/notebook/page[@id='general']" position="before">
        <page string="Summary" id="summary">
            <field name="summary" widget="richtext"/>
        </page>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']/label[@name='active']"
        position="before">
        <label name="code"/>
        <field name="code" xexpand="0"/>
        <label name="is_person"/>
        <field name="is_person" xexpand="0"/>
        <label name="is_company"/>
        <field name="is_company" xexpand="0"/>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <group id="person" colspan="6" col="6"
            states="{'invisible':Bool(~Eval('is_person'))}">
            <label name="gender"/>
            <field name="gender" widget="selection" xexpand="0"/>
            <label name="name"/>
            <field name="name"/>
            <label name="first_name"/>
            <field name="first_name"/>
            <label name="birth_date"/>
            <field name="birth_date"/>
            <label name="maiden_name"/>
            <field name="maiden_name"/>
            <label name="ssn"/>
            <field name="ssn"/>
        </group>
    </xpath>
    <xpath expr="/form/group[@id='checkboxes']" position="after">
        <group id="company" colspan="6" col="6"
            states="{'invisible':Bool(~Eval('is_company'))}">
            <label name="short_name"/>
            <field name="short_name"/>
            <label name="name"/>
            <field name="name"/>
        </group>
    </xpath>
    <xpath expr="/form/field[@name='name']" position="replace"/>
    <xpath expr="/form/label[@name='name']" position="replace"/>
    <xpath expr="/form/field[@name='code']" position="replace"/>
    <xpath expr="/form/label[@name='code']" position="replace"/>
    <xpath expr="/form/notebook/page[@id='accounting']" position="replace_attributes">
        <page id="accounting" states="{'invisible':Bool(~Eval('is_company'))}"/>
    </xpath>
    <xpath expr="/form/notebook" position="inside">
        <page string="Company" id="tree" states="{'invisible': ~Eval('is_company')}">
            <label name="parent"/>
            <field name="parent"/>
            <newline/>
            <field name="children" colspan="4"
                view_ids="coop_party.company_view_tree_hierarchical,coop_party.company_view_form"
                    mode="tree,form"/>
            <field name="employees" colspan="4"/>
        </page>
        <page string="Relations" id="rel">
            <field name="relations" view_ids="coop_party.party_relation_view_tree_from"
                colspan="4"/>
            <field name="in_relation_with" view_ids="coop_party.party_relation_view_tree_to"
                colspan="4"/>
        </page>
        <page string="Roles" id="role">
            <group id="role_group" colspan="4">
                <label name="is_employee"/>
                <field name="is_employee" xexpand="0" width="25"/>
            </group>
            <group id="employee" colspan="4" yexpand="1" yfill="1"
                states="{'invisible': Bool(~Eval('is_employee'))}">
                <field name="employee_role" mode="form"
                    view_ids="coop_party.employee_view_form2"/>
            </group>
            <field name="generic_roles" colspan="4"/>
        </page>
    </xpath>
    <xpath expr="/form/notebook/page/field[@name='categories']" position="replace"/>
    <xpath expr="/form/notebook/page/field[@name='addresses']" position="replace_attributes">
        <field name="addresses" colspan="3"/>
    </xpath>
    <xpath expr="/form/notebook/page/group[@id='lang']" position="replace"/>
    <xpath expr="/form/notebook/page[@id='general']/field[@name='addresses']"
        position="before">
        <label name="lang"/>
        <field name="lang" widget="selection"/>
        <newline/>
    </xpath>
    <xpath expr="/form/notebook/page/field[@name='contact_mechanisms']"
        position="replace_attributes">
        <field name="contact_mechanisms" colspan="1"
            view_ids="party.contact_mechanism_view_tree_sequence" pre_validate="1"/>
    </xpath>
</data>