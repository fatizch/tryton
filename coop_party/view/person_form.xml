<?xml version="1.0"?>
<data>
    <xpath expr="/form/label[@name='code']" position="replace"/>
    <xpath expr="/form/field[@name='code']" position="replace"/>
    <xpath expr="/form/label[@name='name']" position="before">
        <label name="ssn"/>
        <field name="ssn"/>

    </xpath>
    <xpath expr="/form/field[@name='name']" position="after">
        <newline/>
        <label name="gender"/>
        <field name="gender" widget="selection" xexpand="0"/>
        <label name="maiden_name"/>
        <field name="maiden_name"/>
        <newline/>
        <label name="birth_date"/>
        <field name="birth_date"/>
        <label name="first_name"/>
        <field name="first_name"/>
        <newline/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='role']/group[@id='role_group']"
        position="inside">
        <label name="is_employee"/>
        <field name="is_employee" xexpand="0" width="25"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='role']/group[@id='role_group']"
        position="after">
        <group id="employee" colspan="4" yexpand="1" yfill="1"
            states="{'invisible': Bool(~Eval('is_employee'))}">
            <field name="employee_role" mode="form"
                view_ids="coop_party.employee_view_form2"/>
        </group>
    </xpath>

</data>
