<?xml version="1.0"?>
<tryton>
    <data>
        <!-- Let's add a sub menu actor to the party menu -->
        <menuitem name="Actors" parent="party.menu_party" sequence="0"
            id="menu_actor" icon="tryton-party"/>

        <record model="ir.ui.view" id="party_view_form">
            <field name="model">party.party</field>
            <field name="type">form</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="arch" type="xml">
             <![CDATA[
             <data>
                <xpath expr="/form/notebook" position="inside">
                        <page string="Relations" id="rel">
                            <field name="relations"
                                view_ids="coop_party.party_relation_view_tree_from"/>
                            <newline/>
                            <field name="in_relation_with"
                                view_ids="coop_party.party_relation_view_tree_to"/>
                            
                        </page>
                </xpath>
             </data>
             ]]>
            </field>
        </record>
        <!-- Generic actor form view -->
        <record model="ir.ui.view" id="actor_view_form">
            <field name="model">party.actor</field>
            <field name="type">form</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="arch" type="xml">
             <![CDATA[
             <data>
                <xpath expr="/form"
                    position="replace_attributes">
                    <form col="8"/>
                </xpath>
                <xpath expr="/form/label[@name=&quot;name&quot;]"
                    position="replace_attributes">
                    <label name="name" xalign="0"/>
                </xpath>
                <xpath expr="/form/field[@name=&quot;name&quot;]"
                    position="replace_attributes">
                    <field name="name" colspan="2"/>
                </xpath>
                <xpath expr="/form/notebook"
                    position="replace_attributes">
                    <notebook colspan="8"/>
                </xpath>
                <xpath expr="/form/notebook/page[@id=&quot;accounting&quot;]"
                    position="replace">
                </xpath>
                <xpath expr="/form/notebook" position="inside">
                    <page string="Roles" id="role">
                        <group id="role_group" colspan="4">
                        </group>
                        <field name="generic_roles" colspan="4"/>
                    </page>
                </xpath>
             </data>
             ]]>
            </field>
        </record>
        

        <!--  ******************************************* 
              **************   Person     ***************
              *******************************************-->

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_person_form">
            <field name="name">Person</field>
            <field name="res_model">party.person</field>
        </record>

        <!-- Sub menu actors Person -->
        <menuitem parent="menu_actor" sequence="1" id="menu_person_form"
            icon="tryton-list" action="act_person_form" />

        <!-- Person form view -->
        <record model="ir.ui.view" id="person_view_form">
            <field name="model">party.person</field>
            <field name="type">form</field>
            <field name="inherit" ref="actor_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath expr="/form/label[@name=&quot;name&quot;]" position="before">
                            <label name="gender"/>
                            <field name="gender" widget="selection" xalign="0" xexpand="0"/>
                    </xpath>
                    <xpath expr="/form/field[@name=&quot;name&quot;]" position="after">
                            <label name="first_name" xalign="0"/>
                            <field name="first_name" colspan="2"/>
                            <newline/>
                            <label name="birth_date" xalign="0"/>
                            <field name="birth_date"/>
                            <label name="ssn" xalign="0"/>
                            <field name="ssn" colspan="2"/>
                            <label name="maiden_name" xalign="0"/>
                            <field name="maiden_name" colspan="2"/>
                            <newline/>
                    </xpath>
                    <xpath expr="/form/notebook/page[@id=&quot;role&quot;]/group[@id=&quot;role_group&quot;]"
                    position="inside">
                        <label name="is_employee"/>
                        <field name="is_employee" xexpand="0" width="25"/>
                    </xpath>
                    <xpath expr="/form/notebook/page[@id=&quot;role&quot;]/group[@id=&quot;role_group&quot;]"
                    position="after">
                        <group string="Employee" id="employee" colspan="4" yexpand="1" yfill="1"
                        states="{'invisible': Bool(~Eval('is_employee'))}">
                            <field name="employee_role" mode="form" view_ids="company.employee_view_form2"/>
                        </group>
                    </xpath>
                    </data>
                ]]>
            </field>
        </record>

        <!-- Person tree view -->
        <record model="ir.ui.view" id="person_view_tree">
            <field name="model">party.person</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                        <![CDATA[
                            <tree>
                                <field name="ssn"/>
                                <field name="name"/>
                                <field name="first_name"/>
                                <field name="birth_date"/>
                                <field name="is_employee"/>
                            </tree>
                        ]]>
            </field>
        </record>

        <!-- View for the edition of the person -->
        <record model="ir.action.act_window.view" id="act_person_form_view">
            <field name="sequence" eval="20" />
                <field name="view" ref="person_view_form" />
            <field name="act_window" ref="act_person_form" />
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_person_tree_view">
            <field name="sequence" eval="10" />
            <field name="view" ref="person_view_tree" />
            <field name="act_window" ref="act_person_form" />
        </record>

        <!--  ******************************************* 
              **************   Employee     *************
              *******************************************-->
        <record model="ir.ui.view" id="employee_view_form">
            <field name="model">company.employee</field>
            <field name="type">form</field>
            <field name="inherit" ref="company.employee_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath 
                        expr="/form"
                        position="replace_attributes">
                        <form col="4"/>
                    </xpath>
                    <xpath expr="/form/label[@name=&quot;name&quot;]" position="replace"/>
                    <xpath expr="/form/field[@name=&quot;name&quot;]" position="replace"/>
                    <xpath expr="/form/label[@name=&quot;code&quot;]" position="replace"/>
                    <xpath expr="/form/field[@name=&quot;code&quot;]" position="replace"/>
                    <xpath expr="/form/group[@id=&quot;checkboxes&quot;]" position="replace"/>
                    <xpath 
                        expr="/form/notebook"
                        position="before">
                        <field name="person" mode="form" yfill="1" yexpand="1" colspan="4"/>
                    </xpath>
                    <xpath 
                        expr="/form/notebook"
                        position="replace_attributes">
                        <notebook states="{'invisible':True}"/>
                    </xpath>

                </data>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              ************    Company    ***********
              *******************************************-->

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_company_form">
            <field name="name">Company</field>
            <field name="res_model">company.company</field>
        </record>

        <!-- Sub menu actors Company -->
        <menuitem parent="menu_actor" sequence="0" id="menu_company_form"
            icon="tryton-list" action="act_company_form" />

        <!-- Company form view -->
        <record model="ir.ui.view" id="company_view_form">
            <field name="model">company.company</field>
            <field name="type">form</field>
            <field name="inherit" ref="actor_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath expr="/form/group[@id=&quot;checkboxes&quot;]" position="after">
                        <newline/>
                        <label name="vat_country"/>
                        <field name="vat_country"/>
                        <label name="vat_number"/>
                        <field name="vat_number"/>
                    </xpath>
                    <xpath 
                        expr="/form/notebook/page[@id=&quot;general&quot;]"
                        position="after">
                        <page string="Company" col="2" id="company">
                            <label name="parent"/>
                            <field name="parent"/>
                            <field name="employees" colspan="2"/>
                        </page>
                    </xpath>
                </data>
                ]]>
            </field>
        </record>

        <!-- Company tree view -->
        <record model="ir.ui.view" id="company_view_tree">
            <field name="model">company.company</field>
            <field name="type">tree</field>
            <field name="inherit" ref="party.party_view_tree"/>
            <field name="arch" type="xml">
            </field>
        </record>
        <!-- View for the edition or the company -->
        <record model="ir.action.act_window.view" id="act_company_form_view">
            <field name="sequence" eval="20" />
            <field name="view" ref="company_view_form" />
            <field name="act_window" ref="act_company_form" />
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_company_tree_view">
            <field name="sequence" eval="10" />
            <field name="view" ref="company_view_tree" />
            <field name="act_window" ref="act_company_form" />
        </record>
        <record model="ir.ui.menu" id="company.menu_employee_form"><field name="active" eval="False"/></record>
        <record model="ir.ui.menu" id="company.menu_company_tree"><field name="active" eval="False"/></record>
        <record model="ir.ui.menu" id="company.menu_company_list"><field name="active" eval="False"/></record>

        <!--  ******************************************* 
              ********    Generic Actor Kind   **********
              *******************************************-->
        <!-- generic_actor_kind -->

        <!-- form view -->
        <record model="ir.ui.view" id="generic_actor_kind_view_form">
            <field name="model">party.generic_actor_kind</field>
            <field name="type">form</field>
            <field name="inherit" ref="coop_utils.table_of_table_view_form"/>
            <field name="arch" type="xml">
            </field>
        </record>
        <record model="ir.ui.view" id="generic_actor_kind_view_tree">
            <field name="model">party.generic_actor_kind</field>
            <field name="type">tree</field>
            <field name="inherit" ref="coop_utils.table_of_table_view_tree"/>
            <field name="arch" type="xml"/>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_generic_actor_kind_form">
            <field name="name">Generic Actor</field>
            <field name="res_model">party.generic_actor_kind</field>
            <field name="domain">[("parent", "=", False)]</field>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_generic_actor_kind_form_view1">
            <field name="sequence" eval="10" />
            <field name="view" ref="generic_actor_kind_view_tree" />
            <field name="act_window" ref="act_generic_actor_kind_form" />
        </record>

        <!-- View for the edition or the Form of generic_actor_kind -->
        <record model="ir.action.act_window.view" id="act_generic_actor_kind_form_view2">
            <field name="sequence" eval="20" />
            <field name="view" ref="generic_actor_kind_view_form" />
            <field name="act_window" ref="act_generic_actor_kind_form" />
        </record>

        <menuitem parent="party.menu_configuration" sequence="1" id="menu_generic_actor_kind_form"
            icon="tryton-list" action="act_generic_actor_kind_form" />
        <!-- /generic_actor_kind -->

        <!--  ******************************************* 
              ********    Generic Actor  **********
              *******************************************-->
        <record model="ir.ui.view" id="generic_actor_view_form">
            <field name="model">party.generic_actor</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form>
                    <label name="kind"/>
                    <field name="kind" widget="selection"/>
                    <label name="reference"/>
                    <field name="reference"/>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="generic_actor_view_tree">
            <field name="model">party.generic_actor</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree>
                        <field name="kind"/>
                        <field name="reference"/>
                    </tree>
                ]]>
            </field>
        </record>
    </data>
</tryton>