<?xml version="1.0"?>
<tryton>
    <data>
        <!-- Move configuration to end of the menu -->
        <menuitem name="Configuration" id="party.menu_configuration"
            sequence="100"/>

        <record model="ir.ui.view" id="party_view_tree">
            <field name="model">party.party</field>
            <field name="type">tree</field>
            <field name="inherit" ref="party.party_view_tree"/>
            <field name="name">party_tree</field>
        </record>
        <record model="ir.ui.view" id="party_view_form">
            <field name="model">party.party</field>
            <field name="type">form</field>
            <field name="name">party_form</field>
        </record>
        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_party_form">
            <field name="name">Party</field>
            <field name="res_model">party.party</field>
        </record>
        <!-- Sub menu actors Party -->
        <menuitem id="party.menu_party_form" sequence="3" action="act_party_form"/>

        <record model="ir.action.act_window.view" id="act_party_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="party_view_tree"/>
            <field name="act_window" ref="act_party_form"/>
        </record>
        <!-- View for the edition of the party -->
        <record model="ir.action.act_window.view" id="act_party_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="party_view_form"/>
            <field name="act_window" ref="act_party_form"/>
        </record>

        <!-- Generic actor form view -->
        <record model="ir.ui.view" id="party_root_view_form">
            <field name="model">party.party</field>
            <field name="type">form</field>
            <field name="name">party_root_form</field>
        </record>

        <!-- *******************************************
            ************** Person ***************
            ******************************************* -->

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_person_form">
            <field name="name">Person</field>
            <field name="res_model">party.person</field>
        </record>

        <!-- Sub menu actors Person -->
        <menuitem parent="party.menu_party" sequence="1"
            id="menu_person_form" icon="tryton-list" action="act_person_form"/>

        <!-- Person form view -->
        <record model="ir.ui.view" id="person_view_form">
            <field name="model">party.person</field>
            <field name="type">form</field>
            <field name="inherit" ref="party_root_view_form"/>
            <field name="name">person_form</field>
        </record>

        <!-- Person tree view -->
        <record model="ir.ui.view" id="person_view_tree">
            <field name="model">party.person</field>
            <field name="type">tree</field>
            <field name="name">person_tree</field>
        </record>

        <!-- View for the edition of the person -->
        <record model="ir.action.act_window.view" id="act_person_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="person_view_form"/>
            <field name="act_window" ref="act_person_form"/>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_person_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="person_view_tree"/>
            <field name="act_window" ref="act_person_form"/>
        </record>

        <!-- *******************************************
            ************** Employee *************
            ******************************************* -->
        <record model="ir.ui.view" id="employee_view_form">
            <field name="model">party.employee</field>
            <field name="type">form</field>
            <field name="inherit" ref="party.party_view_form"/>
            <field name="priority">10</field>
            <field name="name">employee_form</field>
        </record>
        <record model="ir.ui.view" id="employee_view_form2">
            <field name="model">party.employee</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="name">employee_form_2</field>
        </record>
        <record model="ir.ui.view" id="employee_view_tree">
            <field name="model">party.employee</field>
            <field name="type">tree</field>
            <field name="name">employee_tree</field>
        </record>
        <!-- *******************************************
            ************ Society ***********
            ******************************************* -->

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_society_form">
            <field name="name">Society</field>
            <field name="res_model">party.society</field>
        </record>

        <!-- Sub menu actors Society -->
        <menuitem parent="party.menu_party" sequence="0"
            id="menu_society_form" icon="tryton-list" action="act_society_form"/>

        <!-- Society form view -->
        <record model="ir.ui.view" id="society_view_form">
            <field name="model">party.society</field>
            <field name="type">form</field>
            <field name="inherit" ref="party_root_view_form"/>
            <field name="name">society_form</field>
        </record>

        <!-- Society tree view -->
        <record model="ir.ui.view" id="society_view_tree">
            <field name="model">party.society</field>
            <field name="type">tree</field>
            <field name="inherit" ref="party.party_view_tree"/>
            <field name="name">society_tree</field>
        </record>
        <!-- View for the edition or the society -->
        <record model="ir.action.act_window.view" id="act_society_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="society_view_form"/>
            <field name="act_window" ref="act_society_form"/>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_society_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="society_view_tree"/>
            <field name="act_window" ref="act_society_form"/>
        </record>

        <!-- *******************************************
            ******** Generic Actor Kind **********
            ******************************************* -->
        <!-- generic_actor_kind -->

        <!-- form view -->
        <record model="ir.ui.view" id="generic_actor_kind_view_form">
            <field name="model">party.generic_actor_kind</field>
            <field name="type">form</field>
            <field name="inherit" ref="coop_utils.table_of_table_view_form"/>
            <field name="arch" type="xml">
            </field>
        </record>
        <record model="ir.ui.view" id="generic_actor_kind_view_tree">
            <field name="model">party.generic_actor_kind</field>
            <field name="type">tree</field>
            <field name="inherit" ref="coop_utils.table_of_table_view_tree"/>
            <field name="arch" type="xml"/>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_generic_actor_kind_form">
            <field name="name">Generic Actor</field>
            <field name="res_model">party.generic_actor_kind</field>
            <field name="domain">[("parent", "=", False)]</field>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_generic_actor_kind_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="generic_actor_kind_view_tree"/>
            <field name="act_window" ref="act_generic_actor_kind_form"/>
        </record>

        <!-- View for the edition or the Form of generic_actor_kind -->
        <record model="ir.action.act_window.view" id="act_generic_actor_kind_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="generic_actor_kind_view_form"/>
            <field name="act_window" ref="act_generic_actor_kind_form"/>
        </record>

        <menuitem parent="party.menu_configuration" sequence="1"
            id="menu_generic_actor_kind_form" icon="tryton-list"
            action="act_generic_actor_kind_form"/>
        <!-- /generic_actor_kind -->

        <!-- *******************************************
            ******** Generic Actor **********
            ******************************************* -->
        <record model="ir.ui.view" id="generic_actor_view_form">
            <field name="model">party.generic_actor</field>
            <field name="type">form</field>
            <field name="name">generic_actor_form</field>
        </record>
        <record model="ir.ui.view" id="generic_actor_view_tree">
            <field name="model">party.generic_actor</field>
            <field name="type">tree</field>
            <field name="name">generic_actor_tree</field>
        </record>
    </data>
</tryton>