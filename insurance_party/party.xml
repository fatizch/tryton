<?xml version="1.0"?>
<tryton>
    <data>
        <!-- Generic actor form view -->
        <record model="ir.ui.view" id="actor_view_form">
            <field name="model">party.actor</field>
            <field name="type">form</field>
            <field name="inherit" ref="coop_party.actor_view_form"/>
            <field name="arch" type="xml">
             <![CDATA[
             <data>
                <xpath expr="/form/notebook/page[@id=&quot;role&quot;]/group[@id=&quot;role_group&quot;]"
                position="inside">
                    <label name="is_customer"/>
                    <field name="is_customer" xexpand="0" width="25"/>
                </xpath>
                <xpath expr="/form/notebook/page[@id=&quot;role&quot;]/group[@id=&quot;role_group&quot;]"
                position="after">
                    <group string="Customer" id="customer" colspan="4" yexpand="1" yfill="1"
                    states="{'invisible': Bool(~Eval('is_customer'))}">
                        <field name="customer_role" mode="form"/>
                    </group>
                    <group string="Insurer" id="insurer" colspan="4" yexpand="1" yfill="1"
                    states="{'invisible': Bool(~Eval('is_insurer'))}">
                        <field name="insurer_role" mode="form" 
                        view_ids="insurance_party.insurer_view_form_hosted"/>
                    </group>
                    <group string="Broker" id="broker" colspan="4" yexpand="1" yfill="1"
                    states="{'invisible': Bool(~Eval('is_broker'))}">
                        <field name="broker_role" mode="form"/>
                    </group>
                </xpath>
             </data>
             ]]>
            </field>
        </record>
        <!--  ******************************************* 
              ************    Legal Entity    ***********
              *******************************************-->
        <!-- Legal entity form view -->
        <record model="ir.ui.view" id="legal_entity_view_form">
            <field name="model">party.legal_entity</field>
            <field name="type">form</field>
            <field name="inherit" ref="coop_party.actor_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath expr="/form/notebook/page[@id=&quot;role&quot;]/group[@id=&quot;role_group&quot;]" 
                    position="inside">
                        <label name="is_insurer"/>
                        <field name="is_insurer" xexpand="0" width="25"/>
                        <label name="is_broker"/>
                        <field name="is_broker" xexpand="0" width="25"/>
                    </xpath>
                </data>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              **************   Insurer     ***************
              *******************************************-->
        <!-- Insurer form view -->
        <record model="ir.ui.view" id="insurer_view_form_hosted">
            <field name="model">party.insurer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form>
                    <label name="reference"/>
                    <field name="reference"/>
                </form>
                ]]>
            </field>
        </record>

        <!-- Insurer tree view -->
        <record model="ir.ui.view" id="insurer_view_tree">
            <field name="model">party.insurer</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree>
                        <field name="reference"/>
                    </tree>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              **************   Broker     ***************
              *******************************************-->
        <!-- Broker form view -->
        <record model="ir.ui.view" id="broker_view_form">
            <field name="model">party.broker</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form>
                    <label name="reference"/>
                    <field name="reference"/>
                </form>
                ]]>
            </field>
        </record>

        <!-- Broker tree view -->
        <record model="ir.ui.view" id="broker_view_tree">
            <field name="model">party.broker</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree>
                        <field name="reference"/>
                    </tree>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              **************   Customer     ***************
              *******************************************-->
        <!-- Customer form view -->
        <record model="ir.ui.view" id="customer_view_form">
            <field name="model">party.customer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form>
                    <label name="reference"/>
                    <field name="reference"/>
                </form>
                ]]>
            </field>
        </record>

        <!-- Customer tree view -->
        <record model="ir.ui.view" id="customer_view_tree">
            <field name="model">party.customer</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree>
                        <field name="reference"/>
                    </tree>
                ]]>
            </field>
        </record>

    </data>
</tryton>
