<?xml version="1.0"?>
<tryton>
    <data>
    <!--################################################################-->
    <!--                       Complementary Data Manager                     -->
    <!--################################################################-->

        <record model="ir.ui.view" id="complementary_data_view_form">
            <field name="model">ins_product.complementary_data_manager</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Complementary Data Manager">
                        <field name="specific_dynamic" colspan="2"/>
                        <field name="shared_dynamic" colspan="2"/>
                    </form>
                ]]>
            </field>
        </record>
    <!--################################################################-->
    <!--                       Coop Schema Elements                     -->
    <!--################################################################-->

        <record model="ir.ui.view" id="schema_element_view_tree">
            <field name="model">ins_product.schema_element</field>
            <field name="type">tree</field>
            <field name="name">schema_element_tree</field>
        </record>

        <record model="ir.ui.view" id="schema_element_view_form">
            <field name="model">ins_product.schema_element</field>
            <field name="type">form</field>
            <field name="name">schema_element_form</field>
        </record>

        <record model="ir.action.act_window" id="act_model_coop_schema">
            <field name="name">Complementary Data Schema Elements</field>
            <field name="res_model">ins_product.schema_element</field>
        </record>
        <record model="ir.action.act_window.view" id="act_model_coop_schema_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="schema_element_view_tree"/>
            <field name="act_window" ref="act_model_coop_schema"/>
        </record>
        <record model="ir.action.act_window.view" id="act_model_coop_schema_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="schema_element_view_form"/>
            <field name="act_window" ref="act_model_coop_schema"/>
        </record>
        <menuitem parent="menu_product_configuration" action="act_model_coop_schema" id="menu_model_coop_schema"/>
    </data>
</tryton>
