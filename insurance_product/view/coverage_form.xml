<?xml version="1.0"?>
<data>
    <xpath expr="/form" position="replace_attributes">
        <form string="Coverage"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='managers']" position="after">
        <page string="Benefits" id="benefits"
            states="{'invisible': Bool(Eval('is_package'))}">
            <field name="benefits"/>
        </page>
    </xpath>
    <xpath expr="/form/notebook/page[@id='managers']" position="before">
        <page string="Coverages" id="package"
            states="{'invisible': Bool(~Eval('is_package'))}">
            <field name="coverages_in_package"/>
        </page>
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='managers']/notebook/page[@id='eligibility']"
        position="before">
        <page string="Coverage Amount" id="coverage_amount"
            states="{'invisible': Bool(Eval('is_package'))}">
            <field name="coverage_amount_rules"/>
        </page>
    </xpath>
    <xpath expr="/form/notebook/page[@id='admin']/group[@id='left']"
        position="inside">
        <label name="item_desc"/>
        <field name="item_desc"/>
        <newline/>
        <label name="currency"/>
        <field name="currency"/>
        <newline/>
        <label name="insurer"/>
        <field name="insurer" widget="selection"/>
        <newline/>
        <label name="subscription_behaviour"/>
        <field name="subscription_behaviour"/>
        <newline/>
    </xpath>
    <xpath expr="/form/label[@name='template']" position="before">
        <label name="family"/>
        <field name="family" xexpand="1"/>
        <newline/>
    </xpath>
</data>
