<?xml version="1.0"?>
<data>
    <xpath expr="/form" position="replace_attributes">
        <form string="Pricing rule"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='main']" position="after">
        <page id="calculators" string="Main"
            states="{'invisible' : Eval('config_kind') == 'simple'}">
            <field name="calculators" yfill="1" yexpand="1" xexpand="1"
                colspan="4" mode="form, tree"/>
        </page>
    </xpath>
    <xpath expr="/form/notebook/page[@id='main']" position="replace_attributes">
        <page id="main" states="{'invisible': True}"/>
    </xpath>
    <xpath expr="/form/group[@id='templating']" position="after">
        <newline/>
        <group id="config_kind">
            <label name="config_kind" xfill="1"/>
            <field name="config_kind" xexpand="1"/>
            <label name="frequency"/>
            <field name="frequency" xexpand="1"/>
        </group>
        <newline/>
        <group id="basic" states="{'invisible': Eval('config_kind') == 'rule'}">
            <label name="basic_price"/>
            <field name="basic_price" xexpand="1"/>
            <newline/>
            <label name="basic_tax"/>
            <field name="basic_tax" xexpand="1"/>
        </group>
    </xpath>
</data>
