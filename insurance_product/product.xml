        <record model="ir.action.act_window" id="act_dyn_selection_form">
            <field name="name">Benefit Kind</field>
            <field name="res_model">coop.dyn_selection</field>
            <field name="domain">[("my_model_name", "=", "ins_product.benefit_manager.kind")]</field>
        </record>

        <record model="ir.action.act_window.view" id="act_dyn_selection_tree_view">
            <field name="sequence" eval="10" />
            <field name="view" ref="coop_utils.dyn_selection_view_tree" />
            <field name="act_window" ref="act_dyn_selection_form" />
        </record>

        <record model="ir.action.act_window.view" id="act_dyn_selection_form_view">
            <field name="sequence" eval="20" />
            <field name="view" ref="coop_utils.dyn_selection_view_form" />
            <field name="act_window" ref="act_dyn_selection_form" />
        </record>

        <menuitem parent="menu_product_configuration" sequence="10" id="menu_dyn_selection_form"
            icon="tryton-list" action="act_dyn_selection_form" />
            -->
    </data>
</tryton>
