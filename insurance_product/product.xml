<?xml version="1.0"?>
<tryton>
    <data>
        <!--  ******************************************* 
              **************    Offered    **************
              *******************************************-->
        <record model="ir.ui.view" id="offered_view_tree">
            <field name="model">ins_product.offered</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Offered">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                </tree>
                ]]>
            </field>
        </record>
        <!-- form view -->
        <record model="ir.ui.view" id="offered_view_form">
            <field name="model">ins_product.offered</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Offered">
                    <label name="code" xalign="0"/>
                    <field name="code"/>
                    <label name="name" xalign="0"/>
                    <field name="name"/>
                    <newline/>
                    <label name="start_date" xalign="0"/>
                    <field name="start_date"/>
                    <label name="end_date" xalign="0"/>
                    <field name="end_date"/>
                    <label name="template"/>
                    <field name="template"/>
                    <notebook>
                        <page string="Managers" id="managers">
                            <label name="eligibility_mgr"/>
                            <field name="eligibility_mgr"/>
                            <label name="pricing_mgr"/>
                            <field name="pricing_mgr"/>
                        </page>
                    </notebook>
                </form>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              **************    Product    **************
              *******************************************-->
    
        <!-- Product -->
        <!-- Application Entry point -->
        <menuitem name="Laboratory" id="menu_product" sequence="10" />

        <!-- form view -->
        <record model="ir.ui.view" id="product_view_form">
            <field name="model">ins_product.product</field>
            <field name="type">form</field>
            <field name="inherit" ref="offered_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                <xpath expr="/form/notebook" position="inside">
                    <page string="Options" id="option">
                        <field name="options"/>
                    </page>
                </xpath>
                </data>
                ]]>
            </field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_product_form">
            <field name="name">Products</field>
            <field name="res_model">ins_product.product</field>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_product_form_view1">
            <field name="sequence" eval="10" />
            <field name="view" ref="offered_view_tree" />
            <field name="act_window" ref="act_product_form" />
        </record>

        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_product_form_view2">
            <field name="sequence" eval="20" />
            <field name="view" ref="product_view_form" />
            <field name="act_window" ref="act_product_form" />
        </record>

        <menuitem parent="menu_product" sequence="1" id="menu_product_form"
            icon="tryton-list" action="act_product_form" />
        <!-- /Product -->

        <!--  ******************************************* 
              **************    Coverage    **************
              *******************************************-->
        <!-- form view -->
        <record model="ir.ui.view" id="coverage_view_form">
            <field name="model">ins_product.coverage</field>
            <field name="type">form</field>
            <field name="inherit" ref="offered_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                <xpath expr="/form/field[@name=&quot;end_date&quot;]" position="after">
                    <label name="insurer" xalign="0"/>
                    <field name="insurer" widget="selection"/>
                </xpath>
                </data>
                ]]>
            </field>
        </record>
        
        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_coverage_form">
            <field name="name">Coverages</field>
            <field name="res_model">ins_product.coverage</field>
        </record>

        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_coverage_form_view1">
            <field name="sequence" eval="10" />
            <field name="view" ref="offered_view_tree" />
            <field name="act_window" ref="act_coverage_form" />
        </record>

        <!-- View for the edition or the Form of coverage -->
        <record model="ir.action.act_window.view" id="act_coverage_form_view2">
            <field name="sequence" eval="20" />
            <field name="view" ref="coverage_view_form" />
            <field name="act_window" ref="act_coverage_form" />
        </record>

        <menuitem parent="menu_product" sequence="2" id="menu_coverage_form"
            icon="tryton-list" action="act_coverage_form" />
        <!--/Coverage -->
        
        <!--  ******************************************* 
              ********    GenericBusinessRule    ********
              *******************************************-->
        <!-- GenericBusinessRule -->
        <!-- form view -->
        <record model="ir.ui.view" id="genericbusinessrule_view_form">
            <field name="model">ins_product.generic_business_rule</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                         <![CDATA[
                             <form string="Generic Business Rule" col="4">
                                <label name="kind"/>
                                <field name="kind"/>
                                <newline/>
                                <label name="start_date"/>
                                <field name="start_date"/>
                                <label name="end_date"/>
                                <field name="end_date"/>
                                <label name="is_current"/>
                                <field name="is_current"/>
                                <newline/>
                                <group id ="Rules" colspan="4" yexpand="1" yfill="1" >
                                <field name="pricing_rule" mode="form"/>
                                <field name="eligibilty_rule" mode="form"/>
                                </group>
                             </form>
                         ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="genericbusinessrule_view_tree">
            <field name="model">ins_product.generic_business_rule</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                         <![CDATA[
                             <tree string="Generic Business Rule">
                                <field name="is_current"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                             </tree>
                         ]]>
            </field>
        </record>
        <!--  ******************************************* 
              ********    BusinessRuleManager    ********
              *******************************************-->
        <record model="ir.ui.view" id="businessrulemanager_view_form">
            <field name="model">ins_product.business_rule_manager</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                         <![CDATA[
                             <form string="Business Rule Manager">
                                <label name="template"/>
                                <field name="template"/>
                                <newline/>
                                <field name="business_rules" colspan="4"/>
                             </form>
                         ]]>
            </field>
        </record>
        <!--  ******************************************* 
              ********    BusinessRuleRoot    ********
              *******************************************-->
        <record model="ir.ui.view" id="businessruleroot_view_form">
            <field name="model">ins_product.business_rule_root</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                         <![CDATA[
                             <form string="Business Rule Root">
                                <label name="template"/>
                                <field name="template"/>
                                <label name="generic_rule"/>
                                <field name="generic_rule"/>
                             </form>
                         ]]>
            </field>
        </record>
        <!--  ******************************************* 
              ********    PricingRule    ********
              *******************************************-->
        <record model="ir.ui.view" id="pricingrule_view_form">
            <field name="model">ins_product.pricing_rule</field>
            <field name="type">form</field>
            <field name="inherit" ref="businessruleroot_view_form"/>
            <field name="arch" type="xml">
                         <![CDATA[
                         <data>
		                     <xpath expr="/form/field[@name=&quot;template&quot;]"
                              position="after">
                                <label name="price"/>
                                <field name="price"/>
		                     </xpath>
                         </data>
                         ]]>
            </field>
        </record>
        
        <!--  ******************************************* 
              ********    EligibilityRule    ********
              *******************************************-->
        <record model="ir.ui.view" id="eligibilityrule_view_form">
            <field name="model">ins_product.eligibility_rule</field>
            <field name="type">form</field>
            <field name="inherit" ref="businessruleroot_view_form"/>
            <field name="arch" type="xml">
                         <![CDATA[
                         <data>
                             <xpath expr="/form/field[@name=&quot;template&quot;]"
                              position="after">
                                <label name="is_eligible"/>
                                <field name="is_eligible"/>
                             </xpath>
                         </data>
                         ]]>
            </field>
        </record>
    </data>
</tryton>
