<?xml version="1.0"?>
<tryton>
    <data>
        <!--  ******************************************* 
              **************     Menus     **************
              *******************************************-->
        <!-- Application Entry point -->
        <menuitem name="Laboratory" id="menu_product" sequence="10" />
        <menuitem name="Configuration" parent="menu_product"
            id="menu_product_configuration" sequence="0" icon="tryton-preferences"/>

        <!-- Moving existing Entry Points -->
        <menuitem parent="menu_product" name="Rule Engine"
            id="rule_engine.menu_rule_engine" sequence="100"/>


        <!--  ******************************************* 
              **************    Offered    **************
              *******************************************-->
        <record model="ir.ui.view" id="offered_view_tree">
            <field name="model">ins_product.offered</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Offered">
                        <field name="code"/>
                         <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="offered_view_form">
            <field name="model">ins_product.offered</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Offered">
                    <label name="code" xalign="0"/>
                    <field name="code"/>
                    <label name="name" xalign="0"/>
                    <field name="name"/>
                    <newline/>
                    <label name="start_date" xalign="0"/>
                    <field name="start_date"/>
                    <label name="end_date" xalign="0"/>
                    <field name="end_date"/>
                    <newline/>
                    <group id="templating" colspan="4">
                        <label name="template" xalign="0"/>
                        <field name="template" xexpand="1"/>
                        <field name="template_behaviour"/>
                    </group>
                    <notebook>
                        <page string="Summary" id="summary">
                            <field name="description" widget="richtext"
                                colspan="4"/>
                            <field name="summary" widget="richtext"
                                colspan="4"/>
                        </page>
                        <page string="Managers" id="managers">
                            <notebook>
                                <page string="Eligibilty" id="eligibility">
                                    <field name="eligibility_mgr" colspan="4" mode="form"/>
                                </page>
                                <page string="Pricing" id="pricing">
                                    <field name="pricing_mgr" colspan="4" mode="form"/>
                                </page>
                                <page string="Dynamic Data" id="dynamic_data">
                                    <field name="dynamic_data_manager" mode="form"/>
                                </page>
                                <page string="Clause" id="clause">
                                    <field name="clause_mgr" colspan="4" mode="form"/>
                                </page>
                            </notebook>
                        </page>
                        <page string="Administration" id="admin">
                        </page>
                        <page string="Dynamic Data" id="dynamic_data">
                            <field name="offered_dynamic_data"/>
                        </page>
                    </notebook>
                </form>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              **************    Product    **************
              *******************************************-->
        <record model="ir.ui.view" id="product_view_form">
            <field name="model">ins_product.product</field>
            <field name="type">form</field>
            <field name="inherit" ref="offered_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                <xpath expr="/form" position="replace_attributes">
                    <form string="Product"/>
                </xpath>
                <xpath expr="/form/notebook/page[@id=&quot;managers&quot;]" position="before">
                    <page string="Options" id="option">
                        <field name="options"/>
                    </page>
                </xpath>
                <xpath expr="/form/notebook/page[@id=&quot;admin&quot;]"
                        position="inside">
                    <label name="contract_generator" xalign="0"/>
                    <field name="contract_generator"/>
                    <label name="currency"/>
                    <field name="currency"/>
                </xpath>
                </data>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="product_view_tree">
            <field name="model">ins_product.product</field>
            <field name="type">tree</field>
            <field name="inherit" ref="offered_view_tree"/>
            <field name="arch" type="xml"/>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_product_form">
            <field name="name">Products</field>
            <field name="res_model">ins_product.product</field>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_product_form_view1">
            <field name="sequence" eval="10" />
            <field name="view" ref="product_view_tree" />
            <field name="act_window" ref="act_product_form" />
        </record>

        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_product_form_view2">
            <field name="sequence" eval="20" />
            <field name="view" ref="product_view_form" />
            <field name="act_window" ref="act_product_form" />
        </record>

        <menuitem parent="menu_product" sequence="1" id="menu_product_form"
            icon="tryton-list" action="act_product_form" />

    <!--################################################################-->
    <!--                    Contract Number Generator                   -->
    <!--################################################################-->

        <record model="ir.sequence.type" id="sequence_type_contract_number">
            <field name="name">Contract Number</field>
            <field name="code">ins_product.product</field>
        </record>

        <record model="ir.sequence.type-res.group"
            id="sequence_type_contract_number_group_admin">
            <field name="sequence_type" ref="sequence_type_contract_number"/>
            <field name="group" ref="res.group_admin"/>
        </record>

