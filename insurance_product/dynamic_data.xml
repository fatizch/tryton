<?xml version="1.0"?>
<tryton>
    <data>
    <!--################################################################-->
    <!--                       Complementary Data Manager                     -->
    <!--################################################################-->

        <record model="ir.ui.view" id="dynamic_data_view_form">
            <field name="model">ins_product.dynamic_data_manager</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Complementary Data Manager">
                        <field name="specific_dynamic" colspan="2"/>
                        <field name="shared_dynamic" colspan="2"/>
                    </form>
                ]]>
            </field>
        </record>
    <!--################################################################-->
    <!--                       Coop Schema Elements                     -->
    <!--################################################################-->

        <record model="ir.ui.view" id="schema_element_view_tree">
            <field name="model">ins_product.schema_element</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Complementary Data Descriptors">
                        <field name="is_shared"/>
                        <field name="name"/>
                        <field name="type_"/>
                        <field name="string"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="schema_element_view_form">
            <field name="model">ins_product.schema_element</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Complementary Data Desciptor">
                        <group id="names">
                            <label name="name"/>
                            <field name="name"/>
                            <label name="string"/>
                            <field name="string"/>
                        </group>
                        <newline/>
                        <group id="dates">
                            <label name="start_date"/>
                            <field name="start_date"/>
                            <label name="end_date"/>
                            <field name="end_date"/>
                        </group>
                        <newline/>
                        <group id="types">
                            <label name="kind"/>
                            <field name="kind"/>
                            <newline/>
                            <label name="type_"/>
                            <field name="type_"/>
                            <field name="selection" colspan="4"/>
                        </group>
                        <newline/>
                        <group id="defaults">
                            <label name="with_default_value"/>
                            <field name="with_default_value"/>
                            <field name="default_value_boolean"/>
                            <field name="default_value_char"/>
                            <field name="default_value_selection"/>
                        </group>
                    </form>
                ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_model_coop_schema">
            <field name="name">Complementary Data Schema Elements</field>
            <field name="res_model">ins_product.schema_element</field>
            <field name="domain">[("kind", "!=", "product")]</field>
        </record>
        <record model="ir.action.act_window.view" id="act_model_coop_schema_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="schema_element_view_tree"/>
            <field name="act_window" ref="act_model_coop_schema"/>
        </record>
        <record model="ir.action.act_window.view" id="act_model_coop_schema_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="schema_element_view_form"/>
            <field name="act_window" ref="act_model_coop_schema"/>
        </record>
        <menuitem parent="menu_product_configuration" action="act_model_coop_schema" id="menu_model_coop_schema"/>
        <record model="ir.action.act_window" id="act_model_coop_schema_product">
            <field name="name">Complementary Data Schema Elements for Offered</field>
            <field name="res_model">ins_product.schema_element</field>
            <field name="domain">[("kind", "=", "product")]</field>
        </record>
        <record model="ir.action.act_window.view" id="act_model_coop_schema_tree_product">
            <field name="sequence" eval="10"/>
            <field name="view" ref="schema_element_view_tree"/>
            <field name="act_window" ref="act_model_coop_schema_product"/>
        </record>
        <record model="ir.action.act_window.view" id="act_model_coop_schema_form_product">
            <field name="sequence" eval="20"/>
            <field name="view" ref="schema_element_view_form"/>
            <field name="act_window" ref="act_model_coop_schema_product"/>
        </record>
        <menuitem parent="menu_product_configuration" action="act_model_coop_schema_product" id="menu_model_coop_schema_product"/>
    </data>
</tryton>
