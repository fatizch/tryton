<?xml version="1.0"?>
<tryton>
    <data>
        <!--  ******************************************* 
              ************  Business Family  ************
              *******************************************-->

        <record model="ir.ui.view" id="business_family_view_tree">
            <field name="model">ins_product_utils.business_family</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Business Families">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="is_default"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="business_family_view_form">
            <field name="model">ins_product_utils.business_family</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Business Family">
                    <label name="name" xalign="0"/>
                    <field name="name"/>
                    <label name="code" xalign="0"/>
                    <field name="code"/>
                    <newline/>
                    <label name="contract_extension" xalign="0"/>
                    <field name="contract_extension"/>
                    <newline/>
                    <label name="is_default" xalign="0"/>
                    <field name="is_default"/>
                </form>
                ]]>
            </field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_business_family_form">
            <field name="name">Business Families</field>
            <field name="res_model">ins_product_utils.business_family</field>
        </record>

        <!-- View that connects the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_business_family_form_view1">
            <field name="sequence" eval="10" />
            <field name="view" ref="business_family_view_tree" />
            <field name="act_window" ref="act_business_family_form" />
        </record>

        <!-- View for the edition or the Form of product -->
        <record model="ir.action.act_window.view" id="act_business_family_form_view2">
            <field name="sequence" eval="20" />
            <field name="view" ref="business_family_view_form" />
            <field name="act_window" ref="act_business_family_form" />
        </record>

        <!--  ******************************************* 
              ****************    Menu    ***************
              *******************************************-->

        <menuitem name="Business Families" parent="menu_product"
            id="menu_product_business_families" sequence="40" icon="tryton-preferences"
            action="act_business_family_form"/>
    </data>
</tryton>
