<?xml version="1.0"?>
<tryton>
    <data>
       <!-- businessrulemanager -->
        <!-- Tree view -->
        <record model="ir.ui.view" id="businessrulemanager_view_tree">
            <field name="model">ins_product.businessrulemanager</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                        <![CDATA[
                            <tree string="businessrulemanager">
                                <field name="code"/>
                                <field name="name"/>
                            </tree>
                        ]]>
            </field>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="businessrulemanager_view_form">
            <field name="model">ins_product.businessrulemanager</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                         <![CDATA[
                             <form string="Business Rule Manager">
                                 <label name="code"/>
                                 <field name="code"/>
                                 <label name="name"/>
                                 <field name="name"/>
                                 <label name="belongs_to"/>
                                 <field name="belongs_to"/>
                                 <label name="rule_kind"/>
                                 <field name="rule_kind"/>
                                  <notebook colspan="6">
                                    <page string="General" id="general">
                                        <field name="business_rules"/>
                                    </page>
                                </notebook>
                             </form>
                         ]]>
            </field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_businessrulemanager_form">
            <field name="name">Business Rule Manager</field>
            <field name="res_model">ins_product.businessrulemanager</field>
        </record>

        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_businessrulemanager_form_view1">
            <field name="sequence" eval="10" />
            <field name="view" ref="businessrulemanager_view_tree" />
            <field name="act_window" ref="act_businessrulemanager_form" />
        </record>

        <!-- View for the edition or the Form of businessrulemanager -->
        <record model="ir.action.act_window.view" id="act_businessrulemanager_form_view2">
            <field name="sequence" eval="20" />
            <field name="view" ref="businessrulemanager_view_form" />
            <field name="act_window" ref="act_businessrulemanager_form" />
        </record>


        <!--/businessrulemanager -->

        <!-- businessrule -->

        <!-- Tree view -->
        <record model="ir.ui.view" id="businessrule_view_tree">
            <field name="model">ins_product.businessrule</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                        <![CDATA[
                            <tree >
                                <field name="code"/>
                                <field name="name"/>
                                <field name="from_date"/>
                                <field name="is_current"/>
                            </tree>
                        ]]>
            </field>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="businessrule_view_form">
            <field name="model">ins_product.businessrule</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                         <![CDATA[
                             <form string="Business rule">
                                 <label name="code"/>
                                 <field name="code"/>
                                 <label name="name"/>
                                 <field name="name"/>
                                 <label name="from_date"/>
                                 <field name="from_date"/>
                                 <field name="is_current"/>
                                 <field name="manager"/>
                                 <newline/>
                                 <label name="extension"/>
                                 <field name="extension"/>
                                  <button name="test"
                                    string="test"
                                    type="object"/>
                             </form>
                         ]]>
            </field>
        </record>

        <!-- View for the main menu and the event -->
        <record model="ir.action.act_window" id="act_businessrule_form">
            <field name="name">Business Rule</field>
            <field name="res_model">ins_product.businessrule</field>
        </record>

        <!-- View that connect the form in the tree with the specification -->
        <record model="ir.action.act_window.view" id="act_businessrule_form_view1">
            <field name="sequence" eval="10" />
            <field name="view" ref="businessrule_view_tree" />
            <field name="act_window" ref="act_businessrule_form" />
        </record>

        <!-- View for the edition or the Form of businessrule -->
        <record model="ir.action.act_window.view" id="act_businessrule_form_view2">
            <field name="sequence" eval="20" />
            <field name="view" ref="businessrule_view_form" />
            <field name="act_window" ref="act_businessrule_form" />
        </record>

        <!--/businessrule -->
        <!--Pricing Rule -->
        <!-- form view -->
        <record model="ir.ui.view" id="pricingrule_view_form">
            <field name="model">ins_product.pricingrule</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                        <![CDATA[
                            <form string="Pricing rule">
                                <label name="value" xalign="0"/>
                                <field name="value"/>
                            </form>
                        ]]>
            </field>
        </record>
        <!--/Pricing Rule -->
        <!--Eligibilty Rule -->
        <!-- form view -->
        <record model="ir.ui.view" id="eligibilityrule_view_form">
            <field name="model">ins_product.eligibilityrule</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                        <![CDATA[
                            <form string="Eligibilty rule2">
                                <label name="age_min" xalign="0"/>
                                <field name="age_min"/>
                                <label name="age_max" xalign="0"/>
                                <field name="age_max"/>
                                <label name="age3" xalign="0"/>
                                <field name="age3"/>
                            </form>
                        ]]>
            </field>
        </record>
        <!--/Eligibilty Rule -->
    </data>
</tryton>