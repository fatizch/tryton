<?xml version="1.0"?>
<tryton>
    <data>
        <!--  
            <menuitem name="Table" id="menu_table"/>
        -->
        <record model="ir.ui.view" id="table_definition_form_view">
            <field name="model">table.table_def</field>
            <field name="type">form</field>
            <field name="name">table_definition_form</field>
        </record>

        <record model="ir.ui.view" id="table_definition_list_view">
            <field name="model">table.table_def</field>
            <field name="type">tree</field>
            <field name="name">table_definition_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_table_definition_form">
            <field name="name">Tables</field>
            <field name="res_model">table.table_def</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_table_definition_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="table_definition_list_view"/>
            <field name="act_window" ref="act_table_definition_form"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_table_definition_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="table_definition_form_view"/>
            <field name="act_window" ref="act_table_definition_form"/>
        </record>

        <menuitem action="act_table_definition_form"
            sequence="10"
            id="menu_table_defintion_form"/>

        <record model="ir.ui.view" id="table_definition_dimension_form_view">
            <field name="model">table.table_dimension</field>
            <field name="type">form</field>
            <field name="name">table_dimension_form</field>
        </record>

        <record model="ir.ui.view" id="table_definition_dimension_list_view">
            <field name="model">table.table_dimension</field>
            <field name="type">tree</field>
            <field name="name">table_dimension_tree</field>
        </record>

        <record model="ir.ui.view" id="cell_form_view">
            <field name="model">table.table_cell</field>
            <field name="type">form</field>
            <field name="name">cell_form</field>
        </record>

        <record model="ir.ui.view" id="cell_list_view">
            <field name="model">table.table_cell</field>
            <field name="type">tree</field>
            <field name="name">cell_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_cell_form">
            <field name="name">Cells</field>
            <field name="res_model">table.table_cell</field>
        </record>

        <record model="ir.action.act_window.view"
            id="act_cell_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="cell_list_view"/>
            <field name="act_window" ref="act_cell_form"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_cell_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="cell_form_view"/>
            <field name="act_window" ref="act_cell_form"/>
        </record>

        <!--  
        <menuitem parent="menu_table"
            action="act_cell_form"
            sequence="20"
            id="menu_cell_form"/>
        -->

        <record model="ir.action.act_window" id="act_cell_relate_form">
            <field name="name">Cells</field>
            <field name="res_model">table.table_cell</field>
            <field name="domain">[('definition', '=', Eval('active_id'))]</field>
            <field name="context">{'table.table_def': Eval('active_id')}</field>
        </record>
        <record model="ir.action.keyword"
            id="act_table_relate_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">table.table_def,-1</field>
            <field name="action" ref="act_cell_relate_form"/>
        </record>

        <record model="ir.ui.view"
            id="table_2d_open_ask_dimensions_form_view">
            <field name="model">table.2d.open.ask_dimensions</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Dimensions" col="2">
                    <label name="dimension3"/>
                    <field name="dimension3" widget="selection"/>
                    <label name="dimension4"/>
                    <field name="dimension4" widget="selection"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.action.wizard" id="act_table_2d_open">
            <field name="name">Table 2D</field>
            <field name="wiz_name">table.2d.open</field>
        </record>
        <record model="ir.action.keyword"
            id="act_table_2d_open_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">table.table_def,-1</field>
            <field name="action" ref="act_table_2d_open"/>
        </record>

        <record model="ir.action.act_window"
            id="act_table_2d_relate_form">
            <field name="name">Table 2D</field>
            <field name="res_model">table.2d</field>
            <field name="window_name" eval="False"/>
            <field name="context">{'table.table_def': Eval('active_id'), 'dimension3': Eval('dimension3'), 'dimension4': Eval('dimension4')}</field>
        </record>

        <record model="ir.model.access" id="access_table_2d">
            <field name="model" search="[('model', '=', 'table.2d')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
    </data>
</tryton>
