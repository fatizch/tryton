<?xml version="1.0"?>
<tryton>
    <data>

        <!--  ******************************************* 
              *********   Table of table   ***********
              *******************************************-->
        <record model="ir.ui.view" id="table_of_table_view_tree">
            <field name="model">coop.table_of_table</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree>
                        <field name="name"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="table_of_table_view_tree_editable">
            <field name="model">coop.table_of_table</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree editable="bottom">
                        <field name="name"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="table_of_table_view_form">
            <field name="model">coop.table_of_table</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form col="8">
                        <label name="key"/>
                        <field name="key"/>
                        <label name="name"/>
                        <field name="name" colspan="5"/>
                        <newline/>
                        <field name="childs" colspan="8"
                            view_ids="coop_utils.table_of_table_view_tree_editable"/>
                    </form>
                ]]>
            </field>
        </record>
        <!--  ******************************************* 
              *********   Dynamic Selection   ***********
              *******************************************-->
        <!-- Dynamic Selection tree view -->
        <record model="ir.ui.view" id="dyn_selection_view_tree">
            <field name="model">coop.dyn_selection</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                        <![CDATA[
                            <tree>
                                <field name="key"/>
                                <field name="name"/>
                            </tree>
                        ]]>
            </field>
        </record>

        <!-- Dynamic Selection form view -->
        <record model="ir.ui.view" id="dyn_selection_view_form">
            <field name="model">coop.dyn_selection</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Dynamic Selection">
                        <label name="key"/>
                        <field name="key"/>
                        <label name="name"/>
                        <field name="name"/>
                     </form>
                ]]>
            </field>
        </record>
    </data>
</tryton>
