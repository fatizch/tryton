<?xml version="1.0"?>
<tryton>
	<data>
		<!-- Process -->
		<!-- Application Entry point :
		Creates a new Entry Point in the left part of the application.
			Name => entry point label
			id => string used for reference to the entry point
			sequence => is used to sort the elements of the menu -->
		<menuitem name="Process Lab" id="menu_process" sequence="50" />

		<!-- Tree view -->
		<record model="ir.ui.view" id="process_view_tree">
			<field name="model">ins_process.process_desc</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">                 
					    <![CDATA[                 
						    <tree string="Process Descriptor">
							    <field name="name"/>
							    <field name="process_model"/>
						    </tree>                 
					    ]]>
			</field>
		</record>

		<!-- form view -->
		<record model="ir.ui.view" id="process_view_form">
			<field name="model">ins_process.process_desc</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
					     <![CDATA[
						    <form string="process" col="4">
						        <label name="name" colspan="1"/>
						        <field name="name" colspan="3"/>
						        <newline/>
						        <label name="process_model" colspan="1"/>
						        <field name="process_model" colspan="3"/>
						        <newline/>
						        <field name="steps" colspan="4"/>
						    </form>               ]]>
			</field>
		</record>

		<!-- View for the main menu and the event -->
		<record model="ir.action.act_window" id="act_process_form">
			<field name="name">Process</field>
			<field name="res_model">ins_process.process_desc</field>
		</record>

		<!-- View that connect the form in the tree with the specification -->
		<record model="ir.action.act_window.view" id="act_process_form_view1">
			<field name="sequence" eval="10" />
			<field name="view" ref="process_view_tree" />
			<field name="act_window" ref="act_process_form" />
		</record>

		<!-- View for the edition or the Form of process -->
		<record model="ir.action.act_window.view" id="act_process_form_view2">
			<field name="sequence" eval="20" />
			<field name="view" ref="process_view_form" />
			<field name="act_window" ref="act_process_form" />
		</record>
		
		<!-- MenuItem allows us to add a subelement to an entrypoint of the
			left part of the application (referenced by the 'parent') -->
		<menuitem parent="menu_process" sequence="1" id="menu_process_form"
			icon="tryton-list" action="act_process_form" />
		
		<!-- /Process -->
		
		<!-- Step -->
		
		<record model="ir.ui.view" id="step_view_tree">
			<field name="model">ins_process.step_desc</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">                 
					<![CDATA[                 
					<tree string="step" sequence="sequence">
					<field name="sequence"/>
					<field name="step_name"/>
					</tree>                 ]]>
			</field>
		</record>

		<!-- form view -->
		<record model="ir.ui.view" id="step_view_form">
			<field name="model">ins_process.step_desc</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
					 <![CDATA[
					 <form string="step" col="8">
					 <group id="top_group">
						 <label name="process_name"/>
						 <field name="process_name"/>
						 <newline/>
						 <label name="virtual_step"/>
						 <field name="virtual_step"/>
					 </group>
					 <newline/>
					 <group id="data_group">
						 <label name="on_product_step"/>
						 <field name="on_product_step"/>
						 <newline/>
						 <label name="step_model"/>
						 <field name="step_model"/>
						 <newline/>
						 <label name="product_step_name"/>
						 <field name="product_step_name"/>
					 </group>
					 <group string="Buttons" id="buttons_group" col="6"
					 			states="{'invisible': Bool(Eval('virtual_step'))}">
						 <label name="button_previous"/>
						 <field name="button_previous"/>
						 <label name="button_next"/>
						 <field name="button_next"/>
						 <label name="button_check"/>
						 <field name="button_check"/>
						 <label name="button_suspend"/>
						 <field name="button_suspend"/>
						 <label name="button_cancel"/>
						 <field name="button_cancel"/>
						 <label name="button_complete"/>
						 <field name="button_complete"/>
						 <newline/>
						 <label name="button_default"/>
						 <field name="button_default"/>
					 </group>
					 <newline/>
					 <field name="methods" colspan="6"/>
					 </form>               ]]>
			</field>
		</record>

		<!-- View for the main menu and the event -->
		<record model="ir.action.act_window" id="act_step_form">
			<field name="name">step</field>
			<field name="res_model">ins_process.step_desc</field>
		</record>

		<!-- View that connect the form in the tree with the specification -->
		<record model="ir.action.act_window.view" id="act_step_form_view1">
			<field name="sequence" eval="10" />
			<field name="view" ref="step_view_tree" />
			<field name="act_window" ref="act_step_form" />
		</record>

		<!-- View for the edition or the Form of step -->
		<record model="ir.action.act_window.view" id="act_step_form_view2">
			<field name="sequence" eval="21" />
			<field name="view" ref="step_view_form" />
			<field name="act_window" ref="act_step_form" />
		</record>
		
		<!-- Step -->
		
		<!-- Method -->
		
		<record model="ir.ui.view" id="step_method_view_tree">
			<field name="model">ins_process.step_method_desc</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">                 
					<![CDATA[                 
					<tree string="method step">
					<field name="name"/>
					</tree>                 ]]>
			</field>
		</record>

		<!-- form view -->
		<record model="ir.ui.view" id="step_method_view_form">
			<field name="model">ins_process.step_method_desc</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
					 <![CDATA[
					 <form string="step">
					 <label name="name"/>
					 <field name="name"/> 
					 <field name="name"/>
					 </form>               ]]>
			</field>
		</record>

		<!-- View for the main menu and the event -->
		<record model="ir.action.act_window" id="act_step_method_form">
			<field name="name">Step Method</field>
			<field name="res_model">ins_process.step_method_desc</field>
		</record>

		<!-- View that connect the form in the tree with the specification -->
		<record model="ir.action.act_window.view" id="act_step_method_form_view1">
			<field name="sequence" eval="10" />
			<field name="view" ref="step_method_view_tree" />
			<field name="act_window" ref="act_step_method_form" />
		</record>

		<!-- View for the edition or the Form of step -->
		<record model="ir.action.act_window.view" id="act_step_method_form_view2">
			<field name="sequence" eval="21" />
			<field name="view" ref="step_method_view_form" />
			<field name="act_window" ref="act_step_method_form" />
		</record>
		
		<!-- Method -->
	</data>
</tryton>
